@using Application.Queries;
@using global::Core.Entities;
@using MediatR
@inject IMediator Mediator
@inject AC.SD.Core.Services.ToastService toastService
@inject ILocalStorageService<ApplicationUser> _localStorageService
@using global::Core.Repositories.Query;
@implements IAsyncDisposable
@using global::Core.Entities.Views;
@inject NavigationManager NavigationManager


<div class="row align-items-end" style="padding: 10px;border: 1px solid #d5d4d4;">
    <div class="cw-480 ch-220" style="margin-top:10px;">
        <DxMenu CollapseItemsToHamburgerMenu="true"
                CollapseItemToIconMode="MenuCollapseItemToIconMode.Sequentially"
                DisplayMode="MenuDisplayMode.Desktop">
            <Items>
                <DxMenuItem Text="Back" IconCssClass="fas fa-reply" Click="@onBack" />
                <DxMenuItem Text="Add" IconCssClass="fa fa-add" Click="@addNew" />
                <DxMenuItem Text="Edit" IconCssClass="fa fa-pencil" Click="@addEdit" Enabled="@EditEnabled" />
                <DxMenuItem Text="Delete" IconCssClass="fa fa-remove" Click="@addDelete" Enabled="@DeleteEnabled" />
                <DxMenuItem Text="Export" IconCssClass="fa fa-file-excel" Click="@addExport" />
            </Items>
        </DxMenu>

        <DxLoadingPanel @bind-Visible="PanelVisible"
                        IsContentBlocked="true"
                        ApplyBackgroundShading="true"
                        IndicatorAreaVisible="false"
                        Text="Fetching Data...">
            <DxGrid @ref="Grid" Data="@_attributes" EditMode="GridEditMode.EditForm" ShowGroupPanel="true" ShowGroupedColumns="true" ShowSearchBox="true"
                    FilterMenuButtonDisplayMode="GridFilterMenuButtonDisplayMode.Always"
                    KeyFieldName="AttributeID"
                    ColumnResizeMode="GridColumnResizeMode.NextColumn"
                    PagerNavigationMode="PagerNavigationMode.InputBox"
                    PageSizeSelectorVisible="true"
                    PageSizeSelectorAllRowsItemVisible="true"
                    PageSizeSelectorItems="@(new int[] { 5,10,20 })"
                    PageSize="20"
                    style="height: calc(100vh - 220px);"
                    CssClass="ch-360"
                    FocusedRowEnabled="true"
                    AllowSelectRowByClick="true"
                    RowClick="OnRowclick"
                    CustomizeElement="Grid_CustomizeElement"
                    AutoExpandAllGroupRows="true"
                    SelectionMode="GridSelectionMode.Single"
                    SelectAllCheckboxMode="GridSelectAllCheckboxMode.AllPages"
                    RowDoubleClick="OnRowDoubleClick">

                <Columns>
                    <DxGridDataColumn FieldName="AttributeCompany" MinWidth="50" Caption="Company Name" />
                    <DxGridDataColumn FieldName="AttributeIsVisible" Caption="Is Visible" MinWidth="50" />
                    <DxGridDataColumn FieldName="AttributeSortBy" Caption="Sort Order By" SortIndex="0" SortOrder="GridColumnSortOrder.Ascending" MinWidth="40">
                        <CellDisplayTemplate>
                            @{
                                var item = (AttributeHeader)context.DataItem;
                            }
                            <i class="fa fa-pencil" aria-hidden="true" style="margin-right: 5px;cursor:pointer;" id=@($"flyout-overview-target-container-RenameFilename-{item.AttributeID}") onclick="@(() => OnButtonSortOrderByClick(item))" title="@item.AttributeSortBy"></i>
                            @item.AttributeSortBy
                        </CellDisplayTemplate>
                    </DxGridDataColumn>
                    <DxGridDataColumn FieldName="Description" Caption="Label" MinWidth="50" />
                    <DxGridDataColumn FieldName="ControlType" Caption="Control Type" MinWidth="50" />
                    <DxGridDataColumn FieldName="DropDownTypeId" Caption="Data Source" MinWidth="50" />
                    <DxGridDataColumn FieldName="DataSourceDisplayName" Caption="DataSource Name" MinWidth="50" />
                    <DxGridDataColumn FieldName="AttrDescription" Caption="Description" MinWidth="50" />

                </Columns>
                <TotalSummary>
                    <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="AttributeCompany" />
                </TotalSummary>
            </DxGrid>
        </DxLoadingPanel>
    </div>
</div>

<DxPopup @bind-Visible="@Blukdeletepopup"
         ShowFooter="true"
         HeaderText="Delete"
         ShowCloseButton="true"
         Closed="EulaPopupClosed"
         Width="300px">
    <BodyContentTemplate>
        <p>
            Do you want to delete
        </p>
    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">
        <DxButton style="margin-right: 10px;" RenderStyle="ButtonRenderStyle.Primary" Text="NO" Click="Context.CloseCallback" />
        <DxButton RenderStyle="ButtonRenderStyle.Secondary" Text="Yes" Click="((e) => bulkDelete())" />
    </FooterContentTemplate>
</DxPopup>
<DxPopup @bind-Visible="@AddPopup"
         ShowFooter="false"
         HeaderText="Add Sub Controls"
         Closed="EulaPopupClosed"
         CloseOnOutsideClick="false"
         MinWidth="300" MinHeight="200" MaxWidth="1000px" MaxHeight="800"
         CloseOnEscape="false" ShowCloseButton="true">
    <BodyContentTemplate>
        <AttributeSetupSubForm @ref="refAttributeSetupSubForm" RevokeBack="CloseSubFormPopup" _selectedItems="@_selectedItems" AttributeGroupCheckBoxId="@AttributeGroupCheckBoxId" Type="@Type" SubAttributeDetailId="@SubAttributeDetailId" SubAttributeId="@SubAttributeId"></AttributeSetupSubForm>

    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">
        <DxButton RenderStyle="ButtonRenderStyle.Secondary" Text="Close" Click="@(() => CloseSubFormPopup())" />
    </FooterContentTemplate>
</DxPopup>
<DxFlyout @bind-IsOpen=IsSortOrderByOpen
          PositionTarget=@($"#flyout-overview-target-container-RenameFilename-{_selectedItems?.AttributeID}")
          RestrictionTarget="#Navigation-Flyout-Customization"
          AnimationType="FlyoutAnimationType.Fade"
          HeaderVisible="true"
          HeaderText="Update Sort Order"
          FooterVisible="true"
          FooterCssClass="custom-flyout-footer"
          CloseOnOutsideClick="false"
          Width="max(25vw, 550px)"
          PreventCloseOnPositionTargetClick="true">
    <BodyContentTemplate Context="PopupContext">
        <DxFormLayout CssClass="w-100">
            <DxFormLayoutItem Caption="Sort Order" ColSpanMd="6">
                <DxComboBox Data="@sortOrderList"
                            @bind-Value="@_selectedDynamicFormSectionItems.AttributeSortBy"
                            TextFieldName="Text"
                            ValueFieldName="Value" ShowValidationIcon="true" />
            </DxFormLayoutItem>
        </DxFormLayout>
    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">
        <DxButton style="margin-right: 10px;" RenderStyle="ButtonRenderStyle.Primary" Text="Close" Click=@(()=> IsSortOrderByOpen = false) />
        <DxButton RenderStyle="ButtonRenderStyle.Success" Text="Update" Click=@(()=> OnUpdateSortOrderBy()) />


    </FooterContentTemplate>
</DxFlyout>
@code {
    private AttributeSetupSubForm refAttributeSetupSubForm{ get; set; }
    [Parameter]
    public long? SubAttributeDetailId { get; set; }
    [Parameter]
    public string? Type { get; set; }
    [Parameter]
    public long? SubAttributeId { get; set; }
    [Parameter]
    public Action RevokeBack { get; set; }
    [Parameter]
    public long? AttributeGroupCheckBoxId{ get; set; }
    IGrid? Grid { get; set; }
    bool PanelVisible { get; set; }
    bool DeleteEnabled { get; set; } = false; bool IsSortOrderByOpen { get; set; } = false;
    bool EditEnabled { get; set; } = false;
    bool AddPopup { get; set; } = false;
    bool RegEnabled { get; set; } = false;
    bool isMultipleEnabled { get; set; } = false;
    bool Blukdeletepopup { get; set; } = false;
    bool IsCheckBoxEnabled { get; set; } = false;
    private AttributeHeader _selectedItems;
    private List<AttributeHeader>? _attributes;
    public ApplicationUser? applicationUser { get; private set; }
    private List<DynamicFormSectionSortOrder> sortOrderList { get; set; }
    AttributeHeader _selectedDynamicFormSectionItems = new AttributeHeader();
    protected override async Task OnInitializedAsync()
    {

        applicationUser = await _localStorageService.GetItem<ApplicationUser>("user");
        await loadData();
    }
    void Grid_CustomizeElement(GridCustomizeElementEventArgs e)
    {
        if (e.ElementType == GridElementType.DataRow && e.VisibleIndex % 2 == 1)
        {
            e.CssClass = "alt-item";
        }

    }
    void CloseSubFormPopup()
    {
        AddPopup = false;
        InvokeAsync(loadData);
        StateHasChanged();
    }
    void onBack()
    {
        clearData();
        RevokeBack?.Invoke();
    }

    void OnRowDoubleClick(GridRowClickEventArgs e)
    {
        AddPopup = true;
        StateHasChanged();
    }
    void OnRowclick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "AttributeID");
        _selectedItems = _attributes.FirstOrDefault(f => f.AttributeID == (long?)UniqueId);
        loadSelectedItems();
    }
    void loadSelectedItems()
    {

        EditEnabled = false; DeleteEnabled = false; IsCheckBoxEnabled = false;
        if (_selectedItems != null)
        {
            EditEnabled = true; DeleteEnabled = true;
            if (_selectedItems.ControlTypeId == 2710)
            {
                IsCheckBoxEnabled = true;
            }
            if (_selectedItems.FormUsedCount > 0)
            {
                // DeleteEnabled = false;
            }
        }
        StateHasChanged();
    }
    async Task loadData()
    {
        try
        {
            PanelVisible = true;
            if (Type == "GroupCheckBox")
            {
                _attributes = await Mediator.Send(new GetAllAttributeNameHeader(true, Type,AttributeGroupCheckBoxId));
            }
            else
            {
                _attributes = await Mediator.Send(new GetAllAttributeNameHeader(true, Type, Type == "SubAttributeDetailID" ? SubAttributeDetailId : SubAttributeId));
            }
            if (_attributes != null && _attributes.Count > 0)
            {
                _selectedItems = _attributes.FirstOrDefault();
                Grid.SetFocusedRowIndex(0);
                loadSelectedItems();
                PanelVisible = false;
            }
            else
            {
                PanelVisible = false;
            }
            StateHasChanged();
        }
        catch (Exception ex)
        {

        }
    }
    void addEdit()
    {
        AddPopup = true;
        StateHasChanged();
    }
    void addNew()
    {
        _selectedItems = null;
        AddPopup = true;
        StateHasChanged();

    }
    void addDelete()
    {
        Blukdeletepopup = true;
    }
    void EulaPopupClosed(PopupClosedEventArgs args)
    {
        AddPopup = false;
        InvokeAsync(loadData);
        Blukdeletepopup = false;
        StateHasChanged();
    }
    async Task bulkDelete()
    {
        try
        {
            var request = new DeleteAttributeHeader(_selectedItems);
            await Mediator.Send(request);
            Blukdeletepopup = false;
            toastService.ShowToast("Attribute have been Deleted successully.", AC.SD.Core.Services.ToastLevel.Success);
            await loadData();
        }
        catch (Exception eq)
        {
            Blukdeletepopup = false;
            toastService.ShowToast("You Must Delete ValueID.", AC.SD.Core.Services.ToastLevel.Error);
        }
    }
    void OnButtonSortOrderByClick(AttributeHeader dynamicFormSection)
    {
        _selectedDynamicFormSectionItems = new AttributeHeader();
        _selectedDynamicFormSectionItems.AttributeSortBy = dynamicFormSection.AttributeSortBy;
        sortOrderList = new List<DynamicFormSectionSortOrder>();
        IsSortOrderByOpen = true;
        if (_attributes != null && _attributes.Count > 0)
        {
            if (dynamicFormSection.AttributeSortBy > 0)
            {
                var count = _attributes.Where(w => w.AttributeSortBy > 0).Count();
                if (count > 0)
                {
                    for (int i = 1; i <= count; i++)
                    {
                        DynamicFormSectionSortOrder dynamicFormSectionSortOrder = new DynamicFormSectionSortOrder();
                        dynamicFormSectionSortOrder.Text = i.ToString();
                        dynamicFormSectionSortOrder.Value = i;
                        sortOrderList.Add(dynamicFormSectionSortOrder);
                    }
                }
            }
            else
            {
                var last = _attributes.Where(w => w.AttributeSortBy > 0).OrderByDescending(o => o.AttributeSortBy).FirstOrDefault()?.AttributeSortBy;
                var num = last > 0 ? (last + 1) : 1;
                DynamicFormSectionSortOrder dynamicFormSectionSortOrder = new DynamicFormSectionSortOrder();
                dynamicFormSectionSortOrder.Text = num.ToString();
                dynamicFormSectionSortOrder.Value = num;
                sortOrderList.Add(dynamicFormSectionSortOrder);
                _selectedDynamicFormSectionItems.AttributeSortBy = num;
            }
        }

        _selectedDynamicFormSectionItems.ModifiedByUserID = applicationUser.UserID;
        _selectedDynamicFormSectionItems.ModifiedDate = DateTime.Now;
        _selectedDynamicFormSectionItems.AttributeID = dynamicFormSection.AttributeID;
        _selectedDynamicFormSectionItems.SubAttributeId = dynamicFormSection.SubAttributeId;
        _selectedDynamicFormSectionItems.SubAttributeDetailId = dynamicFormSection.SubAttributeDetailId;
        _selectedDynamicFormSectionItems.SortOrderAnotherBy = dynamicFormSection.AttributeSortBy;

        StateHasChanged();
    }
    async Task OnUpdateSortOrderBy()
    {
        await Mediator.Send(new UpdateAttributeHeaderSortOrder(_selectedDynamicFormSectionItems));
        await loadData();
        Grid.SortBy("AttributeSortBy", GridColumnSortOrder.Ascending, 0);
        toastService.ShowToast("Record Updated Successfully", AC.SD.Core.Services.ToastLevel.Success);
        IsSortOrderByOpen = false;
    }
    public void clearData()
    {
        refAttributeSetupSubForm?.DisposeAsync();
        _selectedItems = null;
        _attributes?.Clear();
        sortOrderList?.Clear();
        _selectedDynamicFormSectionItems = new AttributeHeader();
    }
    public async ValueTask DisposeAsync()
    {
       // System.GC.Collect();
        clearData();
        //GC.SuppressFinalize(this);
    }
    async Task addExport()
    {
        await Grid.ExportToXlsxAsync("Attribute Master", new GridXlExportOptions()
        {
        });
    }
}