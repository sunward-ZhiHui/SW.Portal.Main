@using Application.Commands;
@using Application.Queries;
@using Application.Response;
@using MediatR
@using global::Core.Entities;
@using global::Core.Entities.Views;
@inject IMediator Mediator
@using DevExpress.Export
@using global::Core.Repositories.Query;
@inject IJSRuntime jsRuntime;
@inject AC.SD.Core.Services.ToastService toastService
@inject ILocalStorageService<ApplicationUser> _localStorageService
@implements IAsyncDisposable
@inject NavigationManager NavigationManager
<DxLoadingPanel @bind-Visible="PanelVisibleApproval"
                IsContentBlocked="true"
                ApplyBackgroundShading="true"
                IndicatorAreaVisible="false"
                Text="Fetching Data...">
    <DxGrid @ref="Grid7" Data="@_dynamicFormApprovalData"
            ShowGroupPanel="true"
            ShowGroupedColumns="true"
            ShowSearchBox="true"
            FilterMenuButtonDisplayMode="GridFilterMenuButtonDisplayMode.Always"
            ColumnResizeMode="GridColumnResizeMode.NextColumn"
            PagerNavigationMode="PagerNavigationMode.InputBox"
            KeyFieldName="Index"
            PageSizeSelectorVisible="true"
            PageSizeSelectorAllRowsItemVisible="true"
            PageSizeSelectorItems="@(new int[] { 5,10,20 })"
            PageSize="20"
            CssClass="ch-360"
            FocusedRowEnabled="true"
            FocusedRowChanged="OnRowApprovalClick"
            AllowSelectRowByClick="true"
            style="height: calc(100vh - 220px);"
            CustomizeElement="Grid_CustomizeApprovalElement"
            AutoExpandAllGroupRows="true"
            SelectionMode="GridSelectionMode.Single"
            VirtualScrollingEnabled="true"
            SelectAllCheckboxMode="GridSelectAllCheckboxMode.AllPages">
        <Columns>
            <DxGridDataColumn FieldName="Index" Caption="No" MinWidth="10" />
            @*  <DxGridDataColumn FieldName="FormType" Caption="Form Type" MinWidth="50" /> *@
            <DxGridDataColumn FieldName="DisplayName" Caption="Label Name" MinWidth="10" />
            <DxGridDataColumn FieldName="PreValue" Caption="Pre Value" MinWidth="10" />
            <DxGridDataColumn FieldName="CurrentValue" Caption="Current Value" MinWidth="10" />
            <DxGridDataColumn FieldName="IsFormDeleted" Caption="Is Deleted" MinWidth="10" />
        </Columns>
        <TotalSummary>
            <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="Index" />
        </TotalSummary>
    </DxGrid>
</DxLoadingPanel>
@code {
    [Parameter]
    public DynamicFormAudit Items { get; set; }
    bool PanelVisibleApproval { get; set; }
    bool IsEnabled { get; set; } = false;
    private List<DynamicFormAudit>? _dynamicFormApprovalData;
    IGrid? Grid7 { get; set; }
    private DynamicFormAudit _selectedItems;
    public ApplicationUser? applicationUser { get; private set; }
    protected override async Task OnInitializedAsync()
    {
        applicationUser = await _localStorageService.GetItem<ApplicationUser>("user");
        await UpdateDataAsync();
    }
    async Task UpdateDataAsync()
    {
        try
        {
            PanelVisibleApproval = true; IsEnabled = false; var _dynamicFormApprovalDataItems = new List<DynamicFormAudit>(); _dynamicFormApprovalData = new List<DynamicFormAudit>();
            if (Items != null)
            {
                var _dynamicFormApprovalDatas = await Mediator.Send(new GetDynamicFormAuditList(0, Items.SessionId));
                if (_dynamicFormApprovalDatas != null && _dynamicFormApprovalDatas.Count() > 0)
                {
                    List<Guid?> DynamicFormSections = _dynamicFormApprovalDatas.Where(w => w.FormType == "DynamicFormSection").Select(s => s.SessionId).Distinct().ToList();
                    var results = await Mediator.Send(new GetDynamicFormAuditDynamicFormSectionList(DynamicFormSections, "DynamicFormSection"));
                    if (results != null && results.Count() > 0)
                    {
                        results.ForEach(r =>
                        {
                            r.DisplayName = r.ColumnName;
                            if (r.ColumnName == "SectionName")
                            {
                                r.DisplayName = "Section Name";
                            }
                            if (r.ColumnName == "IsAutoNumberEnabled")
                            {
                                r.DisplayName = "Is AutoNumber";
                            }
                            if (r.ColumnName == "SectionFileProfileTypeId")
                            {
                                r.DisplayName = "SW Library";
                            }
                        });
                        _dynamicFormApprovalData.AddRange(results);
                    }
                    List<Guid?> DynamicFormSectionAttrs = _dynamicFormApprovalDatas.Where(w => w.FormType == "DynamicFormSectionAttribute").Select(s => s.SessionId).Distinct().ToList();
                    var resultsData = await Mediator.Send(new GetDynamicFormAuditDynamicFormSectionList(DynamicFormSectionAttrs, "DynamicFormSectionAttribute"));
                    if (resultsData != null && resultsData.Count() > 0)
                    {
                        List<long?> ids = new List<long?>();
                        ids.AddRange(resultsData.Where(w => w.ColumnName == "AttributeID" && w.CurrentValue != null && w.CurrentValue!="").Select(s => Convert.ToInt64(s.CurrentValue)).Cast<long?>().ToList());
                        ids.AddRange(resultsData.Where(w => w.ColumnName == "AttributeID" && w.PreValue != null && w.PreValue != "").Select(s => Convert.ToInt64(s.PreValue)).Cast<long?>().ToList());
                        var _attributeHeaderData = await Mediator.Send(new GetAllAttributeNameNotInDynamicFormList(-1, ids));
                        resultsData.ForEach(r =>
                        {
                            r.DisplayName = r.ColumnName;
                            if (r.ColumnName == "IsDisplayDropDownHeader")
                            {
                                r.DisplayName = "Is Display DropDown Header";
                            }
                            if (r.ColumnName == "IsDisplayTableHeader")
                            {
                                r.DisplayName = "Is Display Table Header";
                            }
                            if (r.ColumnName == "AttributeID")
                            {
                                if (!string.IsNullOrEmpty(r.CurrentValue))
                                {
                                    long? curId = Convert.ToInt64(r.CurrentValue);
                                    if (curId > 0)
                                    {
                                        var crV = _attributeHeaderData.Where(w => w.AttributeID == curId).FirstOrDefault();
                                        r.CurrentValue = crV?.Description + "-" + crV?.ControlType;
                                    }
                                }
                                if (!string.IsNullOrEmpty(r.PreValue))
                                {
                                    long? preId = Convert.ToInt64(r.PreValue);
                                    if (preId > 0)
                                    {
                                        var preV = _attributeHeaderData.Where(w => w.AttributeID == preId).FirstOrDefault();
                                        r.PreValue = preV?.Description + "-" + preV?.ControlType;
                                    }
                                }
                                r.DisplayName = "Field Name";
                            }
                        });
                        _dynamicFormApprovalData.AddRange(resultsData);
                    }
                    var DynamicFormSectionSecurityData = await Mediator.Send(new GetDynamicFormAuditList(Items.DynamicFormId, null));
                    if (DynamicFormSectionSecurityData != null && DynamicFormSectionSecurityData.Count()>0)
                    {
                        var datas = DynamicFormSectionSecurityData.Where(w => w.FormType == "DynamicFormSectionSecurity").ToList();
                        if (datas != null && datas.Count()>0)
                        {
                            datas.ForEach(d =>
                            {
                                d.IsFormDeleted = d.IsDeleted;
                                d.DisplayName = d.ColumnName;
                            });
                        }
                        _dynamicFormApprovalData.AddRange(datas);

                    }
                    int i = 0;
                    foreach (var index in _dynamicFormApprovalData)
                    {
                        _dynamicFormApprovalData[i].Index = i + 1;
                        i++;
                    }
                }
            }
            PanelVisibleApproval = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {

        }
    }
    void Grid_CustomizeApprovalElement(GridCustomizeElementEventArgs e)
    {
        if (e.ElementType == GridElementType.DataRow && e.VisibleIndex % 2 == 1)
        {
            e.CssClass = "alt-item";
        }
    }
    void OnRowApprovalClick(GridFocusedRowChangedEventArgs args)
    {
        if (args.DataItem != null)
        {
            _selectedItems = (DynamicFormAudit)args.DataItem;
        }

        StateHasChanged();
    }
    public async ValueTask DisposeAsync()
    {
    }
}
