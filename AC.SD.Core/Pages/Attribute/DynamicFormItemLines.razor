                                editor.OpenComponent<DxComboBox<DynamicForm, long?>>(j + 1);
                                editor.AddAttribute(j + 1, "Data", _dynamicForm);
                                // editor.AddAttribute(j + 1, "EditFormat", "{0}|{1}");
