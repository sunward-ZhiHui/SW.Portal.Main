@using Application.Commands;
@using Application.Queries;
@using Application.Response;
@using MediatR
@using global::Core.Entities;
@using global::Core.Entities.Views;
@inject IMediator Mediator
@using DevExpress.Export
@using global::Core.Repositories.Query;
@inject IJSRuntime jsRuntime;
@inject AC.SD.Core.Services.ToastService toastService
@inject ILocalStorageService<ApplicationUser> _localStorageService
@implements IAsyncDisposable

<div class="menu-bar-content-container col-md-12">
    <div class="card w-100" style="margin-bottom:1px;">
        <div class="card-body p-0">

            <DxMenu CollapseItemsToHamburgerMenu="true"
                    CollapseItemToIconMode="MenuCollapseItemToIconMode.Sequentially"
                    DisplayMode="MenuDisplayMode.Auto">

                <Items>
                    <DxMenuItem Position="ItemPosition.End" title="Export to XLSX" IconCssClass="fa fa-file-excel" Click="ExportXlsx_Click" />
                </Items>
            </DxMenu>
        </div>
    </div>
</div>
<DxLoadingPanel @bind-Visible="PanelVisibleApproval"
                IsContentBlocked="true"
                ApplyBackgroundShading="true"
                IndicatorAreaVisible="false"
                Text="Fetching Data...">
    <DxGrid @ref="Grid7" Data="@_dynamicFormApprovalData"
            ShowGroupPanel="true"
            ShowGroupedColumns="true"
            ShowSearchBox="true"
            FilterMenuButtonDisplayMode="GridFilterMenuButtonDisplayMode.Always"
            ColumnResizeMode="GridColumnResizeMode.NextColumn"
            PagerNavigationMode="PagerNavigationMode.InputBox"
            KeyFieldName="DynamicFormApprovalId"
            PageSizeSelectorVisible="true"
            PageSizeSelectorAllRowsItemVisible="true"
            PageSizeSelectorItems="@(new int[] { 5,10,20 })"
            PageSize="20"
            CssClass="ch-360"
            FocusedRowEnabled="true"
            RowClick="OnRowApprovalClick"
            AllowSelectRowByClick="true"
            CustomizeElement="Grid_CustomizeApprovalElement"
            AutoExpandAllGroupRows="true"
            SelectionMode="GridSelectionMode.Single"
            VirtualScrollingEnabled="true"
            SelectAllCheckboxMode="GridSelectAllCheckboxMode.AllPages">
        <Columns>
            <DxGridDataColumn FieldName="DynamicFormApprovalId" Visible="false" />
            <DxGridDataColumn FieldName="ApprovalUser" Caption="Approval User" MinWidth="40" />
            <DxGridDataColumn FieldName="SortOrderBy" Caption="Approval Level" SortIndex="0" SortOrder="GridColumnSortOrder.Ascending" MinWidth="40">
            </DxGridDataColumn>
            <DxGridDataColumn FieldName="Description" Caption="Description" MinWidth="200">
            </DxGridDataColumn>
            <DxGridDataColumn FieldName="ModifiedBy" Caption="Modified By" MinWidth="50" />
            <DxGridDataColumn FieldName="ModifiedDate" Caption="Modified Date" Width="180" />
            <DxGridCommandColumn Width="160px" Visible="false" />
        </Columns>
        <TotalSummary>
            <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="ApprovalUser" />
        </TotalSummary>

    </DxGrid>
</DxLoadingPanel>
@code {
    bool ExportSelectedRowsOnly { get; set; }
    [Parameter]
    public long? dynamicFormId { get; set; }
    bool PanelVisibleApproval { get; set; }
    private List<DynamicFormApproval>? _dynamicFormApprovalData;
    IGrid? Grid7 { get; set; }
    private DynamicFormApproval _selectedItems;
    private DynamicFormApproval _selectlst;
    public ApplicationUser? applicationUser { get; private set; }
    protected override async Task OnInitializedAsync()
    {
        await UpdateDataAsync();
        applicationUser = await _localStorageService.GetItem<ApplicationUser>("user");
    }
    async Task ExportXlsx_Click()
    {
        await Grid7.ExportToXlsxAsync("ExportResult", new GridXlExportOptions()
            {
                ExportSelectedRowsOnly = ExportSelectedRowsOnly
            });
    }
    public async Task loadChildData(long? dynamicFormIds)
    {
        dynamicFormId = dynamicFormIds;
        await UpdateDataAsync();
    }
    async Task UpdateDataAsync()
    {
        try
        {
            PanelVisibleApproval = true;
            if (dynamicFormId > 0)
            {
                _dynamicFormApprovalData = await Mediator.Send(new GetDynamicFormApproval(dynamicFormId));

                if (_dynamicFormApprovalData.Count > 0)
                {
                    _selectedItems = _dynamicFormApprovalData.FirstOrDefault();
                    if (_selectedItems.ApprovedCountUsed > 0)
                    {
                    }
                    else
                    {

                    }

                }
            }
            else
            {
                _dynamicFormApprovalData = new List<DynamicFormApproval>();
            }
            PanelVisibleApproval = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {

        }
    }
    void Grid_CustomizeApprovalElement(GridCustomizeElementEventArgs e)
    {
        if (e.ElementType == GridElementType.DataRow && e.VisibleIndex % 2 == 1)
        {
            e.CssClass = "alt-item";
        }

    }
    void OnRowApprovalClick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "DynamicFormApprovalId");
        _selectedItems = _dynamicFormApprovalData.FirstOrDefault(f => f.DynamicFormApprovalId == (long?)UniqueId);
        if (_selectedItems.ApprovedCountUsed > 0)
        {
        }
        StateHasChanged();
    }

    public void ClearData()
    {
        _dynamicFormApprovalData?.Clear();
        _selectedItems = null;
        _selectlst = null;
    }
    public async ValueTask DisposeAsync()
    {
        ClearData();
    }
}
