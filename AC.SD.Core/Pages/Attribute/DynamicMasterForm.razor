            await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
        }
    }
    async Task OpenOdataUrl1()
    {
        if (_dynamicFormData != null && _dynamicFormData.SessionID != null)
        {
            var url = NavigationManager.BaseUri + "api/DynamicForm/GetDynamicFormDataListItem?DynamicFormSessionId=" + _dynamicFormData.SessionID;
            await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
        }
    }
    async Task OpenOdataUrl()
    {
        if (_dynamicFormData != null && _dynamicFormData.SessionID != null)
        {
            var url = NavigationManager.BaseUri + "api/DynamicForm/GetDynamicFormDataList?DynamicFormSessionId=" + _dynamicFormData.SessionID;
            await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
        }
    }
