@code {
    [Parameter]
    public DynamicFormSection Items { get; set; }
    public bool? IsDynamicSubForm { get; set; } = false;
    public long? DynamicFormSectionId { get; set; }
    bool PanelAttibuteVisible { get; set; }
    IReadOnlyList<object> SelectedDataItems { get; set; }
    private List<DynamicFormSectionAttribute>? _dynamicFormSectionAttributeData;
    IGrid? SMAttributeGrid { get; set; }
    private DynamicFormSectionAttribute _selectedAttributeItems;
    IEnumerable<string> TemplateUploadOptions = new[] { "Vertical", "Horizontal" };
    bool DeleteEnabled { get; set; } = false;
    DxPopup? popup;
    bool PopupVisible { get; set; } = false;
    bool isListMultiple = false;
    bool IsSpinEditTypeEnabled { get; set; } = false; bool IsRadioLayoutEnabled { get; set; } = false;
    bool IsRadioCheckBoxLayoutEnabled { get; set; } = false;
    string? errorMessage;
    string? DeleteerrorMessage;
    bool MessageVisible { get; set; }
    string MessageHeader = "Error";
    string MessageBody = "";
    private bool loading;
    bool Blukdeletepopup { get; set; } = false;
    bool EditEnabled { get; set; } = false;
    bool AddEnabled { get; set; } = false;
    bool IsSortOrderByAtrributeOpen { get; set; } = false;
    private DynamicFormSectionAttribute _selectAttributelst;
    public ApplicationUser? applicationUser { get; private set; }
    private List<DynamicFormSectionSortOrder> sortOrderAttributeSectionList { get; set; }
    private List<DynamicFormSectionSortOrder> colSpanLists { get; set; } = new List<DynamicFormSectionSortOrder>();
    private List<AttributeHeader>? _attributeHeaderData;
    DynamicFormSectionAttribute _selectedDynamicFormAttributeSectionItems = new DynamicFormSectionAttribute();
    private List<DynamicFormSectionSpinEdit> dynamicFormSectionSpinEdit { get; set; } = new List<DynamicFormSectionSpinEdit>();
    bool isFormCountUsed { get; set; } = true; private List<AttributeHeaderDataSource> _attributeHeaderDataSource; bool isDataSource { get; set; } = false;
    protected override async Task OnInitializedAsync()
    {
        applicationUser = await _localStorageService.GetItem<ApplicationUser>("user");
        DynamicFormSectionId = Items.DynamicFormSectionId;

        for (int val = 1; val <= 12; val++)
        {
            if (val % 2 == 0)
            {
                DynamicFormSectionSortOrder colSpanList = new DynamicFormSectionSortOrder();
                colSpanList.Text = val.ToString();
                colSpanList.Value = val;
                colSpanLists.Add(colSpanList);
            }
        }
        dynamicFormSectionSpinEdit.Add(new DynamicFormSectionSpinEdit() { Value = "int", Text = "Integer" });
        dynamicFormSectionSpinEdit.Add(new DynamicFormSectionSpinEdit() { Value = "decimal", Text = "Decimal" });
        await UpdateDataAsync();
    }
    public async Task loadChildData(long? dynamicFormIds)
    {
        DynamicFormSectionId = dynamicFormIds;
        await UpdateDataAsync();
    }
    void OnTemplateUploadGroupValueChanged(string? radioValue, DynamicFormSectionAttribute dynamicFormSectionAttribute)
    {
        dynamicFormSectionAttribute.RadioLayout = radioValue;
    }
    void CheckedSingleTextBoxRemarksChanged(bool? value, DynamicFormSectionAttribute dynamicFormSectionAttribute)
    {
        dynamicFormSectionAttribute.IsSingleTextBoxRemarks = value;
        if (value == true)
        {
            dynamicFormSectionAttribute.IsMultiLineTextboxRemarks = false;
        }
        StateHasChanged();
    }
    void CheckedIsMultiLineTextboxRemarksChanged(bool? value, DynamicFormSectionAttribute dynamicFormSectionAttribute)
    {
        dynamicFormSectionAttribute.IsMultiLineTextboxRemarks = value;
        if (value == true)
        {
            dynamicFormSectionAttribute.IsSingleTextBoxRemarks = false;
        }
        StateHasChanged();
    }
    async Task Grid_CustomizeEditModel(GridCustomizeEditModelEventArgs e)
    {
        isFormCountUsed = true; isDataSource = false;
        var navitems = (DynamicFormSectionAttribute)e.EditModel;
        navitems.IsSpinEditType = string.IsNullOrEmpty(navitems.IsSpinEditType) ? "int" : navitems.IsSpinEditType;
        isListMultiple = false; IsSpinEditTypeEnabled = false; IsRadioLayoutEnabled = false; IsRadioCheckBoxLayoutEnabled = false;
        navitems.IsSingleTextBoxRemarks = false; navitems.IsSingleTextBoxRemarks = false;
        if (e.IsNew)
        {
            navitems.IsSpinEditType = "int";
            navitems.ColSpan = 6;

            //_attributeHeaderData = await Mediator.Send(new GetAllAttributeNameNotInDynamicForm(DynamicFormSectionId, -1));
        }
        else
        {
            if (navitems.DataSourceTable == "Plant")
            {
                isDataSource = true;
                _attributeHeaderDataSource = await Mediator.Send(new GetAttributeHeaderDataSource());
            }
            if (navitems.FormUsedCount > 0)
            {
                isFormCountUsed = false;
            }
            if (navitems.ControlTypeId == 2706)
            {
                isListMultiple = true;
            }
            if (navitems.ControlTypeId == 2704)
            {
                IsSpinEditTypeEnabled = true;
            }
            if (navitems.ControlTypeId == 2705 || navitems.ControlTypeId == 2711)
            {
                if (string.IsNullOrEmpty(navitems.RadioLayout))
                {
                    navitems.RadioLayout = "Vertical";
                }
                if (navitems.IsRadioCheckRemarks == "Memo")
                {
                    navitems.IsMultiLineTextboxRemarks = true;
                }
                if (navitems.IsRadioCheckRemarks == "TextBox")
                {
                    navitems.IsSingleTextBoxRemarks = true;
                }
                IsRadioCheckBoxLayoutEnabled = true;
                IsRadioLayoutEnabled = true;
            }
            if (navitems.ControlTypeId == 2710)
            {
                if (navitems.IsRadioCheckRemarks == "Memo")
                {
                    navitems.IsMultiLineTextboxRemarks = true;
                }
                if (navitems.IsRadioCheckRemarks == "TextBox")
                {
                    navitems.IsSingleTextBoxRemarks = true;
                }
                IsRadioCheckBoxLayoutEnabled = true;
            }

            //_attributeHeaderData = await Mediator.Send(new GetAllAttributeNameNotInDynamicForm(DynamicFormSectionId, navitems.AttributeId));
        }
        StateHasChanged();
    }
    async Task UpdateDataAsync()
    {
        PanelAttibuteVisible = true; AddEnabled = false;
        EditEnabled = false; DeleteEnabled = false;

        if (DynamicFormSectionId > 0)
        {
            _attributeHeaderData = await Mediator.Send(new GetAllAttributeNameNotInDynamicForm(-1, -1));
            AddEnabled = true;
            _dynamicFormSectionAttributeData = await Mediator.Send(new GetDynamicFormSectionAttribute(DynamicFormSectionId));

            if (_dynamicFormSectionAttributeData.Count > 0)
            {
                _selectedAttributeItems = _dynamicFormSectionAttributeData.FirstOrDefault();

                EditEnabled = true;
                DeleteEnabled = true;
                // if (_selectedAttributeItems.FormUsedCount > 0)
                // {
                //     DeleteEnabled = false;
                // }
            }
        }
        PanelAttibuteVisible = false;
        StateHasChanged();
    }

    void OnCustomizeCell(GridExportCustomizeCellEventArgs args)
    {
        if (args.ColumnFieldName == "ContactName" && args.AreaType == SheetAreaType.DataArea)
            args.Formatting.Font = new XlCellFont() { Italic = true };
        args.Handled = true;
    }
    async Task SelectedItemChanged(AttributeHeader attributeHeader, DynamicFormSectionAttribute data)
    {
        data.DisplayName = attributeHeader.Description;
        data.DataSourceTable = attributeHeader.DataSourceTable;
        data.ControlTypeId = attributeHeader.ControlTypeId; isDataSource = false;
        isListMultiple = false; IsSpinEditTypeEnabled = false; IsRadioLayoutEnabled = false; IsRadioCheckBoxLayoutEnabled = false;
        if (attributeHeader != null)
        {
            if (attributeHeader.ControlTypeId == 2706)
            {
                isListMultiple = true;
            }
            if (attributeHeader.ControlTypeId == 2704)
            {
                IsSpinEditTypeEnabled = true;
            }
            if (attributeHeader.ControlTypeId == 2705 || attributeHeader.ControlTypeId == 2711)
            {
                if (string.IsNullOrEmpty(data.RadioLayout))
                {
                    data.RadioLayout = "Vertical";
                }
                IsRadioCheckBoxLayoutEnabled = true;
                IsRadioLayoutEnabled = true;
            }
            if (attributeHeader.ControlTypeId == 2710)
            {
                IsRadioCheckBoxLayoutEnabled = true;
            }
            if (attributeHeader.ControlTypeId == 2712)
            {
                data.ColSpan = 12;
            }
            if (attributeHeader.DataSourceTable == "Plant")
            {
                isDataSource = true;
                _attributeHeaderDataSource = await Mediator.Send(new GetAttributeHeaderDataSource());
            }
            else
            {
                data.IsPlantLoadDependency = false;
            }
        }
        StateHasChanged();
    }
    async Task OnEditModelSaving(GridEditModelSavingEventArgs e)
    {
        var editModel = (DynamicFormSectionAttribute)e.EditModel;
        var isMultipleFlag = editModel.ControlTypeId == 2706 ? (editModel.IsMultiple == true ? true : false) : false;
        var IsSpinEditType = editModel.ControlTypeId == 2704 ? (string.IsNullOrEmpty(editModel.IsSpinEditType) ? null : editModel.IsSpinEditType) : null;
        var IsRadioLayout = editModel.ControlTypeId == 2705 || editModel.ControlTypeId == 2711 ? (string.IsNullOrEmpty(editModel.RadioLayout) ? null : editModel.RadioLayout) : null;
        var IsColSpan = editModel.ControlTypeId == 2712 ? 12 : editModel.ColSpan;
        string? IsRadioCheckRemarks = null; string? RemarksLabelName = null;
        if (editModel.ControlTypeId == 2705 || editModel.ControlTypeId == 2711 || editModel.ControlTypeId == 2710)
        {
            RemarksLabelName = editModel.RemarksLabelName;
            if (editModel.IsMultiLineTextboxRemarks == true)
            {
                IsRadioCheckRemarks = "Memo";
            }
            if (editModel.IsSingleTextBoxRemarks == true)
            {
                IsRadioCheckRemarks = "TextBox";
            }
        }

        if (e.IsNew)
        {
            var createReq = new InsertOrUpdateDynamicFormSectionAttribute
                {
                    DisplayName = editModel.DisplayName,
                    DynamicFormSectionId = DynamicFormSectionId,
                    AttributeId = editModel.AttributeId,
                    SessionId = Guid.NewGuid(),
                    AddedByUserID = applicationUser.UserID,
                    ModifiedByUserID = applicationUser.UserID,
                    ColSpan = IsColSpan,
                    ModifiedDate = DateTime.Now,
                    StatusCodeID = 1,
                    AddedDate = DateTime.Now,
                    IsMultiple = isMultipleFlag,
                    IsRequired = editModel.IsRequired,
                    RequiredMessage = editModel.RequiredMessage,
                    IsSpinEditType = IsSpinEditType,
                    IsDisplayTableHeader = editModel.IsDisplayTableHeader,
                    FormToolTips = editModel.FormToolTips,
                    IsVisible = editModel.IsVisible = true,
                    RadioLayout = IsRadioLayout,
                    IsRadioCheckRemarks = IsRadioCheckRemarks,
                    RemarksLabelName = RemarksLabelName,
                    IsPlantLoadDependency = editModel.DataSourceTable == "Plant" ? editModel.IsPlantLoadDependency : false,
                    PlantDropDownWithOtherDataSourceId = editModel.DataSourceTable == "Plant" && editModel.IsPlantLoadDependency == true ? editModel.PlantDropDownWithOtherDataSourceId : null,
                    PlantDropDownWithOtherDataSourceLabelName = editModel.DataSourceTable == "Plant" && editModel.IsPlantLoadDependency == true && editModel.PlantDropDownWithOtherDataSourceId > 0 ? editModel.PlantDropDownWithOtherDataSourceLabelName : null,
                };

            try
            {
                var result = await Mediator.Send(createReq);
                toastService.ShowToast("Record save Successfully", AC.SD.Core.Services.ToastLevel.Success);
            }
            catch (Exception eq)
            {

                errorMessage = eq.Message;
                PopupVisible = true;

            }
            await UpdateDataAsync();


        }
        else
        {
            var UpdateReq = new InsertOrUpdateDynamicFormSectionAttribute
                {
                    DynamicFormSectionAttributeId = editModel.DynamicFormSectionAttributeId,
                    DisplayName = editModel.DisplayName,
                    AttributeId = editModel.AttributeId,
                    DynamicFormSectionId = DynamicFormSectionId,
                    SessionId = editModel.SessionId,
                    SortOrderBy = editModel.SortOrderBy,
                    AddedByUserID = editModel.AddedByUserID,
                    ModifiedByUserID = applicationUser.UserID,
                    ColSpan = IsColSpan,
                    ModifiedDate = DateTime.Now,
                    StatusCodeID = 1,
                    AddedDate = editModel.AddedDate,
                    IsMultiple = isMultipleFlag,
                    IsRequired = editModel.IsRequired,
                    RequiredMessage = editModel.RequiredMessage,
                    IsSpinEditType = IsSpinEditType,
                    IsDisplayTableHeader = editModel.IsDisplayTableHeader,
                    FormToolTips = editModel.FormToolTips,
                    IsVisible = editModel.IsVisible,
                    RadioLayout = IsRadioLayout,
                    IsRadioCheckRemarks = IsRadioCheckRemarks,
