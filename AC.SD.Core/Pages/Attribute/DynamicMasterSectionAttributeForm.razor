</DxPopup>

<DxPopup @bind-Visible="@MessageVisible" HeaderText="@MessageHeader">
    <BodyTemplate Context="PopupContext">
        <div class="@((MessageHeader == "Error" ? "TxtRed" : "TxtGreen"))" style="text-align:center; padding: 10px; font-size: 15px;">
            <span> @MessageBody</span>
        </div>
    </BodyTemplate>
</DxPopup>

<DxLoadingPanel @bind-Visible="PanelAttibuteVisible"
                IsContentBlocked="true"
                ApplyBackgroundShading="true"
                IndicatorAreaVisible="false"
                Text="Fetching Data...">

    <DxGrid @ref="SMAttributeGrid" Data="@_dynamicFormSectionAttributeData" EditModelSaving="@OnEditModelSaving" DataItemDeleting="@OnDeleteDataItem" EditMode="GridEditMode.EditForm" ShowGroupPanel="true" ShowGroupedColumns="true" ShowSearchBox="true"
            FilterMenuButtonDisplayMode="GridFilterMenuButtonDisplayMode.Always"
            ColumnResizeMode="GridColumnResizeMode.NextColumn"
            PagerNavigationMode="PagerNavigationMode.InputBox"
            KeyFieldName="DynamicFormSectionAttributeId"
            PageSizeSelectorVisible="true"
            PageSizeSelectorAllRowsItemVisible="true"
            PageSizeSelectorItems="@(new int[] { 5,10,20 })"
            PageSize="20"
            CssClass="ch-360"
            FocusedRowEnabled="true"
            RowClick="OnRowClick"
            AllowSelectRowByClick="true"
            CustomizeElement="Grid_CustomizeElement"
            CustomizeEditModel="Grid_CustomizeEditModel"
            AutoExpandAllGroupRows="true"
            SelectionMode="GridSelectionMode.Single"
            SelectAllCheckboxMode="GridSelectAllCheckboxMode.AllPages"
            RowDoubleClick="OnRowDoubleClick" SelectedDataItemsChanged="@SelectedDataItemsChanged">


        <Columns>
            @* <DxGridSelectionColumn Width="60px" AllowSelectAll="true" /> *@
            <DxGridDataColumn FieldName="DynamicFormSectionAttributeId" Visible="false" />
            <DxGridDataColumn FieldName="AttributeName" Caption="Field Name" MinWidth="40" />
            <DxGridDataColumn FieldName="ControlType" Caption="Control Type" MinWidth="40">
                <CellDisplayTemplate>
                    @{
                        var item = (DynamicFormSectionAttribute)context.DataItem;
                        var Names = item.ControlType;
                    }
                    @Names
                </CellDisplayTemplate>
            </DxGridDataColumn>
            <DxGridDataColumn FieldName="DataSourceDisplayName" Caption="Data Source" MinWidth="40">
                <CellDisplayTemplate>
                    @{
                        var item = (DynamicFormSectionAttribute)context.DataItem;
                        var DataSourceNames = item.DataSourceDisplayName;
                        if (item.ControlTypeId == 2712)
                        {
                            DataSourceNames = item.DynamicGridName;
                        }
                        if (item.DataSourceTable == "DynamicGrid")
                        {
                            DataSourceNames += " - " + item.DynamicGridName;
                        }
                    }
                    @DataSourceNames
                </CellDisplayTemplate>
            </DxGridDataColumn>
            <DxGridDataColumn FieldName="DisplayName" Caption="Label Name" MinWidth="40" />
            <DxGridDataColumn FieldName="SortOrderBy" Caption="Sort Order By" SortIndex="0" SortOrder="GridColumnSortOrder.Ascending" MinWidth="40">
                <CellDisplayTemplate>
                    @{
                        var item = (DynamicFormSectionAttribute)context.DataItem;
                    }
                    <i class="fa fa-pencil" aria-hidden="true" style="margin-right: 5px;cursor:pointer;" id=@($"flyout-overview-target-container-AttributeSection-{item.DynamicFormSectionAttributeId}") onclick="@(() => OnButtonSortOrderByClick(item))" title="@item.SortOrderBy"></i>
                    @item.SortOrderBy
                </CellDisplayTemplate>
            </DxGridDataColumn>
            <DxGridDataColumn FieldName="IsVisible" Caption="Is Visible" MinWidth="20" />
            <DxGridDataColumn FieldName="IsMultiple" Caption="Is Multiple" MinWidth="80" />
            <DxGridDataColumn FieldName="IsRequired" Caption="Is Required" MinWidth="80" />
            <DxGridDataColumn FieldName="RequiredMessage" Caption="Required Message" MinWidth="80" />
            <DxGridDataColumn FieldName="ColSpan" Caption="ColSpan" MinWidth="20" />
            <DxGridDataColumn FieldName="IsDisplayTableHeader" Caption="Is Table Header" MinWidth="20" />
            <DxGridDataColumn FieldName="ModifiedBy" Caption="Modified By" MinWidth="50" />
            <DxGridDataColumn FieldName="ModifiedDate" Caption="Modified Date" Width="180" />

            <DxGridCommandColumn Width="160px" Visible="false" />
        </Columns>
        <EditFormTemplate Context="EditFormContext">
            @{
                var types = (DynamicFormSectionAttribute)EditFormContext.EditModel;

            }
            <DxFormLayout CssClass="w-100">
                <DxFormLayoutItem Caption="Field Name" ColSpanMd="6">
                    <DxComboBox Data="@_attributeHeaderData"
                                NullText="Select Field..."
                                FilteringMode="DataGridFilteringMode.Contains"
                                TextFieldName="AttributeName"
                                ValueFieldName="AttributeID"
                                EditFormat="{1}-{2}"
                                Enabled="isFormCountUsed"
                                SelectedItemChanged="@((AttributeHeader selectName) => SelectedItemChanged(selectName,types))"
                    @bind-Value="@types.AttributeId">
                        <Columns>
                            <DxListEditorColumn FieldName="@nameof(AttributeHeader.AttributeName)"
                                                Caption="Field Name"
                                                Width="100px" />
                            <DxListEditorColumn FieldName="@nameof(AttributeHeader.Description)"
                                                Caption="Label Name"
                                                Width="100px" />
                            <DxListEditorColumn FieldName="@nameof(AttributeHeader.ControlType)"
