                            <DxListEditorColumn FieldName="@nameof(AttributeHeader.DataSourceDisplayName)"
                                                Caption="Data Source" Width="100px" />
                        </Columns>
                    </DxComboBox>
                    <ValidationMessage For="@(() => types.AttributeId)" />

                </DxFormLayoutItem>

                <DxFormLayoutItem Caption="Label Name" ColSpanMd="6">
                    @{
                        var types = (DynamicFormSectionAttribute)EditFormContext.EditModel;
                    }
                    <DxTextBox @bind-Text="@types.DisplayName" ShowValidationIcon="true" />
                    <ValidationMessage For="@(() => types.DisplayName)" />
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Is Plant Load Dependency" ColSpanMd="6" Visible="@isDataSource">
                    <DxCheckBox @bind-Checked="types.IsPlantLoadDependency"></DxCheckBox>
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Dropdown Data Source" ColSpanMd="6" Visible="@types.IsPlantLoadDependency">
                    <DxComboBox Data="@_attributeHeaderDataSource"
                                NullText="Select Data Source..."
                                FilteringMode="DataGridFilteringMode.Contains"
                                ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                                TextFieldName="DisplayName"
                                ValueFieldName="AttributeHeaderDataSourceId"
                                Enabled="isFormCountUsed"
                    @bind-Value="@types.PlantDropDownWithOtherDataSourceId">

                    </DxComboBox>
                    <ValidationMessage For="@(() => types.PlantDropDownWithOtherDataSourceId)" />
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Dropdown Label Name" ColSpanMd="6" Visible="@types.IsPlantLoadDependency">
                    <DxTextBox @bind-Text="@types.PlantDropDownWithOtherDataSourceLabelName" />
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Radio Layout" ColSpanMd="6" Visible="IsRadioLayoutEnabled">
                    <DxRadioGroup Items="@TemplateUploadOptions"
                                  Value="@types.RadioLayout"
                                  ValueExpression="@(() => types.RadioLayout )"
                                  ValueChanged="@((string value) => OnTemplateUploadGroupValueChanged(value,types))"
                                  Layout="RadioGroupLayout.Horizontal"
                                  Enabled="IsRadioLayoutEnabled"
                                  CssClass="dx-demo-radio-group" />
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="" ColSpanMd="3" Visible="IsRadioCheckBoxLayoutEnabled">
                    <DxCheckBox Checked="@types.IsSingleTextBoxRemarks" Enabled="@IsRadioCheckBoxLayoutEnabled" CheckedExpression="@(() => types.IsSingleTextBoxRemarks)" CheckedChanged="@((bool? value) => CheckedSingleTextBoxRemarksChanged(value,types))" LabelPosition="LabelPosition.Right">Is SingleLine TextBox</DxCheckBox>
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="" ColSpanMd="3" Visible="IsRadioCheckBoxLayoutEnabled">
                    <DxCheckBox Checked="types.IsMultiLineTextboxRemarks" Enabled="@IsRadioCheckBoxLayoutEnabled" CheckedExpression="@(() => types.IsMultiLineTextboxRemarks)" CheckedChanged="@((bool? value) => CheckedIsMultiLineTextboxRemarksChanged(value,types))" LabelPosition="LabelPosition.Right">Is MultiLine TextBox</DxCheckBox>
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Remarks Label Name" ColSpanMd="6" Visible="IsRadioCheckBoxLayoutEnabled">
                    <DxTextBox @bind-Text="@types.RemarksLabelName" />
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="SpinEdit Type" ColSpanMd="6" Visible="IsSpinEditTypeEnabled">
                    <DxComboBox Data="@dynamicFormSectionSpinEdit"
                    @bind-Value="@types.IsSpinEditType"
                                Enabled="@IsSpinEditTypeEnabled"
                                TextFieldName="Text"
                                ValueFieldName="Value" ShowValidationIcon="true" />
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Is Visible" ColSpanMd="6">
                    <DxCheckBox @bind-Checked="types.IsVisible"></DxCheckBox>
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Is Multiple" ColSpanMd="6" Visible="@isListMultiple">
                    <DxCheckBox @bind-Checked="types.IsMultiple" Enabled="@isListMultiple"></DxCheckBox>
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Is Required" ColSpanMd="6">
                    <DxCheckBox @bind-Checked="types.IsRequired"></DxCheckBox>
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Required Message" ColSpanMd="6">

                    <DxTextBox @bind-Text="@types.RequiredMessage" />
                    <ValidationMessage For="@(() => types.RequiredMessage)" />
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Col Span" ColSpanMd="6">
                    <DxComboBox Data="@colSpanLists"
                    @bind-Value="@types.ColSpan"
                                TextFieldName="Text"
                                ValueFieldName="Value" ShowValidationIcon="true" />
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Is Table Header" ColSpanMd="6">
                    <DxCheckBox @bind-Checked="types.IsDisplayTableHeader"></DxCheckBox>
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Tool Tips" ColSpanMd="6">

                    <DxMemo @bind-Text="@types.FormToolTips" Rows="5" />
                </DxFormLayoutItem>
            </DxFormLayout>
        </EditFormTemplate>

        <TotalSummary>
            <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="DisplayName" />
        </TotalSummary>

    </DxGrid>
</DxLoadingPanel>

<DxPopup @bind-Visible="@Blukdeletepopup"
