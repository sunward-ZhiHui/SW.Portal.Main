        dynamicFormId = dynamicFormIds;
        await UpdateDataAsync();
    }
    async Task Grid_CustomizeEditModel(GridCustomizeEditModelEventArgs e)
    {
        var navitems = (DynamicFormSection)e.EditModel;
        if (e.IsNew)
        {
            // _attributeHeaderData = await Mediator.Send(new GetAllAttributeNameNotInDynamicForm(-1, -1));
        }
        else
        {
            //_attributeHeaderData = await Mediator.Send(new GetAllAttributeNameNotInDynamicForm(navitems.DynamicFormSectionId, -1));
        }
    }
    async Task UpdateDataAsync()
    {
        try
        {
            PanelVisible = true; AddEnabled = false;
            EditEnabled = false; DeleteEnabled = false;
            if (dynamicFormId > 0)
            {
                _attributeHeaderData = await Mediator.Send(new GetAllAttributeNameNotInDynamicForm(-1, -1));
                AddEnabled = true;
                _dynamicFormSectionData = await Mediator.Send(new GetDynamicFormSection(dynamicFormId));

