                    DeleteEnabled = true;
                    // if (_selectedItems.FormUsedCount > 0)
                    // {
                    //     DeleteEnabled = false;
                    // }
                }
            }
            else
            {
                _dynamicFormSectionData = new List<DynamicFormSection>();
            }
            PanelVisible = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {

        }
    }

    void OnCustomizeCell(GridExportCustomizeCellEventArgs args)
    {
        if (args.ColumnFieldName == "ContactName" && args.AreaType == SheetAreaType.DataArea)
            args.Formatting.Font = new XlCellFont() { Italic = true };
        args.Handled = true;
    }

    async Task OnEditModelSaving(GridEditModelSavingEventArgs e)
    {

        var editModel = (DynamicFormSection)e.EditModel;

        if (e.IsNew)
        {
            var createReq = new InsertOrUpdateDynamicFormSection
                {
                    SectionName = editModel.SectionName,
                    DynamicFormId = dynamicFormId,
                    SessionId = Guid.NewGuid(),
                    AddedByUserID = applicationUser.UserID,
                    ModifiedByUserID = applicationUser.UserID,
                    ModifiedDate = DateTime.Now,
                    StatusCodeID = 1,
                    AddedDate = DateTime.Now,
                    IsReadOnly = editModel.IsReadOnly == true ? true : false,
                    IsVisible = editModel.IsVisible == true ? true : false,
                    IsReadWrite = editModel.IsReadWrite == true ? true : false,
                    Instruction = editModel.Instruction,
                    SectionFileProfileTypeId = editModel.SectionFileProfileTypeId,
                };

            try
            {
                var result = await Mediator.Send(createReq);
                await addAttributes(result.DynamicFormSectionId, editModel.AttributeIds);
                toastService.ShowToast("Record save Successfully", AC.SD.Core.Services.ToastLevel.Success);
            }
            catch (Exception eq)
            {

                errorMessage = eq.Message;
                PopupVisible = true;

            }
            await UpdateDataAsync();


        }
        else
        {
            var UpdateReq = new InsertOrUpdateDynamicFormSection
                {
                    DynamicFormSectionId = editModel.DynamicFormSectionId,
                    SectionName = editModel.SectionName,
                    DynamicFormId = dynamicFormId,
                    SessionId = editModel.SessionId,
                    SortOrderBy = editModel.SortOrderBy,
                    AddedByUserID = editModel.AddedByUserID,
                    ModifiedByUserID = applicationUser.UserID,
                    ModifiedDate = DateTime.Now,
                    StatusCodeID = 1,
                    AddedDate = editModel.AddedDate,
                    IsReadOnly = editModel.IsReadOnly,
                    IsVisible = editModel.IsVisible,
                    IsReadWrite = editModel.IsReadWrite,
                    Instruction = editModel.Instruction,
                    SectionFileProfileTypeId = editModel.SectionFileProfileTypeId,

                };
            var result = await Mediator.Send(UpdateReq);
            await addAttributes(result.DynamicFormSectionId, editModel.AttributeIds);
            toastService.ShowToast("Record Updated Successfully", AC.SD.Core.Services.ToastLevel.Success);
            await UpdateDataAsync();

        }

    }
    async Task addAttributes(long dynamicFormSectionId, IEnumerable<AttributeHeader> AttributeIds)
    {
        if (dynamicFormSectionId > 0 && AttributeIds != null && AttributeIds.Count() > 0)
        {
            var request = new InsertDynamicFormAttributeSection(dynamicFormSectionId, AttributeIds, applicationUser.UserID);
            await Mediator.Send(request);
        }
    }
    private async void onShowPopupMessage(string headerText, string bodyText)
    {

        MessageVisible = true;
        MessageBody = bodyText;
        MessageHeader = headerText;
        loading = false;
        StateHasChanged();
    }
