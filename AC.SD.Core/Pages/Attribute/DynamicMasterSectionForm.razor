    {
        await Mediator.Send(new UpdateDynamicFormSectionSortOrder(_selectedDynamicFormSectionItems));
        await UpdateDataAsync();
        SMGrid.SortBy("SortOrderBy", GridColumnSortOrder.Ascending, 0);
        toastService.ShowToast("Record Updated Successfully", AC.SD.Core.Services.ToastLevel.Success);
