@page "/DynamicMasterSetupList"
@using global::Core.Entities.Views;
@inject IMediator Mediator
@using Application.Queries;
@using MediatR
@using global::Core.Entities;
@using global::Core.EntityModels;
@using global::Core.Repositories.Query;
@inject AC.SD.Core.Services.ToastService toastService
@inject ILocalStorageService<ApplicationUser> _localStorageService
@inject IJSRuntime JSRuntime;
@inject NavigationManager NavigationManager
@rendermode @(new  InteractiveServerRenderMode(prerender: false))
@implements IAsyncDisposable
@inject ClipboardService ClipboardService
<style scoped>
    .formCountClass {
        color: red;
    }
</style>
<div class="card w-100" style="margin-bottom:10px;">
    <div class="card-body p-0">
        <DxMenu CollapseItemsToHamburgerMenu="true"
                CollapseItemToIconMode="MenuCollapseItemToIconMode.Sequentially"
                DisplayMode="MenuDisplayMode.Desktop">
            <Items>
                <DxMenuItem Text="Add Form" IconCssClass="fa fa-add" Click="@AddNewForm" Enabled="@EditEnabled" />
                @*<DxMenuItem Text="Edit" IconCssClass="fa fa-pencil" Click="@addEdit" Enabled="@EditEnabled" />
                <DxMenuItem Text="Delete" IconCssClass="fa fa-remove" Click="@addDetailDelete" Enabled="@DeleteEnabled" /> *@
                <DxMenuItem Text="Form" IconCssClass="fa fa-wpforms" Click="@OpenNewForm" Enabled="@EditEnabled" />
                @* <DxMenuItem Text="OData Url" IconCssClass="fa fa-link" Click="@OpenOdataUrl" Enabled="@EditEnabled" /> *@
                <DxMenuItem Text="OData" IconCssClass="fa fa-link">
                    <Items>
                        <DxMenuItem Text="Copy Link" IconCssClass="fa fa-external-link-square" Click="@OpenOneOdataUrl" Enabled="@EditEnabled" />
                        <DxMenuItem Text="Empty Attr List" IconCssClass="fa fa-external-link" Click="@OpenEmptyOdataUrl" Enabled="@EditEnabled" />
                        @*  <DxMenuItem Text="Filter DropDown List" IconCssClass="fa fa-external-link" Click="@OpenFilterDropDownOdataUrl" Enabled="@EditEnabled" /> *@
                        <DxMenuItem Text="OData Url" IconCssClass="fa fa-external-link" Click="@OpenOdataUrl" Enabled="@EditEnabled" />
                        @* <DxMenuItem Text="OData Url 1" IconCssClass="fa fa-external-link" Click="@OpenOdataUrl1" Enabled="@EditEnabled" /> *@
                        <DxMenuItem Text="OData Url Paging" IconCssClass="fa fa-external-link" Click="@OpenOdataUrlPaging" Enabled="@EditEnabled" />
                    </Items>
                </DxMenuItem>
                <DxMenuItem Text="More" IconCssClass="fa fa-list">
                    <Items>
                        <DxMenuItem Text="Mail Merge" IconCssClass="fa fa-link" Click="@OpenMailMergeUrl" Enabled="@EditEnabled" />
                        <DxMenuItem Text="Export" IconCssClass="fa fa-file-excel" Click="@addExport" />
                    </Items>
                </DxMenuItem>
            </Items>
        </DxMenu>
    </div>
</div>
<DxLoadingPanel @bind-Visible="PanelVisible"
                IsContentBlocked="true"
                ApplyBackgroundShading="true"
                IndicatorAreaVisible="false"
                Text="Fetching Data...">
    <DxGrid @ref="Grid" Data="@_dynamicForm" EditMode="GridEditMode.EditForm" ShowGroupPanel="true" ShowGroupedColumns="true" ShowSearchBox="true"
            KeyFieldName="ID"
            FilterMenuButtonDisplayMode="GridFilterMenuButtonDisplayMode.Always"
            ColumnResizeMode="GridColumnResizeMode.NextColumn"
            PagerNavigationMode="PagerNavigationMode.InputBox"
            PageSize="20"
            style="height: calc(100vh - 220px);"
            CssClass="w-100"
            FocusedRowEnabled="true"
            AllowSelectRowByClick="true"
            RowClick="OnRowclick"
            CustomizeElement="Grid_CustomizeElement"
            AutoExpandAllGroupRows="true"
            SelectionMode="GridSelectionMode.Multiple"
            SelectAllCheckboxMode="GridSelectAllCheckboxMode.AllPages"
            VirtualScrollingEnabled="true"
            RowDoubleClick="OnRowDoubleClick">

        <Columns>
            <DxGridDataColumn FieldName="ScreenID" MinWidth="50" Caption="Screen Name" />
            <DxGridDataColumn FieldName="Name" MinWidth="50" Caption="Form Name">
                <CellDisplayTemplate>
                    @{
                        var item = (DynamicForm)context.DataItem;
                        var Names = item.Name;
                        Names += "<span class='formCountClass'>(" + item.FormDataCount + ")</span>";
                    }
                    @((MarkupString)Names)
                </CellDisplayTemplate>
            </DxGridDataColumn>
            <DxGridDataColumn FieldName="AddedBy" Caption="Added By" MinWidth="50" />
            <DxGridDataColumn FieldName="AddedDate" Caption="Added Date" MinWidth="50">
                <CellDisplayTemplate>
                    @{
                        var item = (DynamicForm)context.DataItem;
                        var startDate = string.Empty;
                        if (item.AddedDate != DateTime.MinValue)
                        {
                            startDate = item.AddedDate.ToString("dd-MMM-yyyy");
                        }
                    }
                    @startDate
                </CellDisplayTemplate>
            </DxGridDataColumn>
            <DxGridDataColumn FieldName="ModifiedBy" Caption="Modified By" MinWidth="50" />
            <DxGridDataColumn FieldName="ModifiedDate" Caption="Modified Date" MinWidth="50">
                <CellDisplayTemplate>
                    @{
                        var item = (DynamicForm)context.DataItem;
                        var startDate = string.Empty;
                        if (item.ModifiedDate.HasValue && item.ModifiedDate != DateTime.MinValue)
                        {
                            startDate = item.ModifiedDate?.ToString("dd-MMM-yyyy");
                        }
                    }
                    @startDate
                </CellDisplayTemplate>
            </DxGridDataColumn>
        </Columns>
        <TotalSummary>
            <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="Name" />
        </TotalSummary>
    </DxGrid>
</DxLoadingPanel>



<DxPopup @bind-Visible="@Blukdeletepopup"
         ShowFooter="true"
         ShowCloseButton="true"
         HeaderText="Delete"
         Closed="EulaPopupClosed"
         Width="300px">
    <BodyContentTemplate>
        <p>
            Do you want to delete
        </p>
    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">
        <DxButton style="margin-right: 10px;" RenderStyle="ButtonRenderStyle.Primary" Text="NO" Click="Context.CloseCallback" />
        <DxButton RenderStyle="ButtonRenderStyle.Secondary" Text="Yes" Click="((e) => bulkDelete(_selectedItems))" />
    </FooterContentTemplate>
</DxPopup>
<DxPopup @bind-Visible="@OdataAttrListpopup"
         ShowFooter="true"
         ShowCloseButton="true"
         HeaderText="Odata Attribute"
         Closed="EulaPopupClosed"
         Width="1500px">
    <BodyContentTemplate>
        <DynamicFormOdataAttrLists @ref="refDynamicFormOdataAttrLists" SessionId="_selectedItems?.SessionID" dynamicFormId="@_selectedItems?.ID"></DynamicFormOdataAttrLists>
    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">
        <DxButton RenderStyle="ButtonRenderStyle.Primary" Text="Close" Click="Context.CloseCallback" />
    </FooterContentTemplate>
</DxPopup>
@code {
    private DynamicFormOdataAttrLists refDynamicFormOdataAttrLists { get; set; }
    bool OdataAttrListpopup { get; set; } = false;
    IGrid? Grid { get; set; }
    bool PanelVisible { get; set; } = true;
    private List<DynamicForm> _dynamicForm;
    public ApplicationUser? applicationUser { get; private set; }
    private DynamicForm _selectedItems;
    bool EditEnabled { get; set; } = false;
    bool DeleteEnabled { get; set; } = false;
    bool Blukdeletepopup { get; set; } = false;
    protected override async Task OnInitializedAsync()
    {

        applicationUser = await _localStorageService.GetItem<ApplicationUser>("user");
        await UpdateDataAsync();
    }
    async Task UpdateDataAsync()
    {
        try
        {
            EditEnabled = false; DeleteEnabled = false;
            _dynamicForm = await Mediator.Send(new GetAllDynamicForm(0));
            PanelVisible = true;
            if (_dynamicForm != null && _dynamicForm.Count > 0)
            {
                _selectedItems = _dynamicForm.FirstOrDefault();
            }
            PanelVisible = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {

        }
    }
    async Task OpenOneOdataUrl()
    {
        // if (_selectedItems != null && _selectedItems.SessionId != null)
        // {
        //     var url = NavigationManager.BaseUri + "api/DynamicForm/GetDynamicFormOneDataList?DynamicFormSessionId=" + _selectedItems.SessionId;
        //     await JS.InvokeVoidAsync("window.open", url, "_blank");
        // }
        if (_selectedItems != null && _selectedItems.SessionID != null)
        {
            var url = NavigationManager.BaseUri + "api/DynamicForm/GetDynamicFormDataList?DynamicFormSessionId=" + _selectedItems.SessionID;
            await ClipboardService.WriteTextAsync(url);
            toastService.ShowToast("Copied", AC.SD.Core.Services.ToastLevel.Info);
        }
    }
    async Task OpenEmptyOdataUrl()
    {
        if (_selectedItems != null && _selectedItems.SessionID != null)
        {
            //var url = NavigationManager.BaseUri + "api/DynamicForm/GetDynamicFormAttributeItemList?DynamicFormSessionId=" + _selectedItems.SessionID;
            //await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
            OdataAttrListpopup = true;
        }
    }
    async Task OpenFilterDropDownOdataUrl()
    {
        if (_selectedItems != null && _selectedItems.SessionID != null)
        {
            var url = NavigationManager.BaseUri + "api/DynamicForm/GetDynamicFormDropdownList?DynamicFormSessionId=" + _selectedItems.SessionID;
            await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
        }
    }
    async Task OpenOdataUrlPaging()
    {
        if (_selectedItems != null && _selectedItems.SessionID != null)
        {
            var url = NavigationManager.BaseUri + "api/DynamicForm/GetDynamicFormDataListPaging?DynamicFormSessionId=" + _selectedItems.SessionID + "&&PageNo=1&&PageSize=50";
            await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
        }
    }
    async Task OpenOdataUrl1()
    {
        if (_selectedItems != null && _selectedItems.SessionID != null)
        {
            var url = NavigationManager.BaseUri + "api/DynamicForm/GetDynamicFormDataListItem?DynamicFormSessionId=" + _selectedItems.SessionID;
            await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
        }
    }
    async Task OpenOdataUrl()
    {
        if (_selectedItems != null)
        {
            var url = NavigationManager.BaseUri + "api/DynamicForm/GetDynamicFormDataList?DynamicFormSessionId=" + _selectedItems.SessionID;
            await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
        }
    }
    async Task OpenMailMergeUrl()
    {
        if (_selectedItems != null)
        {
            var url = NavigationManager.BaseUri + "DynamicMasterSetupList/dynamicFormMailMerge/" + _selectedItems.SessionID;
            await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
        }
    }
    void AddNewForm()
    {
        if (_selectedItems != null)
        {
            NavigationManager.NavigateTo("DynamicMasterSetupList/dynamicForms/" + _selectedItems.SessionID);
        }
    }
    void Grid_CustomizeElement(GridCustomizeElementEventArgs e)
    {
        if (e.ElementType == GridElementType.DataRow && e.VisibleIndex % 2 == 1)
        {
            e.CssClass = "alt-item";
        }
    }
    void OnRowclick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "ID");
        _selectedItems = _dynamicForm.FirstOrDefault(f => f.ID == (long?)UniqueId);
        EditEnabled = true;
        DeleteEnabled = true;
    }
    void OnRowDoubleClick(GridRowClickEventArgs e)
    {
        OnRowclick(e);
        NavigationManager.NavigateTo("DynamicMasterSetupList/dynamicFormList/" + _selectedItems.SessionID);
    }
    void OpenNewForm()
    {
        if (_selectedItems != null)
        {
            NavigationManager.NavigateTo("DynamicMasterSetupList/dynamicFormList/" + _selectedItems.SessionID);
        }
    }
    void addNew()
    {
        NavigationManager.NavigateTo("DynamicMasterSetup/DynamicMasterForm");
    }
    void addEdit()
    {
        if (_selectedItems != null)
        {
            NavigationManager.NavigateTo("DynamicMasterSetup/DynamicMasterForm/" + _selectedItems.SessionID);
        }
    }
    void addDetailDelete()
    {
        Blukdeletepopup = true;
    }
    async Task EulaPopupClosed(PopupClosedEventArgs args)
    {
        Blukdeletepopup = false;
        OdataAttrListpopup = false;
        await UpdateDataAsync();
    }
    async Task bulkDelete(DynamicForm dynamicForm)
    {
        var request = new DeleteDynamicForm(dynamicForm);
        await Mediator.Send(request);
        Blukdeletepopup = false;
        await UpdateDataAsync();



    }
    public async ValueTask DisposeAsync()
    {
        // System.GC.Collect();
        _dynamicForm?.Clear();
        _selectedItems = null;
        // Suppress finalization
        //GC.SuppressFinalize(this);
    }
    async Task addExport()
    {
        await Grid.ExportToXlsxAsync("Dynamic Form Master", new GridXlExportOptions()
        {
        });
    }
}
