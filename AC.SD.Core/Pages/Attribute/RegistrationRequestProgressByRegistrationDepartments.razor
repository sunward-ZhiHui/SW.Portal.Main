        <Columns>
            <DxGridDataColumn FieldName="RegistrationRequestProgressByRegistrationDepartmentId" Visible="false" />
            <DxGridDataColumn FieldName="ExpectedSubmissionDate" Caption="Actual Submission Date" MinWidth="40">
                <CellDisplayTemplate>
                    @{
                        var item = (RegistrationRequestProgressByRegistrationDepartment)context.DataItem;
                        var startDate = string.Empty;
                        if (item.ExpectedSubmissionDate != DateTime.MinValue)
                        {
                            if (item.ExpectedSubmissionDate != null)
                            {
                                startDate = item.ExpectedSubmissionDate.Value.ToString("dd-MMM-yyyy");
                            }
                        }
                    }
                    @startDate
                </CellDisplayTemplate>
            </DxGridDataColumn>
            <DxGridDataColumn FieldName="ExpectedApprovalDate" Caption="Expected Approval Date" MinWidth="40">
                <CellDisplayTemplate>
                    @{
                        var item = (RegistrationRequestProgressByRegistrationDepartment)context.DataItem;
                        var startDate = string.Empty;
                        if (item.ExpectedApprovalDate != DateTime.MinValue)
                        {
                            if (item.ExpectedApprovalDate != null)
                            {
                                startDate = item.ExpectedApprovalDate.Value.ToString("dd-MMM-yyyy");
                            }
                        }
                    }
                    @startDate
                </CellDisplayTemplate>
            </DxGridDataColumn>
            <DxGridDataColumn FieldName="ApprovalDate" Caption="Approval Date" MinWidth="40">
                <CellDisplayTemplate>
                    @{
                        var item = (RegistrationRequestProgressByRegistrationDepartment)context.DataItem;
                        var startDate = string.Empty;
                        if (item.ApprovalDate != DateTime.MinValue)
                        {
                            if (item.ApprovalDate != null)
                            {
                                startDate = item.ApprovalDate.Value.ToString("dd-MMM-yyyy");
                            }
                        }
                    }
                    @startDate
                </CellDisplayTemplate>
            </DxGridDataColumn>
            <DxGridDataColumn FieldName="CCCloseDate" Caption="CC Close Date" MinWidth="40">
                <CellDisplayTemplate>
                    @{
                        var item = (RegistrationRequestProgressByRegistrationDepartment)context.DataItem;
                        var startDate = string.Empty;
                        if (item.CCCloseDate != DateTime.MinValue)
                        {
                            if (item.CCCloseDate != null)
                            {
                                startDate = item.CCCloseDate.Value.ToString("dd-MMM-yyyy");
                            }
                        }
                    }
                    @startDate
                </CellDisplayTemplate>
            </DxGridDataColumn>

            @* <DxGridDataColumn FieldName="ModifiedBy" Caption="Modified By" MinWidth="50" />
            <DxGridDataColumn FieldName="ModifiedDate" Caption="Modified Date" Width="180" /> *@
            <DxGridCommandColumn Width="160px" Visible="false" />
        </Columns>
        <EditFormTemplate Context="EditFormContext">
            @{
                var types = (RegistrationRequestProgressByRegistrationDepartment)EditFormContext.EditModel;
            }
            <DxFormLayout CssClass="w-100">
                <DxFormLayoutItem Caption="Expected Submission Date" ColSpanMd="6">
                    <DxDateEdit NullText="Expected Submission Date" @bind-Date="@types.ExpectedSubmissionDate" />
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Expected Approval Date" ColSpanMd="6">
                    <DxDateEdit NullText="Expected Approval Date" @bind-Date="@types.ExpectedApprovalDate" />
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Approval Date" ColSpanMd="6">
                    <DxDateEdit NullText="Approval Date" @bind-Date="@types.ApprovalDate" />
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="CC Close Date" ColSpanMd="6">
                    <DxDateEdit NullText="CC Close Date" @bind-Date="@types.CCCloseDate" />
                </DxFormLayoutItem>


            </DxFormLayout>
        </EditFormTemplate>

        <TotalSummary>
            <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="ExpectedSubmissionDate" />
        </TotalSummary>
    </DxGrid>
</DxLoadingPanel>

<DxPopup @bind-Visible="@Blukdeletepopup"
         ShowFooter="true"
         HeaderText="Delete"
         Closed="EulaPopupClosed"
         ShowCloseButton="true"
         Width="300px">
    <BodyContentTemplate>
        <p>
            Do you want to delete?
        </p>
    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">
        <DxButton style="margin-right: 10px;" RenderStyle="ButtonRenderStyle.Primary" Text="NO" Click="Context.CloseCallback" />
        <DxButton RenderStyle="ButtonRenderStyle.Secondary" Text="Yes" Click="bulkDelete" />
    </FooterContentTemplate>
</DxPopup>
<DxPopup @bind-Visible="@ComittmentLetterPopUp"
         ShowFooter="false"
         ShowCloseButton="true"
         HeaderText="Comittment Letter"
         CloseOnOutsideClick="false"
         CloseOnEscape="false"
         Closed="EulaPopupClosed"
         Width="1000px">
    <BodyContentTemplate>
        <RegistrationRequestComittmentLetters  _registrationRequestDatas="@_registrationRequestData" applicationUser="@applicationUser" _registrationRequestData="@_selectedItems"></RegistrationRequestComittmentLetters>
    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">

    </FooterContentTemplate>
</DxPopup>
<DxPopup @bind-Visible="@QueriesPopUp"
         ShowFooter="false"
         ShowCloseButton="true"
         HeaderText="Queries for by authority for the submission"
         CloseOnOutsideClick="false"
         CloseOnEscape="false"
         Closed="EulaPopupClosed"
         Width="1000px">
    <BodyContentTemplate>
        <RegistrationRequestQueriess  _registrationRequestDatas="@_registrationRequestData" applicationUser="@applicationUser" _registrationRequestData="@_selectedItems"></RegistrationRequestQueriess>
    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">

    </FooterContentTemplate>
</DxPopup>
@code {
    bool QueriesPopUp { get; set; } = false;
    bool ComittmentLetterPopUp { get; set; } = false;
    private List<ViewDepartment> _departmentItems;
    [Parameter]
    public RegistrationRequest _registrationRequestData { get; set; }

    bool PanelVisible { get; set; }
    IReadOnlyList<object> SelectedDataItems { get; set; }
    private string gridHeight = "calc(100vh - 230px - 143px)";
    private List<RegistrationRequestProgressByRegistrationDepartment>? _dynamicFormSectionData;
    IGrid? SMGrid { get; set; }
    private RegistrationRequestProgressByRegistrationDepartment _selectedItems;
    bool DeleteEnabled { get; set; } = false;
    bool ExportSelectedRowsOnly { get; set; }
    DxPopup? popup;
    bool PopupVisible { get; set; } = false;
    string? errorMessage;
    string? DeleteerrorMessage;
    bool MessageVisible { get; set; }
    string MessageHeader = "Error";
    string MessageBody = "";
    private bool loading;
    bool Blukdeletepopup { get; set; } = false;
    bool EditEnabled { get; set; } = false;
    bool AddEnabled { get; set; } = false;
    private RegistrationRequestProgressByRegistrationDepartment _selectlst;
    [Parameter]
    public ApplicationUser applicationUser { get; set; }
    protected override async Task OnInitializedAsync()
    {
        _departmentItems = await Mediator.Send(new GetAllDepartmentQuery());

        await UpdateDataAsync();
    }
    public async Task loadChildData(RegistrationRequest dynamicFormIds)
    {
        _registrationRequestData = dynamicFormIds;
        await UpdateDataAsync();
    }
    async Task Grid_CustomizeEditModel(GridCustomizeEditModelEventArgs e)
    {
        var navitems = (RegistrationRequestProgressByRegistrationDepartment)e.EditModel;
        if (e.IsNew)
        {
        }
        else
        {
        }
    }
    async Task UpdateDataAsync()
    {
        try
        {
            PanelVisible = true; AddEnabled = false;
            EditEnabled = false; DeleteEnabled = false;
            if (_registrationRequestData != null && _registrationRequestData.RegistrationRequestId > 0)
            {
                AddEnabled = true;
                _dynamicFormSectionData = await Mediator.Send(new GetRegistrationRequestProgressByRegistrationDepartment(_registrationRequestData.RegistrationRequestId));
                if (_dynamicFormSectionData.Count > 0)
                {
                    _selectedItems = _dynamicFormSectionData.FirstOrDefault();
                    EditEnabled = true;
                    DeleteEnabled = true;
                }
            }
            else
            {
                _dynamicFormSectionData = new List<RegistrationRequestProgressByRegistrationDepartment>();
            }
            PanelVisible = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {

        }
    }
    void OnCustomizeCell(GridExportCustomizeCellEventArgs args)
    {
        if (args.ColumnFieldName == "ContactName" && args.AreaType == SheetAreaType.DataArea)
            args.Formatting.Font = new XlCellFont() { Italic = true };
        args.Handled = true;
    }

    async Task OnEditModelSaving(GridEditModelSavingEventArgs e)
    {

        var editModel = (RegistrationRequestProgressByRegistrationDepartment)e.EditModel;

        if (e.IsNew)
        {
            var createReq = new InsertorUpdateRegistrationRequestProgressByRegistrationDepartment
                {
                    ExpectedApprovalDate = editModel.ExpectedApprovalDate,
                    ExpectedSubmissionDate = editModel.ExpectedSubmissionDate,
                    CCCloseDate = editModel.CCCloseDate,
                    ApprovalDate = editModel.ApprovalDate,
                    RegistrationRequestId = _registrationRequestData.RegistrationRequestId,
                    SessionId = Guid.NewGuid(),
                    AddedByUserId = applicationUser.UserID,
                    ModifiedUserId = applicationUser.UserID,
                    ModifiedDate = DateTime.Now,
                    StatusCodeId = 1,
                    AddedDate = DateTime.Now,
                };
            try
            {
                var result = await Mediator.Send(createReq);
                toastService.ShowToast("Record save Successfully", AC.SD.Core.Services.ToastLevel.Success);
            }
            catch (Exception eq)
            {

                errorMessage = eq.Message;
                PopupVisible = true;

            }
            await UpdateDataAsync();


        }
        else
        {
            var UpdateReq = new InsertorUpdateRegistrationRequestProgressByRegistrationDepartment
                {
                    ExpectedApprovalDate = editModel.ExpectedApprovalDate,
                    ExpectedSubmissionDate = editModel.ExpectedSubmissionDate,
                    CCCloseDate = editModel.CCCloseDate,
                    ApprovalDate = editModel.ApprovalDate,
                    RegistrationRequestId = _registrationRequestData.RegistrationRequestId,
                    RegistrationRequestProgressByRegistrationDepartmentId = editModel.RegistrationRequestProgressByRegistrationDepartmentId,
                    SessionId = Guid.NewGuid(),
                    AddedByUserId = editModel.AddedByUserId,
                    ModifiedUserId = applicationUser.UserID,
                    ModifiedDate = DateTime.Now,
                    StatusCodeId = 1,
                    AddedDate = editModel.AddedDate,
                };
            var result = await Mediator.Send(UpdateReq);
            toastService.ShowToast("Record Updated Successfully", AC.SD.Core.Services.ToastLevel.Success);
            await UpdateDataAsync();

        }

    }
    private async void onShowPopupMessage(string headerText, string bodyText)
    {

        MessageVisible = true;
        MessageBody = bodyText;
        MessageHeader = headerText;
        loading = false;
        StateHasChanged();
    }
    async void ClosePopup()
    {
        SelectedDataItems = null;
        Blukdeletepopup = false;
        PopupVisible = false;
    }
    void EulaPopupClosed(PopupClosedEventArgs args)
    {
        SelectedDataItems = null;
        Blukdeletepopup = false;
        PopupVisible = false; ComittmentLetterPopUp = false; QueriesPopUp = false;
    }
    async Task OnDeleteDataItem(GridDataItemDeletingEventArgs e)
    {
        try
        {
            var editModel = (RegistrationRequestProgressByRegistrationDepartment)e.DataItem;
            var request = new DeleteRegistrationRequestProgressByRegistrationDepartment(editModel);
            await Mediator.Send(request);
            await UpdateDataAsync();
            SMGrid.SetFocusedRowIndex(0);
        }
        catch (Exception ex)
        {

        }
    }
    void Grid_CustomizeElement(GridCustomizeElementEventArgs e)
    {
        if (e.ElementType == GridElementType.DataRow && e.VisibleIndex % 2 == 1)
        {
            e.CssClass = "alt-item";
        }

    }
    void Onclick(DataGridSelection<RegistrationRequestProgressByRegistrationDepartment> e)
    {
    }

    void OnRowClick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "RegistrationRequestProgressByRegistrationDepartmentId");
        _selectedItems = _dynamicFormSectionData.FirstOrDefault(f => f.RegistrationRequestProgressByRegistrationDepartmentId == (long?)UniqueId);
        DeleteEnabled = true;
        StateHasChanged();

    }
    void OnRowDoubleClick(GridRowClickEventArgs e)
    {
        OnRowClick(e);
        addEdit();
    }
    void addNew()
    {
        SMGrid.StartEditNewRowAsync();

    }
    void addQueries()
    {
        QueriesPopUp = true;
    }
    void addComittmentLetter()
    {
        ComittmentLetterPopUp = true;
    }
    void addEdit()
    {
        if (SelectedDataItems != null)
        {

            if (SelectedDataItems.Count == 1)
            {

                foreach (object item in SelectedDataItems)
                {
                    if (item is RegistrationRequestProgressByRegistrationDepartment dataselectItems)
                    {
                        _selectlst = _dynamicFormSectionData.FirstOrDefault(f => f.RegistrationRequestProgressByRegistrationDepartmentId == dataselectItems.RegistrationRequestProgressByRegistrationDepartmentId);
                    }
                }
                SMGrid.StartEditDataItemAsync(_selectlst);
            }
            else
            {
                SMGrid.StartEditDataItemAsync(_selectedItems);
            }
        }

    }
    void addDelete()
    {
        Blukdeletepopup = true;
    }
    async Task bulkDelete()
    {
        try
        {
            if (SelectedDataItems != null)
            {
                foreach (object item in SelectedDataItems)
                {
                    if (item is RegistrationRequestProgressByRegistrationDepartment selectData)
                    {

                        var request = new DeleteRegistrationRequestProgressByRegistrationDepartment(selectData);
                        await Mediator.Send(request);
                        Blukdeletepopup = false;
                        toastService.ShowToast("Record deleted Successfully", AC.SD.Core.Services.ToastLevel.Success);
                        SMGrid.SetFocusedRowIndex(0);
                    }

                }
            }
        }
        catch (Exception eq)
        {
            Blukdeletepopup = false;
            toastService.ShowToast("The Selected Record Do not deleted", AC.SD.Core.Services.ToastLevel.Error);
        }

        await UpdateDataAsync();


    }
    void SelectedDataItemsChanged(IReadOnlyList<object> SelectedToItems)
    {
        SelectedDataItems = SelectedToItems;
        if (SelectedDataItems.Count > 1)
        {
            EditEnabled = false;
        }
        else
        {
            EditEnabled = true;
        }

    }

    public async ValueTask DisposeAsync()
    {

    }
}
