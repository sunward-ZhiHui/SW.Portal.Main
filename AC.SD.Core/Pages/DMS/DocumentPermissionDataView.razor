@using global::Core.EntityModels;
@implements IDisposable
@if (documentPermissionData != null)
{
    <DxFormLayout CssClass="w-100">
        <DxFormLayoutGroup Caption="Folder Permission" ColSpanMd="12">
        <DxFormLayoutItem Caption="Create Folder" ColSpanMd="6">
            <DxCheckBox @bind-Checked="@documentPermissionData.IsCreateFolder" Enabled="false" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Edit Folder" ColSpanMd="6">
            <DxCheckBox @bind-Checked="@documentPermissionData.IsEditFolder" Enabled="false" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Delete Folder" ColSpanMd="6">
            <DxCheckBox @bind-Checked="@documentPermissionData.IsDeleteFolder" Enabled="false" />
        </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Grand Security Permission" ColSpanMd="6" >
                <DxCheckBox @bind-Checked="@documentPermissionData.IsGrantAdminPermission" Enabled="false" />
        </DxFormLayoutItem>
        </DxFormLayoutGroup>
        <DxFormLayoutGroup Caption="Document Permission" ColSpanMd="12">
        <DxFormLayoutItem Caption="Create Document" ColSpanMd="6">
            <DxCheckBox @bind-Checked="@documentPermissionData.IsCreateDocument" Enabled="false" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Reserve Profile Number Series" ColSpanMd="6">
            <DxCheckBox @bind-Checked="@documentPermissionData.IsReserveProfileNumber" Enabled="false" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Read" ColSpanMd="6">
            <DxCheckBox @bind-Checked="@documentPermissionData.IsRead" Enabled="false" />
        </DxFormLayoutItem>


        <DxFormLayoutItem Caption="Edit" ColSpanMd="6">
            <DxCheckBox @bind-Checked="@documentPermissionData.IsEdit" Enabled="false" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Rename" ColSpanMd="6">
            <DxCheckBox @bind-Checked="@documentPermissionData.IsRename" Enabled="false" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Check Out" ColSpanMd="6">
            <DxCheckBox @bind-Checked="@documentPermissionData.IsUpdateDocument" Enabled="false" />
        </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Copy Link" ColSpanMd="6">
                <DxCheckBox @bind-Checked="@documentPermissionData.IsCopy" Enabled="false" />
            </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Share" ColSpanMd="6">
            <DxCheckBox @bind-Checked="@documentPermissionData.IsShare" Enabled="false" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Move" ColSpanMd="6">
            <DxCheckBox @bind-Checked="@documentPermissionData.IsMove" Enabled="false" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Delete" ColSpanMd="6">
            <DxCheckBox @bind-Checked="@documentPermissionData.IsDelete" Enabled="false" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="History" ColSpanMd="6">
            <DxCheckBox @bind-Checked="@documentPermissionData.IsListVersion" Enabled="false" />
        </DxFormLayoutItem>
        @*  <DxFormLayoutItem Caption="Invitation" ColSpanMd="6">
    <DxCheckBox @bind-Checked="@documentPermissionData.IsInvitation" Enabled="false" />
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption="Document Notes" ColSpanMd="6">
    <DxCheckBox @bind-Checked="@documentPermissionData.IsDiscussion" Enabled="false" />
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption="Enable Document Status" ColSpanMd="6">
    <DxCheckBox @bind-Checked="@documentPermissionData.IsDocumentAccess" Enabled="false" />
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption="Enable Create Task" ColSpanMd="6">
    <DxCheckBox @bind-Checked="@documentPermissionData.IsCreateTask" Enabled="false" />
    </DxFormLayoutItem> *@
        <DxFormLayoutItem Caption="Enable Info" ColSpanMd="6">
            <DxCheckBox @bind-Checked="@documentPermissionData.IsEnableProfileTypeInfo" Enabled="false" />
        </DxFormLayoutItem>
        </DxFormLayoutGroup>
    </DxFormLayout>
}
else
{
    <span>No Permission Found</span>
}

@code {
    [Parameter]
    public DocumentPermissionModel? documentPermissionData { get; set; }
    public void Dispose()
    {
        GC.SuppressFinalize(this);
    }
}
