                                  Enabled="@isEnabled"
                                  CssClass="dx-demo-radio-group" />
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Users" ColSpanMd="6" Visible="UserEnabled">
                    <DxTagBox Data="_usersList"
