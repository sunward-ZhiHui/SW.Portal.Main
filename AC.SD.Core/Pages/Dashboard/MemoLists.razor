            <DxGridDataColumn FieldName="AddedDate" Caption="AddedDate" Width="30%" />
            <DxGridDataColumn FieldName="AddedByUser" Caption="AddedBy" Width="30%" />
            <DxGridDataColumn FieldName="StatusCode" Caption="Memo Status" Width="30%" />
        </Columns>
