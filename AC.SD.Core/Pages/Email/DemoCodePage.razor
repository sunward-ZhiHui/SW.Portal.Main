<div>
    <!-- Overlay -->
    <div class="overlay @((IsDrawerOpen ? "active" : ""))" @onclick="CloseDrawer"></div>

    <!-- Drawer -->
    <div class="drawer @((IsDrawerOpen ? "open" : ""))">
        <div class="drawer-header">
            <h3>Drawer Title</h3>
            <button class="close-btn" @onclick="CloseDrawer">X</button>
        </div>
        <div class="drawer-content">
            @DrawerContent
        </div>
    </div>
</div>

@code {
    [Parameter] public RenderFragment? DrawerContent { get; set; } // Content to display in the drawer
    [Parameter] public EventCallback<bool> OnDrawerClose { get; set; } // Event for drawer close

    private bool IsDrawerOpen { get; set; } = false;

    public void OpenDrawer()
    {
        IsDrawerOpen = true;
    }

    private async Task CloseDrawer()
    {
        IsDrawerOpen = false;
        await OnDrawerClose.InvokeAsync(false);
    }
}
