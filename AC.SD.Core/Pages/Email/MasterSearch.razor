    private string BuildSubjectFilterSQL(List<SubjectFilterModel> filters)
    {
        if (filters == null || filters.Count == 0)
            return null;

        var clauses = new List<string>();

        foreach (var filter in filters)
        {
            var condition = string.IsNullOrWhiteSpace(filter.SubjectCondition) ? "AND" : filter.SubjectCondition.ToUpper();
            var subject = filter.BySubject?.Replace("'", "''"); // Escape single quotes

            var clause = filter.SubjectLike switch
            {
                "=" => $"{condition} (TS.TopicName = '{subject}' OR EC.Name = '{subject}')",
                "<>" => $"{condition} (TS.TopicName <> '{subject}' AND EC.Name <> '{subject}')",
                "contains" => $"{condition} (TS.TopicName LIKE '%{subject}%' OR EC.Name LIKE '%{subject}%')",
                _ => null
            };

            if (!string.IsNullOrWhiteSpace(clause))
                clauses.Add(clause);
        }

        var subjectFilterSQL = string.Join(" ", clauses);

        if (subjectFilterSQL.StartsWith("AND "))
            subjectFilterSQL = subjectFilterSQL.Substring(4);
        else if (subjectFilterSQL.StartsWith("OR "))
            subjectFilterSQL = subjectFilterSQL.Substring(3);

        return subjectFilterSQL;
    }


