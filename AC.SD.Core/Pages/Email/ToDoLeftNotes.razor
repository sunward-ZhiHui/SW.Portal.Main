        }
    }

    void OnRowClick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "ID");
        _selectedItems = _toDoNotes.FirstOrDefault(f => f.ID == (long?)UniqueId);
        DeleteEnabled = true;
        LeftDeleteEnabled = true;
        NotesId?.Invoke((long)UniqueId);
        if (_selectedItems.Completed == "Completed" )
        {
            Incomplete = true;
            Complete = false;
        }
        else
        {
            Complete = true;
            Incomplete = false;
        }
        StateHasChanged();
    }
    void OnRowDoubleClick(GridRowClickEventArgs e)
    {
        OnRowClick(e);
        addEdit();

    }
    void addNew()
    {
        if (Grid != null)
        {
            NotesName = "";
            Grid.StartEditNewRowAsync();
        }


