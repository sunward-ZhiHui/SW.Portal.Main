<div class="card w-100" style="margin-bottom:10px;">
    <div class="card-body p-0">
        <DxMenu CollapseItemsToHamburgerMenu="true"
                CollapseItemToIconMode="MenuCollapseItemToIconMode.Sequentially"
                DisplayMode="MenuDisplayMode.Desktop">
            <Items>
                <DxMenuItem Text="@AddText" IconCssClass="fa fa-add" Click="@addNew"/>
                <DxMenuItem Text="@EditText" IconCssClass="fa fa-pencil" Click="@addEdit" Enabled="@EditEnabled" />
                <DxMenuItem Text="@deleteText" IconCssClass="fa fa-remove" Click="@addLeftDelete" Enabled="@LeftDeleteEnabled" />
                <DxMenu Visible="@Complete">
             

                    <Items>
                       
                        <DxMenuItem Text="@CompleteText" IconCssClass="fa fa-check" Click="@addDelete" style="@CompeleteStyle" />
                    </Items>
                </DxMenu>

                <DxMenu Visible="@Incomplete">
                    <Items>
                        <DxMenuItem Text="@ReopenText" IconCssClass="fa fa-check-square" Click="@onIncomplete" style="@CompeleteStyle" />
                    </Items>
                </DxMenu>


             @*   <DxMenuItem Text="Completed" IconCssClass="fa fa-check-square" Click="@addDelete" Enabled=@DeleteEnabled />

                <DxMenuItem Text="InCompleted" IconCssClass="fa fa-check-square" Click="@onIncomplete" Enabled=@DeleteEnabled />*@
                @*<DxMenuItem Text="Export" IconCssClass="fa fa-file-excel" Click="@ExportToExcel" />*@
            </Items>
        </DxMenu>
    </div>
</div>

<DxPopup @ref="popup" HeaderText="CRT" ShowCloseButton="true" @bind-Visible="@PopupVisible">
    <div class="text-center">
        <p>@DeleteerrorMessage</p>
        <DxButton Text="OK" Click="@(() => ClosePopup())" />
    </div>
</DxPopup>


<DxLoadingPanel @bind-Visible="PanelVisible"
                IsContentBlocked="true"
                ApplyBackgroundShading="true"
                IndicatorAreaVisible="false"
                Text="Fetching Data...">
  @*  style="height: calc(100vh - 200px);min-height:350px !important;"*@
  

    <DxGrid @ref="Grid" Data="@_toDoNotes"  EditModelSaving="@OnEditModelSaving" DataItemDeleting="@OnDeleteDataItem" EditMode="GridEditMode.EditForm" 
          
            FilterMenuButtonDisplayMode="GridFilterMenuButtonDisplayMode.Always"
            KeyFieldName="ID"
            CustomizeElement="Grid_CustomizeElement"
            PagerNavigationMode="PagerNavigationMode.InputBox"
            PageSizeSelectorVisible="true"
            PageSizeSelectorAllRowsItemVisible="true"
            PageSizeSelectorItems="@(new int[] { 5,10,20 })"
            PageSize="20"
            ValidationEnabled="true"
            AutoExpandAllGroupRows="true"
            CssClass="w-100" style="@gridHeight"
            RowClick="OnRowClick"
            ColumnResizeMode="GridColumnResizeMode.NextColumn"
            AllowSelectRowByClick="true" SelectedDataItemsChanged="@SelectedDataItemsChanged" VirtualScrollingEnabled="true">
        <Columns>
            <DxGridDataColumn FieldName="Notes" Caption="">
                <CellDisplayTemplate>
                    @{
                        var item = (ToDoNotes)context.DataItem;
                    }
                    <div style="width:100%">
                        <strong>
                            @item.Notes
                        </strong>
                        <div>
                            <span style="float:right; font-size:11px;"> @Application.Common.Helper.Helper.FormatDateTime(item.AddedDate)</span>
                            @*<text>@item.Notes</text>*@
                        </div>
                    </div>
                </CellDisplayTemplate>
            </DxGridDataColumn>           
            <DxGridDataColumn FieldName="Completed" Caption=" " SortOrder="GridColumnSortOrder.Descending" GroupIndex="0" Width="10%">
                <GroupRowTemplate>
                    @*<text>@context.DataColumn.FieldName =  @context.GroupValue</text>  *@

                    @if ((string)context.GroupValue == "Open")
                    {
                        <text>Open</text>
                    }
                    else
                    {
                        <text>Completed</text>
                    }
                </GroupRowTemplate>
            </DxGridDataColumn>
            <DxGridCommandColumn Width="160px" Visible="false" />
        </Columns>
        @*  @bind-SelectedDataItems="SelectedDataItems"     SelectedItemChanged="@((AttributeHeader plant) => SelectedItemChanged(plant))"*@
        <EditFormTemplate Context="EditFormContext">
            @{
                var types = (ToDoNotes)EditFormContext.EditModel;
            }
            <DxFormLayout CssClass="w-100">
                <DxFormLayoutItem Caption="Notes:" ColSpanMd="12">
               @*      <DxTextBox @bind-Text="@types.Notes" /> *@
                    <DxComboBox Data="@_NotesLst"
                                
                                NullText="Select Notes..."
                                ListRenderMode="ListRenderMode.Virtual"
                                AllowUserInput = "true"
                                SearchMode="ListSearchMode.AutoSearch"
                                SearchFilterCondition="ListSearchFilterCondition.Contains"
                                TextFieldName="Notes"
                                ValueFieldName="Notes"
                                ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                    @bind-Value="types.Notes"
                    @bind-Text="@NotesName" ShowValidationIcon="true">
                    </DxComboBox>
                    <ValidationMessage For="@(() => NotesName)" />
                </DxFormLayoutItem>               
                <ValidationSummary />
            </DxFormLayout>
        </EditFormTemplate>
    </DxGrid>
</DxLoadingPanel>

<DxPopup @bind-Visible="@IncompletePopup"
         ShowFooter="true"
         HeaderText="CRT"
         Closed="EulaPopupClosed"
         Width="300px">
    <BodyContentTemplate>
        <p>
            Do you want to Re-Open
        </p>
    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">
        <DxButton style="margin-right: 10px;" RenderStyle="ButtonRenderStyle.Primary" Text="NO" Click="Context.CloseCallback" />
        <DxButton RenderStyle="ButtonRenderStyle.Secondary" Text="Yes" Click="@((e) => onInCompleteAction(_selectedItems.ID))" />
    </FooterContentTemplate>
</DxPopup>

<DxPopup @bind-Visible="@Blukdeletepopup"
         ShowFooter="true"
         HeaderText="CRT"
         Closed="EulaPopupClosed"
         Width="300px">
    <BodyContentTemplate>
        <p>
            Do you want to Complete
        </p>
    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">
        <DxButton style="margin-right: 10px;" RenderStyle="ButtonRenderStyle.Primary" Text="NO" Click="Context.CloseCallback" />
        <DxButton RenderStyle="ButtonRenderStyle.Secondary" Text="Yes" Click="bulkDelete" />
    </FooterContentTemplate>
</DxPopup>

<DxPopup @bind-Visible="@deletepopup"
         ShowFooter="true"
         HeaderText="CRT"
         Closed="EulaPopupClosed"
         Width="300px">
    <BodyContentTemplate>
        <p>
            Do you want to Delete
        </p>
    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">
        <DxButton style="margin-right: 10px;" RenderStyle="ButtonRenderStyle.Primary" Text="NO" Click="Context.CloseCallback" />
        <DxButton RenderStyle="ButtonRenderStyle.Secondary" Text="Yes" Click="OnDelete" />
    </FooterContentTemplate>
</DxPopup>
