        args.Handled = true;
    }


    async Task OnEditModelSaving(GridEditModelSavingEventArgs e)
    {

        if (string.IsNullOrEmpty(NotesName))
        {
            toastService.ShowToast("Please Enter or Select Notes", AC.SD.Core.Services.ToastLevel.Error);
            return;
        }


        var editModel = (ToDoNotes)e.EditModel;

        if (e.IsNew)
        {
            //var ex = _toDoNotes.Where(x => x.Notes == editModel.Notes);
            //if (ex.Any())
            //{
            //    toastService.ShowToast("The entered value Already exists Notes.", AC.SD.Core.Services.ToastLevel.Error);
            //}          

            var createReq = new CreateToDoNotesQuery
                    {                        
                        Notes = NotesName,
                        StatusCodeID = 1,
                        AddedByUserID = applicationUser.UserID,
                        ModifiedByUserID = applicationUser.UserID,
                        TopicId = Topicid,
                        AddedDate = DateTime.Now,
                        ModifiedDate = DateTime.Now,
                        SessionId = Guid.NewGuid(),
                        IsDelete = false
                    };

            try
            {
                var result = await Mediator.Send(createReq);
                toastService.ShowToast("Record save Successfully", AC.SD.Core.Services.ToastLevel.Success);
            }
            catch (Exception eq)
            {
                toastService.ShowToast(eq.Message, AC.SD.Core.Services.ToastLevel.Error);
            }

            await UpdateDataAsync();


        }
        else
        {
            //var ex = _toDoNotes.Where(x => x.Notes == editModel.Notes && x.ID != editModel.ID);
            //if (ex.Any())
            //{
            //    toastService.ShowToast("The entered value Already exists.", AC.SD.Core.Services.ToastLevel.Error);
            //}

            var UpdateReq = new EditToDoNotesQuery
                    {
                        ID = editModel.ID,                       
                        Notes = NotesName,
                        AddedByUserID = editModel.AddedByUserID,
                        StatusCodeID = editModel.StatusCodeID,
                        TopicId=Topicid,
                        ModifiedByUserID = applicationUser.UserID,
                        ModifiedDate = DateTime.Now,
                        AddedDate = editModel.AddedDate,
                        SessionId = editModel.SessionId,
                        IsDelete = false

                    };

            var ans = await Mediator.Send(UpdateReq);
            toastService.ShowToast("Record Updated Successfully", AC.SD.Core.Services.ToastLevel.Success);
            await UpdateDataAsync();
        }

    }

