    async Task OnEditModelSaving(GridEditModelSavingEventArgs e)
    {

        var editModel = (ToDoNotesHistory)e.EditModel;

        if (e.IsNew)
        {
            var ex = _ToDoNotesHistory.Where(x => x.Description == editModel.Description);
            if (ex.Any())
