    async Task bulkDelete()
    {
        try
        {
            if (SelectedDataItems != null)
            {
                foreach (object item in SelectedDataItems)
                {

                    if (item is ToDoNotesHistory ToDoNotesHistory)
                    {
                        var request = new DeleteToDoNotesHistoryQuery(ToDoNotesHistory.ID);
