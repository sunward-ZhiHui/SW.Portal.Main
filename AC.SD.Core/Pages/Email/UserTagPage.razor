                        </DxFormLayoutItem>
                        <ValidationSummary />
                    </DxFormLayout>
                </EditFormTemplate>
                <TotalSummary>
                    <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="Notes" />
                </TotalSummary>
