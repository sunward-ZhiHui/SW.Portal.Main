</DxPopup>

<DxPopup @bind-Visible="@deletepopup"
         ShowFooter="true"
         HeaderText="CRT"
         Closed="EulaPopupClosed"
         Width="300px">
    <BodyContentTemplate>
        <p>
            Deleting this record will remove all associated data.
        </p>
    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">
        <DxButton style="margin-right: 10px;" RenderStyle="ButtonRenderStyle.Primary" Text="NO" Click="Context.CloseCallback" />
        <DxButton RenderStyle="ButtonRenderStyle.Secondary" Text="Yes" Click="OnDelete" />
    </FooterContentTemplate>
</DxPopup>
@code {
    IReadOnlyList<object> SelectedDataItems { get; set; }
    IGrid? UsersSubGrid { get; set; }
    bool PanelVisible { get; set; }
    IGrid? UserGrid { get; set; }
    public bool UsersListpopup { get; set; } = false;
    internal List<EmailActivityCatgorys>? _userTags;
    public List<EmailActivityCatgorys>? _UsersList;
    public ApplicationUser? applicationUser { get; private set; }
    bool EditEnabled { get; set; } = false;
    bool DeleteEnabled { get; set; } = false;
    private EmailActivityCatgorys _selectedItems;
    public EmailActivityCatgorys _usersselectedItems;
    public bool deletepopup { get; set; } = false;
    public bool UsersDeleteEnable { get; set; }= false;
    public bool UsersEditEnable { get; set; } = false;
    protected override async Task OnInitializedAsync()
    {
        PageContext.PageName = "EmailUserTagsPage";

        applicationUser = await _localStorageService.GetItem<ApplicationUser>("user");
        await UpdateDataAsync();
    }
    async Task UpdateDataAsync()
    {
        PanelVisible = true;
        _userTags = await Mediator.Send(new GetAllUserActivityCatgorys(applicationUser.UserID));
        PanelVisible = false;
    }
    void OnRowClick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "UserTag");
        _selectedItems = _userTags.FirstOrDefault(f => f.UserTag == UniqueId);
        EditEnabled = true;
        DeleteEnabled = true;
        StateHasChanged();

    }
    void OnUsersRowClick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "MultipleID");
        _usersselectedItems = _UsersList?.FirstOrDefault(f => f.MultipleID == (long?)UniqueId);
       
        UsersEditEnable = true;
        StateHasChanged();
       
    }
    void Grid_CustomizeElement(GridCustomizeElementEventArgs e)
    {
        if (e.ElementType == GridElementType.DataRow && e.VisibleIndex % 2 == 1)
        {
            e.CssClass = "alt-item";
        }

    }
    async Task Grid_EditModelSaving(GridEditModelSavingEventArgs e)
    {
        var editmodel = (EmailActivityCatgorys)e.EditModel;
        if (e.IsNew)
        {
            var UpdateReq = new CreateUserTag
                {
                    TopicId = 0,
                    //UserTag = dataUserTag.UserTag,
                    UserTag = editmodel.UserTag,
                    AddedByUserID = applicationUser.UserID,
                    AddedDate = DateTime.Now
            };

            var result = await Mediator.Send(UpdateReq);

            toastService.ShowToast("Record Added Successfully", AC.SD.Core.Services.ToastLevel.Success);
        }
        else
        {
            var request = await Mediator.Send(new EditUserTagQery(_selectedItems.UserTag, editmodel.UserTag));



            toastService.ShowToast("Record updated Successfully", AC.SD.Core.Services.ToastLevel.Success);

        }
        await UpdateDataAsync();
    }
    void addUseredit()
    {
        UserGrid?.StartEditDataItemAsync(_selectedItems);
    }
    async void addDelete()
    {
        await UsersList();
        UsersListpopup = true;
        StateHasChanged();
    }
    void addNew()
    {

        if (UserGrid != null)
        {
            UserGrid.StartEditNewRowAsync();
        }
    }
    async void EulaPopupClosed(PopupClosedEventArgs args)
    {
        UsersListpopup = false;
        deletepopup = false;
    }
    public async void OnDelete()
    {
        if(_usersselectedItems != null)
        {
            var userTagCount = await Mediator.Send(new GetAllUserlistQuery(_usersselectedItems.UserTagID.Value));
            if (userTagCount.Count > 1)
            {
                var request = new DeleteUserTagQery(_usersselectedItems.TopicId, _usersselectedItems.AddedByUserID.Value,_usersselectedItems.UserTagID.Value);
                await Mediator.Send(request);
              
            }
            else
            {
                var request = new DeleteuserallTagQery(_usersselectedItems.ID, _usersselectedItems.AddedByUserID.Value, _usersselectedItems.UserTagID.Value);
                await Mediator.Send(request);
            }
        }
       
        await UpdateDataAsync();

        toastService.ShowToast("Record Deleted Successfully", AC.SD.Core.Services.ToastLevel.Success);
        deletepopup = false;
        StateHasChanged();
    }
    async Task Grid_OthersEditModelSaving(GridEditModelSavingEventArgs e)
    {
        var editmodel = (EmailActivityCatgorys)e.EditModel;
        if (e.IsNew)
        {
        }
        else
        {

          //  var request = await Mediator.Send(new EditOtherQery(_OthersselectedItems.ID, editmodel.Name, applicationUser.UserID));



            toastService.ShowToast("Record updated Successfully", AC.SD.Core.Services.ToastLevel.Success);

            await UsersList();
            await UpdateDataAsync();


        }
    }
    void SelectedDataItemsChanged(IReadOnlyList<object> SelectedToItems)
    {
        SelectedDataItems = SelectedToItems;

        if (SelectedDataItems.Count > 0)
        {
            UsersDeleteEnable = true;
        }
        if (_usersselectedItems != null && SelectedDataItems.Count > 1)
        {
            UsersEditEnable = false;

        }



    }
    async Task UsersList()
    {
        _UsersList = await Mediator.Send(new GetAllUserListQuery(_selectedItems?.UserTag, applicationUser.UserID));
    }
    void othersedit()
    {


        UsersSubGrid?.StartEditDataItemAsync(_usersselectedItems);


    }
    void OnOthersDelete()
    {
        deletepopup = true;
    }
    void ClosePopUp()
    {
        UsersListpopup = false;
        StateHasChanged();
    }
    public async ValueTask DisposeAsync()
    {
        if (_userTags != null)
        {
            _userTags.Clear();
            _userTags = null;
        }
        _selectedItems = null;
    }
}
