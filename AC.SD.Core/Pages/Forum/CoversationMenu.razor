@using Application.Command.ForumCategory;
@using Application.Commands;
@using Application.Queries;
@using Application.Response;
@using MediatR
@using global::Core.Entities;
@inject IMediator Mediator
@using DevExpress.Export
@page "/conversationmenu"
@inject IJSRuntime jsRuntime


<div class="g-title">
    <div class="g-left"></div>

    <span class=""></span><span class="g-text"></span>
    <div class="g-right">
        <button type="button" CssClass="download-btn"
                IconCssClass="demo-download-icon"
                Text="Free Trial"
                class="btn btn-excel" @onclick="ExportToExcel" title="Export to Excel">
            <i class="fa fa-file-excel-o"></i>Export
        </button>
    </div>
</div>

<DxGrid id="myGrid" style="height: 700px;" Data="@_forumConversations" EditModelSaving="OnEditModelSaving" DataItemDeleting="OnDeleteDataItem" EditMode="GridEditMode.EditForm" CustomizeElement="Grid_CustomizeElement" ShowGroupPanel="true" ShowGroupedColumns="true" ShowSearchBox="true"
        PagerNavigationMode="PagerNavigationMode.InputBox"
        PageSizeSelectorVisible="true"
        PageSizeSelectorAllRowsItemVisible="true"
        PageSizeSelectorItems="@(new int[] { 5,10,20 })"
        PageSize="20"             
        CssClass="ch-360" >

    <Columns>
        <DxGridDataColumn FieldName="ID"  Caption="#" Width="35px"/>
        <DxGridDataColumn FieldName="Name" MinWidth="200"/>
        <DxGridDataColumn FieldName="TopicID" MinWidth="200"/>
        <DxGridDataColumn FieldName="Message" />
        <DxGridDataColumn FieldName="ParticipantId"/>
        <DxGridDataColumn FieldName="ReplyId" />
        <DxGridCommandColumn Width="160px" />
    </Columns>

    <EditFormTemplate Context="EditFormContext">
        @{
            var conversation = (ForumConversations)EditFormContext.EditModel;
        }
        <DxFormLayout CssClass="w-100">
            <DxFormLayoutItem Caption="Name:" ColSpanMd="6">
                <DxTextBox @bind-Text="@conversation.Name" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="TopicID:" ColSpanMd="6">
                <DxSpinEdit @bind-Value="@conversation.TopicID" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Message:" ColSpanMd="6">
                <DxTextBox @bind-Text="@conversation.Message" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="ParticipantId:" ColSpanMd="6">
                <DxSpinEdit @bind-Value="@conversation.ParticipantId" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="ReplyId:" ColSpanMd="6">
                <DxSpinEdit @bind-Value="@conversation.ReplyId" />
            </DxFormLayoutItem>
        </DxFormLayout>
    </EditFormTemplate>    
</DxGrid>
@code {
    private List<ForumConversations> _forumConversations;

    IGrid? Grid { get; set; }
    protected override async Task OnInitializedAsync()
    {
        var Conversation = await Mediator.Send(new GetAllForumConversation());
        _forumConversations = Conversation;
    }
    async Task UpdateDataAsync()
    {
        _forumConversations = await Mediator.Send(new GetAllForumConversation());
    }
    async Task OnEditModelSaving(GridEditModelSavingEventArgs e)
    {
        var editModel = (ForumConversations)e.EditModel;

        if (e.IsNew)
        {

            var createReq = new CreateForumCoversation
                {
                    Name = editModel.Name,
                    TopicID = editModel.TopicID,
                    Message = editModel.Message,
                    ParticipantId = editModel.ParticipantId,
                    ReplyId = editModel.ReplyId
                };
            var result = await Mediator.Send(createReq);
            await UpdateDataAsync();


        }
        else
        {
            var UpdateReq = new EditForumConversation
                {
                    ID = editModel.ID,
                    Name = editModel.Name,

                    TopicID = editModel.TopicID,
                    Message = editModel.Message,
                    ParticipantId = editModel.ParticipantId,
                    ReplyId = editModel.ReplyId,
                    StatusCodeID = editModel.StatusCodeID,
                    AddedByUserID = editModel.AddedByUserID,
                    AddedDate = editModel.AddedDate,
                    SessionId = editModel.SessionId,

                };

            var ans = await Mediator.Send(UpdateReq);
            await UpdateDataAsync();

        }

    }
    async Task OnDeleteDataItem(GridDataItemDeletingEventArgs e)
    {
        var editModel = (ForumConversations)e.DataItem;

        var request = new DeleteForumConversation
            {
                ID = editModel.ID,
                Name = editModel.Name,

                TopicID = editModel.TopicID,
                Message = editModel.Message,
                ParticipantId = editModel.ParticipantId,
                ReplyId = editModel.ReplyId
            };
        
        var result = Mediator.Send(request);
        Console.WriteLine(result);
        await UpdateDataAsync();

    }
    void Grid_CustomizeElement(GridCustomizeElementEventArgs e)
    {
        if (e.ElementType == GridElementType.DataRow && e.VisibleIndex % 2 == 1)
        {
            e.CssClass = "alt-item";
        }
        if (e.ElementType == GridElementType.HeaderCell)
        {
            e.Style = "background-color: rgba(0, 0, 0, 0.08)";
            e.CssClass = "header-bold";
        }
    }
    async Task ExportToExcel()
    {
        await Grid.ExportToXlsxAsync("ExportResult", new GridXlExportOptions()
            {
                ExportSelectedRowsOnly = true,
                CustomizeCell = OnCustomizeCell
            });
    }
    void OnCustomizeCell(GridExportCustomizeCellEventArgs args)
    {
        if (args.ColumnFieldName == "ContactName" && args.AreaType == SheetAreaType.DataArea)
            args.Formatting.Font = new XlCellFont() { Italic = true };
        args.Handled = true;
    }

}
   
