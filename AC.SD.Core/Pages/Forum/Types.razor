    void addEdit()
    {

        if (SelectedDataItems.Count == 1)
        {

            foreach (object item in SelectedDataItems)
            {

                if (item is ForumTypes forumTypes)
                {

                    _selectlst = _types.FirstOrDefault(f => f.ID == forumTypes.ID);


