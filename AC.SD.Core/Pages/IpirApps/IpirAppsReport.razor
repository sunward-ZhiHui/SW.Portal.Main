@code {
    bool UpdateProfilePopup { get; set; } = false;
    bool AddSuperEnabled { get; set; } = false;
    [Parameter]
    public Guid? SessionId { get; set; }
    public string isVisibleMore { get; set; } = "display:none;";
    List<DocumentsModel> FolderPathLists = new List<DocumentsModel>();
    private DocumentsModel? _selectedDocItems;
    private IpirApps? RefToDoLeftNotes { get; set; }
    private UpdateProfilePage? Refprofilepage { get; set; }
    bool createEmailpopup { get; set; } = false;
    bool emailEnabled { get; set; } = false;
    IGrid Grid { get; set; }
    bool PanelVisible { get; set; }
    private List<IpirApp> _dynamicForm;
    public Guid? FileProfileSessionId { get; set; }
    DocumentsModel _documentsItems = new DocumentsModel();
    DocumentsModel selectedFiles = new DocumentsModel();
    public ApplicationUser? applicationUser { get; private set; }
    private IpirApp _selectedItems; private IpirApp _selectedEditItems;
    bool DMSUpdateEnabled { get; set; } = false;
    bool EditEnabled { get; set; } = false; bool addEnabled { get; set; } = false;
    bool DeleteEnabled { get; set; } = false; bool uploadEnabled { get; set; } = false;
    bool Blukdeletepopup { get; set; } = false; bool AddPopup { get; set; } = false; bool PopupUpload { get; set; } = false;
    public long? FileProfileTypeId { get; set; }
    bool PopupCheckInUpload { get; set; } = false;
    public Guid? UploadSessionId { get; set; }
    public bool IsChecker { get; set; } = false; public bool IsCheckerPopUp { get; set; } = false;
    public bool SupportingDocumentsPopup { get; set; } = false; bool SupportDocEnabled { get; set; } = false;
    public bool CheckOutEnabled { get; set; } = false;
    public bool CheckInEnabled { get; set; } = false;
    public bool viewEnabled { get; set; } = false;
    public bool CopyLinkEnabled { get; set; } = false;
    private string? DocumentViewUrl; public bool IsDeviationForm { get; set; } = false; public bool IsChangeControlForm { get; set; } = false; public bool IsWorkOrderForm { get; set; } = false;
    private string? ServerUrl; public List<DocumentsModel> fileProfileTypeDocumentsAll { get; set; }
    protected override async Task OnInitializedAsync()
    {
        DocumentViewUrl = Configuration["DocumentsUrl:DocumentViewer"];
        ServerUrl = Configuration["DocumentsUrl:ServerUrl"];
        fileProfileTypeDocumentsAll = await Mediator.Send(new GetAllfileprofiletypeListQuery());
        applicationUser = await _localStorageService.GetItem<ApplicationUser>("user");
        await UpdateDataAsync();
    }
    async Task UpdateDataAsync()
    {
        isVisibleMore = "display:none;";
        EditEnabled = false; DeleteEnabled = false; emailEnabled = false; addEnabled = true; uploadEnabled = false; SupportDocEnabled = false; IsChecker = false;
        CheckOutEnabled = false; CheckInEnabled = false; CopyLinkEnabled = false;
        viewEnabled = false; IsDeviationForm = false; IsChangeControlForm = false; IsWorkOrderForm = false; DMSUpdateEnabled = false;
        _dynamicForm = await Mediator.Send(new GetAllIpirAppQuery());
        PanelVisible = true;
        if (_dynamicForm != null && _dynamicForm.Count > 0)
        {
            EditEnabled = true; DeleteEnabled = true; emailEnabled = true; uploadEnabled = true; SupportDocEnabled = true; IsChecker = true;
            if (SessionId != null)
            {
                var items = _dynamicForm.Where(f => f.SessionID == SessionId).ToList();
                if (items != null && items.Count > 0)
                {
                    _dynamicForm = items;
                    _selectedItems = items.FirstOrDefault();
                    loadSelectedItems();
                }
                else
                {
                    _selectedItems = _dynamicForm.FirstOrDefault();
                    loadSelectedItems();
                }
            }
            else
            {
                _selectedItems = _dynamicForm.FirstOrDefault();
                loadSelectedItems();
            }

        }
        PanelVisible = false;
        StateHasChanged();
    }
    void loadSelectedItems()
    {
        IsDeviationForm = false; IsChangeControlForm = false; IsWorkOrderForm = false;
        if (_selectedItems != null)
        {
            isVisibleMore = "";
            UploadSessionId = _selectedItems.SessionID;
            if (_selectedItems.IsDocuments > 0)
            {
                uploadEnabled = false; viewEnabled = true; CopyLinkEnabled = true; DMSUpdateEnabled = true;
            }
            if (_selectedItems.FileProfileTypeId > 0)
            {
                FileProfileSessionId = fileProfileTypeDocumentsAll.FirstOrDefault(f => f.FileProfileTypeId == _selectedItems.FileProfileTypeId)?.SessionID;
            }
            if (_selectedItems.IsLocked == true)
            {
                CheckOutEnabled = false;
                CheckInEnabled = true; CopyLinkEnabled = false;
                EditEnabled = false; DeleteEnabled = false; IsDeviationForm = false; IsChangeControlForm = false; IsWorkOrderForm = false;
                viewEnabled = false; SupportDocEnabled = false; IsChecker = false;DMSUpdateEnabled = false;
            }
            else
            {
                if (_selectedItems.IsDocuments > 0)
                {
                    CheckOutEnabled = true;
                }
                CheckInEnabled = false;
                if (_selectedItems.ActivityIssueRelates != null && _selectedItems.ActivityIssueRelates.Count() > 0)
                {
                    var IsDeviationFormEnable = _selectedItems.ActivityIssueRelates.FirstOrDefault(f => f.IssueRelateName != null && "Deviation".ToLower().Contains(f.IssueRelateName.ToLower()));
                    if (IsDeviationFormEnable != null)
                    {
                        IsDeviationForm = true;
                    }
                    var IsChangeControlFormEnable = _selectedItems.ActivityIssueRelates.FirstOrDefault(f => f.IssueRelateName != null && "Change Control".ToLower().Contains(f.IssueRelateName.ToLower()));
                    if (IsChangeControlFormEnable != null)
                    {
                        IsChangeControlForm = true;
                    }
                    var IsWorkOrderFormEnable = _selectedItems.ActivityIssueRelates.FirstOrDefault(f => f.IssueRelateName != null && "Work Order".ToLower().Contains(f.IssueRelateName.ToLower()));
                    if (IsWorkOrderFormEnable != null)
                    {
                        IsWorkOrderForm = true;
                    }
                }
            }
            Grid.ClearSelection();
            Grid.Reload();
            Grid.SetFocusedRowIndex(0);
            StateHasChanged();
        }
    }
    async Task OnClickDynamicFormOpen(string? Type)
    {
        if (Type == "Deviation")
        {
            var IsDeviationFormEnable = _selectedItems.ActivityIssueRelates.FirstOrDefault(f => f.IssueRelateName != null && "Deviation".ToLower().Contains(f.IssueRelateName.ToLower()));
            if (IsDeviationFormEnable != null)
            {
                var resultData = await Mediator.Send(new GetIpirAppIssueDepByDynamicForm(IsDeviationFormEnable.IpirAppIssueDepId));
                if (resultData.DynamicFormDataId > 0)
                {
                    var url = NavigationManager.BaseUri + "DynamicMasterSetupList/dynamicForms/" + resultData.DynamicFormSessionId + "/" + resultData.DynamicFormDataSessionId + "/?SessionId=" + _selectedItems.SessionID + "&&Type=" + IsDeviationFormEnable.ActivityInfoIssueId;
                    await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
                }
                else
                {

                    var result = await Mediator.Send(new GetDynamicFormScreenNameCheckValidation("Deviationtrackingflow"));
                    if (result != null && result.ID > 0)
                    {
                        var url = NavigationManager.BaseUri + "DynamicMasterSetupList/dynamicForms/" + result.SessionID + "/?SessionId=" + _selectedItems.SessionID + "&&Type=" + IsDeviationFormEnable.ActivityInfoIssueId;
                        await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
                    }
                }
            }
        }
        if (Type == "Change Control")
        {
            var IsChangeControlFormEnable = _selectedItems.ActivityIssueRelates.FirstOrDefault(f => f.IssueRelateName != null && "Change Control".ToLower().Contains(f.IssueRelateName.ToLower()));
            if (IsChangeControlFormEnable != null)
            {
                var resultData = await Mediator.Send(new GetIpirAppIssueDepByDynamicForm(IsChangeControlFormEnable.IpirAppIssueDepId));
                if (resultData.DynamicFormDataId > 0)
                {
                    var url = NavigationManager.BaseUri + "DynamicMasterSetupList/dynamicForms/" + resultData.DynamicFormSessionId + "/" + resultData.DynamicFormDataSessionId + "/?SessionId=" + _selectedItems.SessionID + "&&Type=" + IsChangeControlFormEnable.ActivityInfoIssueId;
                    await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
                }
                else
                {
                    var result = await Mediator.Send(new GetDynamicFormScreenNameCheckValidation("ChangeControl"));
                    if (result != null && result.ID > 0)
                    {
                        var url = NavigationManager.BaseUri + "DynamicMasterSetupList/dynamicForms/" + result.SessionID + "/?SessionId=" + _selectedItems.SessionID + "&&Type=" + IsChangeControlFormEnable.ActivityInfoIssueId;
                        await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
                    }
                }
            }
        }
        if (Type == "Work Order")
        {
            var IsWorkOrderFormEnable = _selectedItems.ActivityIssueRelates.FirstOrDefault(f => f.IssueRelateName != null && "Work Order".ToLower().Contains(f.IssueRelateName.ToLower()));
            if (IsWorkOrderFormEnable != null)
            {
                var resultData = await Mediator.Send(new GetIpirAppIssueDepByDynamicForm(IsWorkOrderFormEnable.IpirAppIssueDepId));
                if (resultData.DynamicFormDataId > 0)
                {
                    var url = NavigationManager.BaseUri + "DynamicMasterSetupList/dynamicForms/" + resultData.DynamicFormSessionId + "/" + resultData.DynamicFormDataSessionId + "/?SessionId=" + _selectedItems.SessionID + "&&Type=" + IsWorkOrderFormEnable.ActivityInfoIssueId;
                    await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
                }
                else
                {
                    var result = await Mediator.Send(new GetDynamicFormScreenNameCheckValidation("WorkOrderforQC"));
                    if (result != null && result.ID > 0)
                    {
                        var url = NavigationManager.BaseUri + "DynamicMasterSetupList/dynamicForms/" + result.SessionID + "/?SessionId=" + _selectedItems.SessionID + "&&Type=" + IsWorkOrderFormEnable.ActivityInfoIssueId;
                        await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
                    }
                }
            }
        }
    }
    void CloseUpdatePopup()
    {
        UpdateProfilePopup = false;
        StateHasChanged();
    }
    async void ClosePopup()
    {
        AddPopup = false;
        AddSuperEnabled = false;
        await UpdateDataAsync();
        // InvokeAsync(UpdateDataAsync);
        StateHasChanged();
    }
    void onIsChecker()
    {
        IsCheckerPopUp = true;
    }
    void addNewForm()
    {
        _selectedEditItems = null;
        AddPopup = true;
    }
    void EulaPopupClosed()
    {
        Blukdeletepopup = false;
        AddPopup = false;
    }
    async Task deleteFileProfileTypes()
    {
        if (_selectedItems != null)
        {
            Blukdeletepopup = false;
            await Mediator.Send(new DeleteIpirApp(_selectedItems));
            toastService.ShowToast("Record Deleted Successfully", AC.SD.Core.Services.ToastLevel.Success);
            await UpdateDataAsync();
        }
    }
    void editForm()
    {
        _selectedEditItems = _selectedItems;
        AddPopup = true;
    }
    void deleteForm()
    {
        Blukdeletepopup = true;
    }
    void uploadFiles()
    {
        PopupUpload = true;
    }
    void onSupportingDocuments()
    {
        SupportingDocumentsPopup = true;
    }
    void BackUploadUpload()
    {
        IsCheckerPopUp = false; PopupCheckInUpload = false;
        PopupUpload = false; SupportingDocumentsPopup = false;
        InvokeAsync(UpdateDataAsync);
        StateHasChanged();
    }
    void Grid_CustomizeElement(GridCustomizeElementEventArgs e)
    {
        if (e.ElementType == GridElementType.DataRow && e.VisibleIndex % 2 == 1)
        {
            e.CssClass = "alt-item";
        }
    }
    void OnRowclick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "IpirAppId");
        _selectedItems = _dynamicForm.FirstOrDefault(f => f.IpirAppId == (long?)UniqueId);
        UploadSessionId = _selectedItems.SessionID;

        uploadEnabled = true; isVisibleMore = ""; IsChecker = true;
        DeleteEnabled = true; emailEnabled = true; SupportDocEnabled = true; viewEnabled = false; CopyLinkEnabled = false; IsDeviationForm = false; IsChangeControlForm = false; IsWorkOrderForm = false; DMSUpdateEnabled = false;
        if(_selectedItems.ActivityStatusId > 0 )
        {
            AddSuperEnabled = false;
            EditEnabled = true;
        }
        else
        {
            AddSuperEnabled = true;
            EditEnabled = false;
        }
        if (_selectedItems.IsDocuments > 0)
        {
            uploadEnabled = false; viewEnabled = true; CopyLinkEnabled = true; DMSUpdateEnabled = true;
        }
        if (_selectedItems.FileProfileTypeId > 0)
        {
            FileProfileSessionId = fileProfileTypeDocumentsAll.FirstOrDefault(f => f.FileProfileTypeId == _selectedItems.FileProfileTypeId)?.SessionID;
        }
        if (_selectedItems.IsLocked == true)
        {
            CheckOutEnabled = false;
            CheckInEnabled = true; CopyLinkEnabled = false;
            EditEnabled = false; DeleteEnabled = false; IsDeviationForm = false; IsChangeControlForm = false; IsWorkOrderForm = false;
            viewEnabled = false; SupportDocEnabled = false; IsChecker = false; DMSUpdateEnabled = false;
        }
        else
        {
            if (_selectedItems.IsDocuments > 0)
            {
                CheckOutEnabled = true;
            }
            CheckInEnabled = false;
            IsDeviationForm = false; IsChangeControlForm = false; IsWorkOrderForm = false;
            if (_selectedItems.ActivityIssueRelates != null && _selectedItems.ActivityIssueRelates.Count() > 0)
            {
                var IsDeviationFormEnable = _selectedItems.ActivityIssueRelates.FirstOrDefault(f => f.IssueRelateName != null && "Deviation".ToLower().Contains(f.IssueRelateName.ToLower()));
                if (IsDeviationFormEnable != null)
                {
                    IsDeviationForm = true;
                }
                var IsChangeControlFormEnable = _selectedItems.ActivityIssueRelates.FirstOrDefault(f => f.IssueRelateName != null && "Change Control".ToLower().Contains(f.IssueRelateName.ToLower()));
                if (IsChangeControlFormEnable != null)
                {
                    IsChangeControlForm = true;
                }
                var IsWorkOrderFormEnable = _selectedItems.ActivityIssueRelates.FirstOrDefault(f => f.IssueRelateName != null && "Work Order".ToLower().Contains(f.IssueRelateName.ToLower()));
                if (IsWorkOrderFormEnable != null)
                {
                    IsWorkOrderForm = true;
                }
            }
        }
    }

    async void onView()
    {
        if (_selectedItems != null && _selectedItems.DocumentID > 0 && _selectedItems.FilePath != null)
        {
            if (_selectedItems.IsNewPath == true)
            {
                var url = DocumentViewUrl + "?url=" + _selectedItems.UniqueSessionId;
                await OpenDocumentPreview(url);
            }
            else
            {
                var url = DocumentViewUrl + "?url=" + _selectedItems.UniqueSessionId;
                await OpenDocumentPreview(url);
            }

        }
    }
    void OnRowDoubleClick(GridRowClickEventArgs e)
    {
        OnRowclick(e);
    }
    private async Task OpenDocumentPreview(string url)
    {
        await jsRuntime.InvokeVoidAsync("window.open", url, "_blank");
    }
    async Task Download()
    {
        if (_selectedItems != null && _selectedItems.DocumentID > 0 && _selectedItems.FilePath != null)
        {
            var response = await Mediator.Send(new GetFileDownload(_selectedItems.DocumentID));
            if (response.StatusCodeID == 0)
            {
                toastService.ShowToast("File Not Exits", AC.SD.Core.Services.ToastLevel.Error);
            }
            else
            {
                await jsRuntime.InvokeVoidAsync("downloadFile", _selectedItems.FileName, response.ImageData, "");
            }
