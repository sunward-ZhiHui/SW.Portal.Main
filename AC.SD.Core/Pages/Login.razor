@page "/login"
@inject IAlertService AlertService
@inject NavigationManager NavigationManager
@layout LoginLayout
@inherits LayoutComponentBase


@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Authorization
