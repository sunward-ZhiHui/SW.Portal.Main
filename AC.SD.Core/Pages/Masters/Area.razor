@page "/area"
@using Application.Command.Ictmaster;
@using Application.Commands;
@using Application.Queries;
@using MediatR
@using global::Core.Entities.Views;
@using global::Core.Entities;
@inject IMediator Mediator;
@using DevExpress.Export
@using Application.Response;
    

<DxGrid @ref="Grid" Data="_ictmaster" KeyFieldName="IctmasterId" DataItemDeleting="Grid_DataItemDeleting" EditModelSaving="Grid_EditModelSaving" ShowGroupPanel="true" ShowGroupedColumns="true" ShowSearchBox="true"
        PagerNavigationMode="PagerNavigationMode.InputBox"
        PageSizeSelectorVisible="true"
        PageSizeSelectorAllRowsItemVisible="true"
        PageSizeSelectorItems="@(new int[] { 5,10,20 })"
        PageSize="20"
        SelectionMode="GridSelectionMode.Multiple"
        SelectAllCheckboxMode="GridSelectAllCheckboxMode.AllPages"
        ValidationEnabled="true"
        AutoExpandAllGroupRows="true"
        CssClass="ch-360">
    <Columns>

        <DxGridDataColumn FieldName="CompanyId" MinWidth="80" />
        <DxGridDataColumn FieldName="Name" MinWidth="80" />
        <DxGridDataColumn FieldName="Description" MinWidth="80" />
        <DxGridDataColumn FieldName="SiteId"  Caption=" Site"  MinWidth="80" />
        <DxGridDataColumn FieldName="ZoneId" Caption=" Zone" MinWidth="80" />
        <DxGridDataColumn FieldName="LocationId" Caption=" Location"  MinWidth="80" />
        <DxGridDataColumn FieldName="AreaId" MinWidth="80" />
        <DxGridCommandColumn Width="160px" />
    </Columns>
    <EditFormTemplate Context="EditFormContext">
        @{
            var ict = (ViewIctmaster)EditFormContext.EditModel;
        }


        <DxFormLayout CssClass="w-100">
            <DxFormLayoutItem Caption="Company" ColSpanMd="6">
                <DxComboBox Data="@_plantItems"
                            NullText="Select Company..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            SelectedItemChanged="@((ViewPlants plant) => SelectedItemChanged(plant.PlantID))"
                            TextFieldName="Description"
                            ValueFieldName="PlantID"
                            @bind-Value="@ict.CompanyId"
                            ShowValidationIcon="true">
                </DxComboBox>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Site" ColSpanMd="6">
                @* <DxSpinEdit @bind-Value="@ict.SiteId" Rows="5" />*@
                <DxComboBox Data="@_masterCompany"
                            NullText="Select Site..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            SelectedItemChanged="@((ViewIctmaster plant) => SelectedChanged(plant.IctmasterId))"
                            TextFieldName="Name"
                            ValueFieldName="IctmasterId"
                            @bind-Value="@ict.SiteId"
                            ShowValidationIcon="true">
                </DxComboBox>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Zone" ColSpanMd="6">
                <DxComboBox Data="@_masterSite"
                            NullText="Select Zone..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            SelectedItemChanged="@((ViewIctmaster plant) => SelectChanged(plant.IctmasterId))"
                            TextFieldName="Name"
                            ValueFieldName="IctmasterId"
                            @bind-Value="@ict.ZoneId"
                            ShowValidationIcon="true">
                </DxComboBox>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Location" ColSpanMd="6">
                <DxComboBox Data="@_masterZone"
                            NullText="Select Location..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            TextFieldName="Name"
                            ValueFieldName="IctmasterId"
                            @bind-Value="@ict.ParentIctid"
                            ShowValidationIcon="true">
                </DxComboBox>
            </DxFormLayoutItem>
           
            <DxFormLayoutItem Caption="Name" ColSpanMd="6">
                <DxTextBox @bind-Text="@ict.Name" Rows="5" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Description" ColSpanMd="6">
                <DxMemo @bind-Text="@ict.Description" Rows="5" />
            </DxFormLayoutItem>



            <DxFormLayoutItem ColSpanMd="12">
                <ValidationSummary />
            </DxFormLayoutItem>
        </DxFormLayout>
    </EditFormTemplate>
    <TotalSummary>
        <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="MasterType" />
    </TotalSummary>
</DxGrid>



@code {
    private List<ViewPlants> _plantItems;
    private List<ViewIctmaster> _ictmaster;
    private List<CodeMaster> _codemaster;
    IEnumerable<ViewIctmaster>? _masterCompany;
    IEnumerable<ViewIctmaster>? _masterSite;
    IEnumerable<ViewIctmaster>? _masterZone;
    IGrid Grid { get; set; }
    int masterType = 573;
    protected override async Task OnInitializedAsync()
    {
        var model = await Mediator.Send(new GetAllIctMasterQuery());
        _ictmaster = model;
        _plantItems = await Mediator.Send(new GetAllPlantQuery());
    }
    async Task UpdateDataAsync()
    {
        var model = await Mediator.Send(new GetAllIctMasterQuery());
        _ictmaster = model;
    }
    void Grid_CustomizeEditModel(GridCustomizeEditModelEventArgs e)
    {
        if (e.IsNew)
        {
            var newmaster = (ViewIctmaster)e.EditModel;
            newmaster.MasterType = masterType;
            newmaster.Name = "";
            newmaster.Description = "";
            newmaster.StatusCodeId = null;
        }
    }
    async Task Grid_EditModelSaving(GridEditModelSavingEventArgs e)
    {
        var editableictmaster = (ViewIctmaster)e.EditModel;
        if (e.IsNew)
        {
            var request = new CreateIctmasterCommand
                {
                    MasterType = masterType,
                    Description = editableictmaster.Description,
                    StatusCodeId = editableictmaster.StatusCodeId,
                    Name = editableictmaster.Name,
                    CompanyId = editableictmaster.CompanyId,
                    SiteId = editableictmaster.SiteId,
                    ZoneId = editableictmaster.ZoneId,
                    LocationId = editableictmaster.LocationId,
                    AreaId = editableictmaster.AreaId,
                    ParentIctid = editableictmaster.ParentIctid

                };
            await Mediator.Send(request);
            await UpdateDataAsync();
        }
        else
        {
            await UpdateMasterAsync(editableictmaster);
        }
    }
    async Task Grid_DataItemDeleting(GridDataItemDeletingEventArgs e)
    {
        var editablePlant = (ViewIctmaster)e.DataItem;
        var request = new DeleteIctmasterCommand(editablePlant.IctmasterId);
        await Mediator.Send(request);
        // await UpdateDataAsync();
    }
    async Task UpdateMasterAsync(ViewIctmaster editableictmaster)
    {
        var request = new EditIctmasterCommand
            {
                IctmasterId = editableictmaster.IctmasterId,
                MasterType = editableictmaster.MasterType,
                Name = editableictmaster.Name,
                Description = editableictmaster.Description,
                StatusCodeId = editableictmaster.StatusCodeId,
                AddedByUserId = editableictmaster.AddedByUserId,
                AddedDate = editableictmaster.AddedDate,
                CompanyId = editableictmaster.CompanyId,
                SiteId = editableictmaster.SiteId,
                ZoneId = editableictmaster.ZoneId,
                LocationId = editableictmaster.LocationId,
                AreaId = editableictmaster.AreaId,
                ParentIctid = editableictmaster.ParentIctid
            };
        await Mediator.Send(request);
        await UpdateDataAsync();
    }
    async void SelectedItemChanged(long? companyId)
    {

        if (companyId > 0)
        {
            _masterCompany = _ictmaster.Where(c => c.CompanyId == companyId && c.MasterType == 570).ToList();
        }

    }
    async void SelectedChanged(long? siteId)
    {
        // var id = siteId.IctmasterId
        if (siteId != null)
        {
            _masterSite = _ictmaster.Where(c => c.ParentIctid == siteId && c.MasterType == 571).ToList();
        }

    }
    async void SelectChanged(long? siteId)
    {
        // var id = siteId.IctmasterId
        if (siteId != null)
        {
            _masterZone = _ictmaster.Where(c => c.ParentIctid == siteId && c.MasterType == 572).ToList();
        }

    }
}

