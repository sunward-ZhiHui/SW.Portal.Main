@using Application.Command.Departments;
@using Application.Commands;
@using Application.Queries;
@using MediatR
@using global::Core.Entities.Views;
@using global::Core.Entities;
@inject IMediator Mediator
@using DevExpress.Export
@using Application.Response;
@inject IJSRuntime jsRuntime
@using global::Core.Repositories.Query;
@inject ILocalStorageService<ApplicationUser> _localStorageService
@inject AC.SD.Core.Services.ToastService toastService
@inject NavigationManager NavigationManager

@page "/Department"


<div class="card w-100" style="margin-bottom:10px; margin-top:10px">
    <div class="card-body p-0">
        <DxMenu CollapseItemsToHamburgerMenu="true"
                CollapseItemToIconMode="MenuCollapseItemToIconMode.Sequentially"
                DisplayMode="MenuDisplayMode.Desktop">
            <Items>
                <DxMenuItem Text="Add" IconCssClass="fa fa-add" Click="@addNew" />
                <DxMenuItem Text="Edit" IconCssClass="fa fa-pencil" Click="@addEdit" Enabled="@EditEnabled" />
                <DxMenuItem Text="Delete" IconCssClass="fa fa-remove" Click="@addDelete" Enabled="@DeleteEnabled" />
                <DxMenuItem Text="Export" IconCssClass="fa fa-file-excel" Click="@ExportToExcel" />
                <DxMenuItem Text="Add Section" IconCssClass="fa fa-add" Click="@AddSection" />
                <DxMenuItem Text="Reset Division" IconCssClass="fa fa-refresh" Click="@ResetDivision" Enabled="@isDivisionEnabled" />
            </Items>
        </DxMenu>
    </div>
</div>

  @if (Type == "Division")
    {
    <div style="" class="breadcrumb card-body  bradcrumb-txt">

        <div class="items">@plantcode<span class="separator-txt fa fa-caret-right"></span>@Name</div>
    </div>
    }


    <DxLoadingPanel @bind-Visible="PanelVisible"
                IsContentBlocked="true"
                ApplyBackgroundShading="true"
                IndicatorAreaVisible="false"
                Text="Fetching Data..."
               >

<DxGrid @ref="Grid" 
     ColumnResizeMode="GridColumnResizeMode.NextColumn"
        FilterMenuButtonDisplayMode="GridFilterMenuButtonDisplayMode.Always" ShowGroupPanel="true" ShowGroupedColumns="true" 
        Data="_departmentItems"
        KeyFieldName="DepartmentId"
        EditModelSaving="Grid_EditModelSaving"
        DataItemDeleting="Grid_DataItemDeleting"
        CustomizeEditModel="Grid_CustomizeEditModel"
        CustomizeElement="Grid_CustomizeElement"
        ShowSearchBox="true"
        PagerNavigationMode="PagerNavigationMode.InputBox"
        PageSizeSelectorVisible="true"
        PageSizeSelectorAllRowsItemVisible="true"
        PageSizeSelectorItems="@(new int[] { 5,10,20 })"
        PageSize="20"
        SelectionMode="GridSelectionMode.Multiple"
        SelectAllCheckboxMode="GridSelectAllCheckboxMode.AllPages"
        AutoExpandAllGroupRows="true"
        CssClass="ch-360  " style="height: calc(100vh - 270px);"
        FocusedRowEnabled="true"
        RowClick="OnRowClick"
        SelectedDataItemsChanged="@SelectedDataItemsChanged"
        RowDoubleClick="OnRowDoubleClick"
        AllowSelectRowByClick="true">
    <Columns>
        <DxGridSelectionColumn Width="60px" AllowSelectAll="true" />
        <DxGridDataColumn FieldName="DepartmentId" MinWidth="80" Visible="false" />
            <DxGridDataColumn FieldName="Index" Visible="false" Caption="#" Width="35px"></DxGridDataColumn>
        <DxGridDataColumn FieldName="PlantCode" Caption="Company Code" MinWidth="80" />
        <DxGridDataColumn FieldName="Division" MinWidth="80" />
        <DxGridDataColumn FieldName="DepartmentName" Caption="Name" MinWidth="80" />
        <DxGridDataColumn FieldName="DepartmentCode" Caption="Code" MinWidth="80" />
        <DxGridDataColumn FieldName="StatusCode" MinWidth="80" />
        <DxGridDataColumn FieldName="ModifiedDate" Width="180" >
            <CellDisplayTemplate>
                @{
                    var item = (ViewDepartment)context.DataItem;
                }
                @Application.Common.Helper.Helper.FormatDateTime(item.ModifiedDate)
            </CellDisplayTemplate>
        </DxGridDataColumn>
        <DxGridDataColumn FieldName="ModifiedBy" Width="10%" />


    </Columns>
    <EditFormTemplate Context="EditFormContext">
        @{
            var department = (ViewDepartment)EditFormContext.EditModel;
        }
        <DxFormLayout CssClass="w-100">
            <DxFormLayoutItem Caption="Division" ColSpanMd="6">

                <DxComboBox Data="@_divisionsItems"
                            NullText="Select Division..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            TextFieldName="DivisionDrop"
                            ValueFieldName="DivisionID"
                            Enabled="@isEnabled"
                            SelectedItemChanged="@((ViewDivision plantSelect) => SelectedItemChanged(plantSelect))"
                            @bind-Value="@department.DivisionId"
                            ShowValidationIcon="true">
                </DxComboBox>
                <ValidationMessage For="@(() => department.DivisionId)" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Company" ColSpanMd="6">
                <DxTextBox @bind-Text="@companyName" Enabled="@isEnabled" ReadOnly="true" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Department Name" ColSpanMd="6">
                <DxTextBox @bind-Text="@department.DepartmentName" ShowValidationIcon="true" />
                <ValidationMessage For="@(() => department.DepartmentName)" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Department Code" ColSpanMd="6">
                <DxTextBox @bind-Text="@department.DepartmentCode" ShowValidationIcon="true" />
                <ValidationMessage For="@(() => department.DepartmentCode)" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Profile Code" ColSpanMd="6">
                <DxTextBox @bind-Text="@department.ProfileCode" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Description" ColSpanMd="6">
                <DxMemo @bind-Text="@department.Description" Rows="5" ShowValidationIcon="true" />
                <ValidationMessage For="@(() => department.Description)" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Status" ColSpanMd="6">
                <DxComboBox Data="@_stausItems"
                            NullText="Select Status..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            TextFieldName="CodeValue"
                            ValueFieldName="CodeId"
                           @bind-Text="@Text"
                            @bind-Value="@department.StatusCodeId"
                            ShowValidationIcon="true">
                </DxComboBox>
                <ValidationMessage For="@(() => department.StatusCodeId)" />
            </DxFormLayoutItem>
        </DxFormLayout>
    </EditFormTemplate>
    <TotalSummary>
            <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="PlantCode" />
    </TotalSummary>
</DxGrid>

</DxLoadingPanel>
