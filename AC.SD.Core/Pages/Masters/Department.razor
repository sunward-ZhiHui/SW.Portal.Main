@using Application.Command.Departments;
@using Application.Commands;
@using Application.Queries;
@using MediatR
@using global::Core.Entities.Views;
@using global::Core.Entities;
@inject IMediator Mediator
@using DevExpress.Export
@using Application.Response;
@page "/Department"

<DxGrid @ref="Grid"
        Data="_departmentItems"
        KeyFieldName="DepartmentId"
        EditModelSaving="Grid_EditModelSaving"
        DataItemDeleting="Grid_DataItemDeleting"
        CustomizeEditModel="Grid_CustomizeEditModel"
        ShowGroupPanel="true" ShowGroupedColumns="true" ShowSearchBox="true"
        PagerNavigationMode="PagerNavigationMode.InputBox"
        PageSizeSelectorVisible="true"
        PageSizeSelectorAllRowsItemVisible="true"
        PageSizeSelectorItems="@(new int[] { 5,10,20 })"
        PageSize="20"
        SelectionMode="GridSelectionMode.Multiple"
        SelectAllCheckboxMode="GridSelectAllCheckboxMode.AllPages"
        AutoExpandAllGroupRows="true"
        CssClass="ch-360">
    <Columns>

        <DxGridDataColumn FieldName="Company" MinWidth="80" />
        <DxGridDataColumn FieldName="Division" MinWidth="80" />
        <DxGridDataColumn FieldName="DepartmentName" Caption="Name" MinWidth="80" />
        <DxGridDataColumn FieldName="DepartmentCode" Caption="Code" MinWidth="80" />
        <DxGridDataColumn FieldName="StatusCode" MinWidth="80" />
        <DxGridDataColumn FieldName="ModifiedDate" Width="10%" />
        <DxGridDataColumn FieldName="ModifiedBy" Width="10%" />
        <DxGridCommandColumn Width="160px" />

    </Columns>
    <EditFormTemplate Context="EditFormContext">
        @{
            var department = (ViewDepartment)EditFormContext.EditModel;
        }
        <DxFormLayout CssClass="w-100">
            <DxFormLayoutItem Caption="Company" ColSpanMd="6">
                <DxComboBox Data="@_plantItems"
                            SelectedItemChanged="@((ViewPlants plantSelect) => SelectedItemChanged(plantSelect.PlantID))"
                    NullText="Select Company..."
                    FilteringMode="DataGridFilteringMode.Contains" 
                    TextFieldName="Description" 
                    ValueFieldName="PlantID"
                    @bind-Value="@department.CompanyId" />

            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Division" ColSpanMd="6">
                @{
                    SelectedItemChanged(department.CompanyId);
                }
                <DxComboBox Data="@_divisionsListItems"
                            NullText="Select Division..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            TextFieldName="Name"
                            ValueFieldName="DivisionID"
                            @bind-Value="@department.DivisionId"
                            ShowValidationIcon="true">
                </DxComboBox>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="DepartmentName" ColSpanMd="6">
                <DxTextBox @bind-Text="@department.DepartmentName" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="DepartmentCode" ColSpanMd="6">
                <DxTextBox @bind-Text="@department.DepartmentCode" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="ProfileCode" ColSpanMd="6">
                <DxTextBox @bind-Text="@department.ProfileCode" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Description" ColSpanMd="6">
                <DxMemo @bind-Text="@department.Description" Rows="5" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Status" ColSpanMd="6">
                <DxComboBox Data="@_stausItems"
                            NullText="Select Status..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            TextFieldName="CodeValue"
                            ValueFieldName="CodeId"
                            @bind-Value="@department.StatusCodeId"
                            ShowValidationIcon="true">
                </DxComboBox>
            </DxFormLayoutItem>
        </DxFormLayout>
    </EditFormTemplate>
    <TotalSummary>
        <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="DepartmentName" />
    </TotalSummary>
</DxGrid>

@code {
    private List<ViewPlants> _plantItems;
    private List<CodeMaster> _stausItems;
    private List<ViewDepartment> _departmentItems;
    private List<ViewDivision> _divisionsItems;
    private List<ViewDivision> _divisionsListItems;
    IGrid Grid { get; set; }
    protected override async Task OnInitializedAsync()
    {
        _departmentItems = await Mediator.Send(new GetAllDepartmentQuery());
        _plantItems = await Mediator.Send(new GetAllPlantQuery());
        _stausItems = await Mediator.Send(new GetAllCodeMasterQuery("Status"));
        _divisionsItems = await Mediator.Send(new GetAllDivisionQuery());
    }
    void Grid_CustomizeEditModel(GridCustomizeEditModelEventArgs e)
    {
        if (e.IsNew)
        {
            _divisionsListItems = new List<ViewDivision>();
        }
    }
    async Task UpdateDataAsync()
    {
        var model = await Mediator.Send(new GetAllDepartmentQuery());
        _departmentItems = model;
    }
    void SelectedItemChanged(long plantID)
    {
        if (plantID > 0)
        {
            _divisionsListItems = _divisionsItems.Where(c => c.CompanyId == plantID).ToList();
        }
    }
    async Task Grid_EditModelSaving(GridEditModelSavingEventArgs e)
    {
        var editableDepartment = (ViewDepartment)e.EditModel;
        if (e.IsNew)
        {
            var request = new CreateDepartmentCommand
                {
                    CompanyId = editableDepartment.CompanyId,
                    DivisionId = editableDepartment.DivisionId,
                    Name = editableDepartment.DepartmentName,
                    Code = editableDepartment.DepartmentCode,
                    Description = editableDepartment.Description,
                    StatusCodeId = editableDepartment.StatusCodeId,
                    ProfileCode=editableDepartment.ProfileCode,
                };
            await Mediator.Send(request);
            await UpdateDataAsync();
        }
        else
        {
            await UpdatePlantAsync(editableDepartment);
        }

    }
    async Task Grid_DataItemDeleting(GridDataItemDeletingEventArgs e)
    {
        var editableDepartment = (ViewDepartment)e.DataItem;
        var request = new DeleteDepartmentCommand(editableDepartment.DepartmentId);
        await Mediator.Send(request);
        await UpdateDataAsync();
    }
    async Task UpdatePlantAsync(ViewDepartment editableDepartment)
    {
        var request = new EditDepartmentCommand
            {
                DepartmentId = editableDepartment.DepartmentId,
                CompanyId = editableDepartment.CompanyId,
                DivisionId = editableDepartment.DivisionId,
                Name = editableDepartment.DepartmentName,
                Code = editableDepartment.DepartmentCode,
                Description = editableDepartment.Description,
                StatusCodeId = editableDepartment.StatusCodeId,
                AddedByUserId = editableDepartment.AddedByUserId,
                AddedDate = editableDepartment.AddedDate,
                ProfileCode=editableDepartment.ProfileCode,
            };
        await Mediator.Send(request);
        await UpdateDataAsync();
    }
}
