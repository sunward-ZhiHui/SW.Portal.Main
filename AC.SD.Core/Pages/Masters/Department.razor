@using Application.Command.Departments;
@using Application.Commands;
@using Application.Queries;
@using MediatR
@using global::Core.Entities.Views;
@using global::Core.Entities;
@inject IMediator Mediator
@using DevExpress.Export
@using Application.Response;
@inject IJSRuntime jsRuntime
@using global::Core.Repositories.Query;
@inject ILocalStorageService<ApplicationUser> _localStorageService

@page "/Department"


<div class="card w-100" style="margin-bottom:10px;">
    <div class="card-body p-0">
        <DxMenu CollapseItemsToHamburgerMenu="true"
                CollapseItemToIconMode="MenuCollapseItemToIconMode.Sequentially"
                DisplayMode="MenuDisplayMode.Desktop">
            <Items>
                <DxMenuItem Text="Add" IconCssClass="fa fa-add" Click="@addNew" />
                <DxMenuItem Text="Edit" IconCssClass="fa fa-pencil" Click="@addEdit" Enabled="@EditEnabled" />
                <DxMenuItem Text="Delete" IconCssClass="fa fa-remove" Click="@addDelete" Enabled="@DeleteEnabled" />
                <DxMenuItem Text="Export" IconCssClass="fa fa-file-excel" Click="@ExportToExcel" />
            </Items>
        </DxMenu>
    </div>
</div>

<DxGrid @ref="Grid"
        Data="_departmentItems"
        KeyFieldName="DepartmentId"
        EditModelSaving="Grid_EditModelSaving"
        DataItemDeleting="Grid_DataItemDeleting"
        CustomizeEditModel="Grid_CustomizeEditModel"
        CustomizeElement="Grid_CustomizeElement"
        ShowSearchBox="true"
        PagerNavigationMode="PagerNavigationMode.InputBox"
        PageSizeSelectorVisible="true"
        PageSizeSelectorAllRowsItemVisible="true"
        PageSizeSelectorItems="@(new int[] { 5,10,20 })"
        PageSize="20"
        SelectionMode="GridSelectionMode.Multiple"
        SelectAllCheckboxMode="GridSelectAllCheckboxMode.AllPages"
        AutoExpandAllGroupRows="true"
        CssClass="ch-360  " style="height: calc(100vh - 220px);"
        FocusedRowEnabled="true"
        RowClick="OnRowClick"
        SelectedDataItemsChanged="@SelectedDataItemsChanged"
        RowDoubleClick="OnRowDoubleClick"
        AllowSelectRowByClick="true">
    <Columns>
        <DxGridSelectionColumn Width="60px" AllowSelectAll="true" />
        <DxGridDataColumn FieldName="DepartmentId" MinWidth="80" Visible="false" />
        <DxGridDataColumn FieldName="PlantCode" Caption="Company Code" MinWidth="80" />
        <DxGridDataColumn FieldName="Division" MinWidth="80" />
        <DxGridDataColumn FieldName="DepartmentName" Caption="Name" MinWidth="80" />
        <DxGridDataColumn FieldName="DepartmentCode" Caption="Code" MinWidth="80" />
        <DxGridDataColumn FieldName="StatusCode" MinWidth="80" />
        <DxGridDataColumn FieldName="ModifiedDate" Width="10%" />
        <DxGridDataColumn FieldName="ModifiedBy" Width="10%" />


    </Columns>
    <EditFormTemplate Context="EditFormContext">
        @{
            var department = (ViewDepartment)EditFormContext.EditModel;
        }
        <DxFormLayout CssClass="w-100">
            <DxFormLayoutItem Caption="Division" ColSpanMd="6">

                <DxComboBox Data="@_divisionsItems"
                            NullText="Select Division..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            TextFieldName="DivisionDrop"
                            ValueFieldName="DivisionID"
                            SelectedItemChanged="@((ViewDivision plantSelect) => SelectedItemChanged(plantSelect))"
                            @bind-Value="@department.DivisionId"
                            ShowValidationIcon="true">
                </DxComboBox>
                <ValidationMessage For="@(() => department.DivisionId)" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Company" ColSpanMd="6">
                <DxTextBox @bind-Text="@companyName" ReadOnly="true" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Department Name" ColSpanMd="6">
                <DxTextBox @bind-Text="@department.DepartmentName" ShowValidationIcon="true" />
                <ValidationMessage For="@(() => department.DepartmentName)" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Department Code" ColSpanMd="6">
                <DxTextBox @bind-Text="@department.DepartmentCode" ShowValidationIcon="true" />
                <ValidationMessage For="@(() => department.DepartmentCode)" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Profile Code" ColSpanMd="6">
                <DxTextBox @bind-Text="@department.ProfileCode" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Description" ColSpanMd="6">
                <DxMemo @bind-Text="@department.Description" Rows="5" ShowValidationIcon="true" />
                <ValidationMessage For="@(() => department.Description)" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Status" ColSpanMd="6">
                <DxComboBox Data="@_stausItems"
                            NullText="Select Status..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            TextFieldName="CodeValue"
                            ValueFieldName="CodeId"
                            @bind-Value="@department.StatusCodeId"
                            ShowValidationIcon="true">
                </DxComboBox>
                <ValidationMessage For="@(() => department.StatusCodeId)" />
            </DxFormLayoutItem>
        </DxFormLayout>
    </EditFormTemplate>
    <TotalSummary>
        <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="DepartmentName" />
    </TotalSummary>
</DxGrid>

<DxPopup @ref="popup" HeaderText="CRT" ShowCloseButton="true" Width="350px" @bind-Visible="@Blukdeletepopup">
    <div class="text-center">
        <Content>
        <p>
                <div > Do you want to delete</div>
          
        </p>
    </Content>
       
        <DxButton class=align-Button Text="Yes" Click="@(() => bulkDelete())" />
        <DxButton class =align-items Text="No" Click="@(() => ClosePopup())" />
    </div>
</DxPopup>
<DxPopup @ref="popup" HeaderText="CRT" ShowCloseButton="true" @bind-Visible="@PopupVisible">


    <div class="text-center">
        <p>@DeleteerrorMessage</p>

        <DxButton Text="OK" Click="@(() => ClosePopup())" />
    </div>


</DxPopup>

@code {
    private List<ViewPlants> _plantItems;
    private List<CodeMaster> _stausItems;
    private List<ViewDepartment> _departmentItems;
    private List<ViewDivision> _divisionsItems;
    private List<ViewDivision> _divisionsListItems;
    public ApplicationUser? applicationUser { get; private set; }
    private ViewDepartment _selectedItems;
    IReadOnlyList<object> SelectedDataItems { get; set; }
    bool Blukdeletepopup { get; set; } = false;
    bool EditEnabled { get; set; } = true;
    bool DeleteEnabled { get; set; } = true;
    string? DeleteerrorMessage;
    DxPopup? popup;
    bool PopupVisible { get; set; } = false;
    IGrid Grid { get; set; }
    string companyName = "";
    bool ExportSelectedRowsOnly { get; set; }
    protected override async Task OnInitializedAsync()
    {
        await jsRuntime.InvokeAsync<string>("showLoading");
        _plantItems = await Mediator.Send(new GetAllPlantQuery());
        _stausItems = await Mediator.Send(new GetAllCodeMasterQuery("Status"));
        _divisionsItems = await Mediator.Send(new GetAllDivisionQuery());
        applicationUser = await _localStorageService.GetItem<ApplicationUser>("user");
        await jsRuntime.InvokeAsync<string>("hideLoading");
        await UpdateDataAsync();
    }
    void Grid_CustomizeEditModel(GridCustomizeEditModelEventArgs e)
    {
        if (e.IsNew)
        {
            companyName = "";
            companyId =null;
        }
        else
        {
            var dep = (ViewDepartment)e.DataItem;
            companyName = dep.Company;
            companyId = dep.CompanyId;
        }
    }
    async Task UpdateDataAsync()
    {
        await jsRuntime.InvokeAsync<string>("showLoading");
        _departmentItems = await Mediator.Send(new GetAllDepartmentQuery());
        if (_departmentItems.Count > 0)
        {
            _selectedItems = _departmentItems.FirstOrDefault();
            EditEnabled = true;
            DeleteEnabled = true;
            StateHasChanged();
        }
        await jsRuntime.InvokeAsync<string>("hideLoading");
    }
    void SelectedItemChanged(ViewDivision plantID)
    {
        if (plantID != null)
        {
            companyName = plantID.PlantDescription;
            companyId = plantID.CompanyId;
        }
    }
    async Task Grid_EditModelSaving(GridEditModelSavingEventArgs e)
    {
        var editableDepartment = (ViewDepartment)e.EditModel;
        if (e.IsNew)
        {
            var request = new CreateDepartmentCommand
                {
                    CompanyId = companyId,
                    DivisionId = editableDepartment.DivisionId,
                    Name = editableDepartment.DepartmentName,
                    Code = editableDepartment.DepartmentCode,
                    Description = editableDepartment.Description,
                    StatusCodeId = editableDepartment.StatusCodeId,
                    ProfileCode = editableDepartment.ProfileCode,
                    ModifiedByUserId = applicationUser.UserID,
                    ModifiedDate = DateTime.Now,
                    AddedByUserId = applicationUser.UserID,
                    AddedDate = DateTime.Now,
                };
            await Mediator.Send(request);
            await UpdateDataAsync();
        }
        else
        {
            await UpdatePlantAsync(editableDepartment);
        }

    }
    async Task Grid_DataItemDeleting(GridDataItemDeletingEventArgs e)
    {
        var editableDepartment = (ViewDepartment)e.DataItem;
        var request = new DeleteDepartmentCommand(editableDepartment.DepartmentId);
        await Mediator.Send(request);
        await UpdateDataAsync();
        Grid.SetFocusedRowIndex(0);
    }
    async Task UpdatePlantAsync(ViewDepartment editableDepartment)
    {
        var request = new EditDepartmentCommand
            {
                DepartmentId = editableDepartment.DepartmentId,
                CompanyId = companyId,
                DivisionId = editableDepartment.DivisionId,
                Name = editableDepartment.DepartmentName,
                Code = editableDepartment.DepartmentCode,
                Description = editableDepartment.Description,
                StatusCodeId = editableDepartment.StatusCodeId,
                AddedByUserId = editableDepartment.AddedByUserId,
                AddedDate = editableDepartment.AddedDate,
                ModifiedByUserId = applicationUser.UserID,
                ModifiedDate = DateTime.Now,
                ProfileCode = editableDepartment.ProfileCode,
            };
        await Mediator.Send(request);
        await UpdateDataAsync();
    }
    void Grid_CustomizeElement(GridCustomizeElementEventArgs e)
    {
        if (e.ElementType == GridElementType.DataRow && e.VisibleIndex % 2 == 1)
        {
            e.CssClass = "alt-item";
        }
        if (e.ElementType == GridElementType.HeaderCell)
        {
            e.Style = "background-color: rgba(0, 0, 0, 0.08)";
            e.CssClass = "header-bold";
        }
    }
    async Task ExportToExcel()
    {
        await Grid.ExportToXlsxAsync("ExportResult", new GridXlExportOptions()
            {
                ExportSelectedRowsOnly = true,
                CustomizeCell = OnCustomizeCell
            });
    }
    void OnCustomizeCell(GridExportCustomizeCellEventArgs args)
    {
        if (args.ColumnFieldName == "ContactName" && args.AreaType == SheetAreaType.DataArea)
            args.Formatting.Font = new XlCellFont() { Italic = true };
        args.Handled = true;
    }

    void OnRowClick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "DepartmentId");
        _selectedItems = _departmentItems.FirstOrDefault(f => f.DepartmentId == (long?)UniqueId);
    }
    void OnRowDoubleClick(GridRowClickEventArgs e)
    {
        OnRowClick(e);
        addEdit();
    }
    void addNew()
    {
        Grid.StartEditNewRowAsync();
    }
    void addEdit()
    {
        Grid.StartEditDataItemAsync(_selectedItems);
    }
    async void ClosePopup()
    {
        PopupVisible = false;
        await UpdateDataAsync();
    }
    void addDelete()
    {
        Blukdeletepopup = true;
    }
    async Task bulkDelete()
    {
        try
        {
            if (SelectedDataItems != null)
            {
                foreach (object item in SelectedDataItems)
                {

                    if (item is ViewDepartment forumdepartment)
                    {

                        // var editableDepartment = (ViewDepartment)e.DataItem;
                        var request = new DeleteDepartmentCommand(forumdepartment.DepartmentId);
                        await Mediator.Send(request);
                        UpdateDataAsync();
                        Blukdeletepopup = false;
                        Grid.SetFocusedRowIndex(0);
                    }

                }
            }
        }
        catch (Exception eq)
        {
            DeleteerrorMessage = eq.Message;
            PopupVisible = true;
        }

        await UpdateDataAsync();
    }

    void SelectedDataItemsChanged(IReadOnlyList<object> SelectedToItems)
    {
        SelectedDataItems = SelectedToItems;
        if (SelectedDataItems.Count > 1)
        {
            EditEnabled = false;
        }
    }
}
