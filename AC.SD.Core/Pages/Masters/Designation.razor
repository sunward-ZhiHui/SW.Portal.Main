@using Application.Command.designations;
@using Application.Commands;
@using Application.Queries;
@using MediatR
@using global::Core.Entities.Views;
@using global::Core.Entities;
@inject IMediator Mediator
@using DevExpress.Export
@using Application.Response;
@inject IJSRuntime jsRuntime
@using global::Core.Repositories.Query;
@inject ILocalStorageService<ApplicationUser> _localStorageService
@inject AC.SD.Core.Services.ToastService toastService


@page "/designation"


<div class="card w-100" style="margin-bottom:10px;">
    <div class="card-body p-0">
        <DxMenu CollapseItemsToHamburgerMenu="true"
                CollapseItemToIconMode="MenuCollapseItemToIconMode.Sequentially"
                DisplayMode="MenuDisplayMode.Desktop">
            <Items>
                <DxMenuItem Text="Add" IconCssClass="fa fa-add" Click="@addNew" />
                <DxMenuItem Text="Edit" IconCssClass="fa fa-pencil" Click="@addEdit" Enabled="@EditEnabled" />
                <DxMenuItem Text="Delete" IconCssClass="fa fa-remove" Click="@addDelete" Enabled="@DeleteEnabled" />
                <DxMenuItem Text="Export" IconCssClass="fa fa-file-excel" Click="@ExportToExcel" />
            </Items>
        </DxMenu>
    </div>
</div>




<DxGrid @ref="Grid"
        Data="_designationItems"
        KeyFieldName="DesignationID"
        EditModelSaving="Grid_EditModelSaving"
        DataItemDeleting="Grid_DataItemDeleting"
        CustomizeEditModel="Grid_CustomizeEditModel"
        CustomizeElement="Grid_CustomizeElement"
        ShowSearchBox="true"
        PagerNavigationMode="PagerNavigationMode.InputBox"
        PageSizeSelectorVisible="true"
        PageSizeSelectorAllRowsItemVisible="true"
        PageSizeSelectorItems="@(new int[] { 5,10,20 })"
        PageSize="20"
        SelectionMode="GridSelectionMode.Multiple"
        SelectAllCheckboxMode="GridSelectAllCheckboxMode.AllPages"
        AutoExpandAllGroupRows="true"
        CssClass="ch-360" style="height: calc(100vh - 220px);"
        FocusedRowEnabled="true"
        RowClick="OnRowClick"
        RowDoubleClick="OnRowDoubleClick"
        SelectedDataItemsChanged="@SelectedDataItemsChanged"
        AllowSelectRowByClick="true">
    <Columns>
        <DxGridSelectionColumn Width="60px" AllowSelectAll="true" />
        <DxGridDataColumn FieldName="DesignationID" MinWidth="80" Visible="false" />
        <DxGridDataColumn FieldName="PlantCode" Caption="Company Code" MinWidth="80" />
        <DxGridDataColumn FieldName="SubSectionName" MinWidth="80" />
        <DxGridDataColumn FieldName="LevelName" MinWidth="80" />
        <DxGridDataColumn FieldName="Name" MinWidth="80" />
        <DxGridDataColumn FieldName="Code" MinWidth="80" />
        <DxGridDataColumn FieldName="Description" MinWidth="80" />
        <DxGridDataColumn FieldName="HeadCount" MinWidth="80" />
        <DxGridDataColumn FieldName="StatusCode" MinWidth="80" />
        <DxGridDataColumn FieldName="ModifiedDate" Width="10%" />
        <DxGridDataColumn FieldName="ModifiedBy" Width="10%" />

    </Columns>
    <EditFormTemplate Context="EditFormContext">
        @{
            var plant = (ViewDesignation)EditFormContext.EditModel;
        }
        <DxFormLayout CssClass="w-100">
            <DxFormLayoutItem Caption="Sub Section" ColSpanMd="6">
                <DxComboBox Data="@_subsectionListItems"
                            NullText="Select SubSection..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            TextFieldName="SubSectionDrop"
                            ValueFieldName="SubSectionId"
                            @bind-Value="@plant.SubSectionID"
                            SelectedItemChanged="@((ViewSubSection plantSelect) => SelectedItemChanged(plantSelect))"
                            ShowValidationIcon="true">
                </DxComboBox>
                <ValidationMessage For="@(() => plant.SubSectionID)" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Company" ColSpanMd="6">
                <DxComboBox Data="@_plantItems"
                            NullText="Select Company..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            TextFieldName="Description"
                            ValueFieldName="PlantID"
                            @bind-Value="@CompanyID" ReadOnly="true" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Division" ColSpanMd="6">
                <DxComboBox Data="@_divisions"
                            NullText="Select Division..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            TextFieldName="Name"
                            ValueFieldName="DivisionID"
                            ReadOnly="true"
                            @bind-Value="@DivisionID">
                </DxComboBox>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Department" ColSpanMd="6">
                <DxComboBox Data="@_departments"
                            NullText="Select Department..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            TextFieldName="DepartmentName"
                            ValueFieldName="DepartmentId"
                            ReadOnly="true"
                            @bind-Value="@DepartmentID">
                </DxComboBox>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Section" ColSpanMd="6">
                <DxComboBox Data="@_sections"
                            NullText="Select Section..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            TextFieldName="SectionName"
                            ValueFieldName="SectionId"
                            ReadOnly="true"
                            @bind-Value="@SectionID">
                </DxComboBox>
            </DxFormLayoutItem>

            <DxFormLayoutItem Caption="Level Master" ColSpanMd="6">
                <DxComboBox Data="@levelItems"
                            NullText="Select Level Master..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            TextFieldName="Name"
                            ValueFieldName="LevelID"
                            @bind-Value="@plant.LevelID"
                            ShowValidationIcon="true">
                </DxComboBox>
                <ValidationMessage For="@(() => plant.LevelID)" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Name" ColSpanMd="6">
                <DxTextBox @bind-Text="@plant.Name" ShowValidationIcon="true" />
                <ValidationMessage For="@(() => plant.Name)" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Code" ColSpanMd="6">
                <DxTextBox @bind-Text="@plant.Code" ShowValidationIcon="true" />
                <ValidationMessage For="@(() => plant.Code)" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Description" ColSpanMd="6">
                <DxMemo @bind-Text="@plant.Description" Rows="5" ShowValidationIcon="true" />
                <ValidationMessage For="@(() => plant.Description)" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="HeadCount" ColSpanMd="6">
                <DxSpinEdit @bind-Value="@plant.HeadCount" ShowValidationIcon="true" />
                <ValidationMessage For="@(() => plant.HeadCount)" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Status" ColSpanMd="6">
                <DxComboBox Data="@_stausItems"
                            NullText="Select Status..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            TextFieldName="CodeValue"
                            ValueFieldName="CodeId"
                            @bind-Value="@plant.StatusCodeID"
                            ShowValidationIcon="true">
                </DxComboBox>
                <ValidationMessage For="@(() => plant.StatusCodeID)" />
            </DxFormLayoutItem>
        </DxFormLayout>
    </EditFormTemplate>
    <TotalSummary>
        <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="Name" />
    </TotalSummary>
</DxGrid>

