    private ViewSection _selectsec;
    protected override async Task OnInitializedAsync()
    {
        // await jsRuntime.InvokeAsync<string>("showLoading");
        PanelVisible = true;
        _sections = await Mediator.Send(new GetAllSectionQuery());
        _departments = await Mediator.Send(new GetAllDepartmentQuery());
        _divisions = await Mediator.Send(new GetAllDivisionQuery());
        _plantItems = await Mediator.Send(new GetAllPlantQuery());
        _stausItems = await Mediator.Send(new GetAllCodeMasterQuery("Status"));
        _subsectionListItems = await Mediator.Send(new GetAllSubSectionQuery());
        levelItems = await Mediator.Send(new GetAllLevelMasterQuery());
        applicationUser = await _localStorageService.GetItem<ApplicationUser>("user");
        PanelVisible = false;
        // await jsRuntime.InvokeAsync<string>("hideLoading");
        if (applicationUser != null && applicationUser.UserID > 0)
        {
            portalMenuModels = await Mediator.Send(new GetAllApplicationPermissionAllQuery(applicationUser?.UserID));
        }
        await UpdateDataAsync();
        if (Type == "subsection")
        {
            isSubsectionEnabled = true;
        }
    }
    void viewAuditLog(bool isdeleted)
    {
        IsDeleted = isdeleted;
        AuditLogPopUp = true;
    }
    async Task UpdateDataAsync()
    {
        // await jsRuntime.InvokeAsync<string>("showLoading");
        PanelVisible = true;
        var model = await Mediator.Send(new GetAllDesignationQuery());
        for (int i = 0; i < model.Count; i++)
        {
            model[i].Index = i + 1;
        }
        _designationItems = model;
        if (PlantID != null && PlantID != -1)
        {
            if (Type == "subsection")
            {
                _selectedsubsec = _subsectionListItems.FirstOrDefault(f => f.SubSectionId == PlantID);
                var items = _sections.Where(c => c.SectionId == _selectedsubsec.SectionId);
                _selectsec = items.FirstOrDefault();

                Name = _selectedsubsec.SubSectionName;
                companyName = _selectedsubsec.PlantCode;
                divisionName = _selectedsubsec.Division;
                DepartmentName = _selectsec.DepartmentName;
                secName = _selectedsubsec.SectionName;
            }
        }
        if (_designationItems.Count > 0)
        {
            _selectedItems = _designationItems.FirstOrDefault();

            EditEnabled = true;
            DeleteEnabled = true;
            Grid.ClearSelection();
        }
        AddEnabled = portalMenuModels.Any(f => f.PermissionID == 60043);
        EditEnabled = portalMenuModels.Any(f => f.PermissionID == 60044);
        DeleteEnabled = portalMenuModels.Any(f => f.PermissionID == 60045);
        ExportEnabled = portalMenuModels.Any(f => f.PermissionID == 60046);
        SelectedDataItems = null;
        PanelVisible = false;
        StateHasChanged();
    }
    void Grid_CustomizeEditModel(GridCustomizeEditModelEventArgs e)
    {
        var dep = (ViewDesignation)e.DataItem;
        if (e.IsNew)
        {
            var newmaster = (ViewDesignation)e.EditModel;
            newmaster.StatusCodeID = 1;
            CompanyID = null;
            DivisionID = null;
            SectionID = null;
            DepartmentID = null;
            if (Type == "subsection")
            {
                var _masters = _designationItems.FirstOrDefault(f => f.SubSectionID == PlantID);
                if (_masters != null)
                {
                    isEnabled = false;
                    newmaster.SubSectionID = _masters.SubSectionID;
                    CompanyID = _masters.CompanyID;
                    DivisionID = _masters.DivisionID;
                    DepartmentID = _masters.DepartmentID;
                    SectionID = _masters.SectionID;
                    // SelectedItemChanged(_ictmasters);
                }
            }
        }
        else
        {
            CompanyID = dep.CompanyID;
            DivisionID = dep.DivisionID;
            SectionID = dep.SectionID;
            DepartmentID = dep.DepartmentID;
        }
    }
    void SelectedItemChanged(long? plantID, ViewDesignation viewDesignation)
    {
        viewDesignation.SubSectionID = plantID;
        var data = _subsectionListItems != null && plantID > 0 ? _subsectionListItems.FirstOrDefault(f => f.SubSectionId == plantID) : null;
        CompanyID = null;
        DivisionID = null;
        SectionID = null;
        DepartmentID = null;
        if (data != null)
        {
            CompanyID = data.CompanyId;
            DivisionID = data.DivisionId;
            SectionID = data.SectionId;
            DepartmentID = data.DepartmentId;
        }
    }
    async Task Grid_EditModelSaving(GridEditModelSavingEventArgs e)
    {
        var editableData = (ViewDesignation)e.EditModel;
        if (e.IsNew)
        {
            try
            {
                var request = new CreateDesignationCommand
                {
                    Name = editableData.Name,
                    Description = editableData.Description,
                    StatusCodeId = editableData.StatusCodeID.Value,
                    Code = editableData.Code,
                    CompanyId = CompanyID,
                    LevelId = editableData.LevelID,
                    HeadCount = editableData.HeadCount,
                    SubSectionID = editableData.SubSectionID,
                    AddedByUserId = applicationUser.UserID,
                    ModifiedByUserId = applicationUser.UserID,
                    AddedDate = DateTime.Now,
                    ModifiedDate = DateTime.Now,
                    SectionID = SectionID,
                    AddedBy = applicationUser.UserName,
                    StatusCode = _stausItems?.Where(w => w.CodeId == editableData.StatusCodeID)?.FirstOrDefault()?.CodeValue,
                    SubSectionName = _subsectionListItems?.Where(w => w.SubSectionId == editableData.SubSectionID)?.FirstOrDefault()?.SubSectionName,
                    CompanyName = _plantItems?.Where(w => w.PlantID == CompanyID)?.FirstOrDefault()?.PlantCode,
                    SectionName = _sections?.Where(w => w.SectionId == SectionID)?.FirstOrDefault()?.SectionName,
                    LevelName = levelItems?.Where(w => w.LevelID == editableData.LevelID)?.FirstOrDefault()?.Name,
                };
                await Mediator.Send(request);
                toastService.ShowToast("Record save Successfully", AC.SD.Core.Services.ToastLevel.Success);
                await UpdateDataAsync();
            }
            catch (Exception ex)
            {
                toastService.ShowToast(ex.Message, AC.SD.Core.Services.ToastLevel.Warning);
            }
        }
        else
        {
            await UpdatePlantAsync(editableData);
        }

    }
    async Task Grid_DataItemDeleting(GridDataItemDeletingEventArgs e)
    {
        var editableData = (ViewDesignation)e.DataItem;
        var request = new DeleteDesignationCommand(editableData.DesignationID,applicationUser.UserID);
        await Mediator.Send(request);
        await UpdateDataAsync();
        Grid.SetFocusedRowIndex(0);
    }
    async Task UpdatePlantAsync(ViewDesignation editableData)
    {
        try
        {
            var request = new EditDesignationCommand
            {
                DesignationId = editableData.DesignationID,
                Name = editableData.Name,
                Description = editableData.Description,
                StatusCodeId = editableData.StatusCodeID.Value,
                AddedByUserId = editableData.AddedByUserID,
                CompanyId = CompanyID,
                SectionID = SectionID,
                AddedDate = editableData.AddedDate,
                Code = editableData.Code,
                HeadCount = editableData.HeadCount,
                LevelId = editableData.LevelID,
                SubSectionID = editableData.SubSectionID,
                ModifiedDate = DateTime.Now,
                ModifiedByUserId = applicationUser.UserID,
                ModifiedBy = applicationUser.UserName,
                StatusCode = _stausItems?.Where(w => w.CodeId == editableData.StatusCodeID)?.FirstOrDefault()?.CodeValue,
                SubSectionName = _subsectionListItems?.Where(w => w.SubSectionId == editableData.SubSectionID)?.FirstOrDefault()?.SubSectionName,
                CompanyName = _plantItems?.Where(w => w.PlantID == CompanyID)?.FirstOrDefault()?.PlantCode,
                SectionName = _sections?.Where(w => w.SectionId == SectionID)?.FirstOrDefault()?.SectionName,
                LevelName = levelItems?.Where(w => w.LevelID == editableData.LevelID)?.FirstOrDefault()?.Name,
            };
            await Mediator.Send(request);
            toastService.ShowToast("Record updated Successfully", AC.SD.Core.Services.ToastLevel.Success);
            await UpdateDataAsync();
        }
        catch (Exception ex)
        {
            toastService.ShowToast(ex.Message, AC.SD.Core.Services.ToastLevel.Warning);
        }
    }
    void Grid_CustomizeElement(GridCustomizeElementEventArgs e)
    {
        if (e.ElementType == GridElementType.DataRow && e.VisibleIndex % 2 == 1)
        {
            e.CssClass = "alt-item";
        }

    }
    async Task ExportToExcel()
    {
        if (SelectedDataItems != null)
        {

            await Grid.ExportToXlsxAsync("ExportResult", new GridXlExportOptions()
            {

                ExportSelectedRowsOnly = true,
                CustomizeCell = OnCustomizeCell

            });
        }
        else
        {
            await Grid.ExportToXlsxAsync("ExportResult", new GridXlExportOptions()
            {

                ExportSelectedRowsOnly = false,
                CustomizeCell = OnCustomizeCell

            });
        }
    }
    void OnCustomizeCell(GridExportCustomizeCellEventArgs args)
    {
        if (args.ColumnFieldName == "ContactName" && args.AreaType == SheetAreaType.DataArea)
            args.Formatting.Font = new XlCellFont() { Italic = true };
        args.Handled = true;
    }
    void OnRowClick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "DesignationID");
        _selectedItems = _designationItems.FirstOrDefault(f => f.DesignationID == (long?)UniqueId);


    }
    void OnRowDoubleClick(GridRowClickEventArgs e)
    {
        OnRowClick(e);
        addEdit();
    }
    void addNew()
    {
        Grid.StartEditNewRowAsync();

    }
    void addEdit()
    {
        EditEnabled = portalMenuModels.Any(f => f.PermissionID == 60044);
        if (EditEnabled == true)
        {
            Grid.StartEditDataItemAsync(_selectedItems);
        }

    }
    void EulaPopupClosed(PopupClosedEventArgs args)
    {
        SelectedDataItems = null;
        Blukdeletepopup = false;
        PopupVisible = false;
        // UpdateDataAsync();
    }
    async void ClosePopup()
    {
        PopupVisible = false;
        await UpdateDataAsync();
    }
    void addDelete()
    {
        Blukdeletepopup = true;
    }
    async Task bulkDelete()
    {
        try
        {

            if (SelectedDataItems != null)
            {
                foreach (object item in SelectedDataItems)
                {

                    if (item is ViewDesignation forumdesignation)
                    {
                        //var editableData = (ViewDesignation)e.DataItem;
                        var request = new DeleteDesignationCommand(forumdesignation.DesignationID,applicationUser.UserID);
                        await Mediator.Send(request);
                        Blukdeletepopup = false;
                        toastService.ShowToast("Record deleted Successfully", AC.SD.Core.Services.ToastLevel.Success);
                        await UpdateDataAsync();
                        Grid.SetFocusedRowIndex(0);

                    }

                }
            }
        }
        catch (Exception eq)
        {
            //DeleteerrorMessage = eq.Message;
            //PopupVisible = true;
            Blukdeletepopup = false;
            toastService.ShowToast("The Selected Record Do not deleted", AC.SD.Core.Services.ToastLevel.Error);
        }

        await UpdateDataAsync();
    }

    void SelectedDataItemsChanged(IReadOnlyList<object> SelectedToItems)
    {
        SelectedDataItems = SelectedToItems;
        if (SelectedDataItems.Count > 1)
        {
            EditEnabled = false;
        }
        else
        {
            EditEnabled = portalMenuModels.Any(f => f.PermissionID == 60044);
        }

    }
    void ResetSubSection()
    {
        PlantID = -1;
        isEnabled = true;
        isSubsectionEnabled = false;
        Grid.CancelEditAsync();
        NavigationManager.NavigateTo("masters/5/designation/-1");

    }
    void AddLevelmaster()
    {
        NavigationManager.NavigateTo("masters/6/designation/" + _selectedItems.DesignationID);
    }
    public async ValueTask DisposeAsync()
    {
        if (_sections != null)
        {
            _sections.Clear();
            _sections = null;
        }
        if (_stausItems != null)
        {
            _stausItems.Clear();
            _stausItems = null;
        }
        if (_departments != null)
        {
            _departments.Clear();
            _departments = null;
        }
        if (_divisions != null)
        {
            _divisions.Clear();
            _divisions = null;
        }
        if (_plantItems != null)
        {
            _plantItems.Clear();
            _plantItems = null;
        }
        if (_designationItems != null)
        {
            _designationItems.Clear();
            _designationItems = null;
        }
        if (levelItems != null)
        {
            levelItems.Clear();
