@code {
    string Plantcode = "";
    string Description = "";
    private List<ViewPlants> _plants;
    [Parameter]
    public long? PlantID { get; set; }

    [Parameter]
    public long? SiteId { get; set; }
    [Parameter]
    public string Type { get; set; }
    private List<ViewDivision>? _divisions;
    private List<CodeMaster>? _stausItems;
    private List<ViewPlants>? _plantItems;
    private ViewDivision? _selectedItems;
    bool EditEnabled { get; set; } = true;
    DxPopup? popup;
    IReadOnlyList<object> SelectedDataItems { get; set; }
    bool PopupVisible { get; set; } = false;
    string? errorMessage;
    bool MessageVisible { get; set; }
    bool DeleteEnabled { get; set; } = true;
    bool Blukdeletepopup { get; set; } = false;
    string? DeleteerrorMessage;
    IGrid? Grid { get; set; }
    bool ExportSelectedRowsOnly { get; set; }
    public ApplicationUser? applicationUser { get; private set; }
    private ViewDivision _selectlst;
    bool isEnabled { get; set; } = true;
    bool isCompanyEnabled { get; set; } = false;
    // private ViewPlants? _selectItems;
    private ViewPlants _selectplant;

    protected override async Task OnInitializedAsync()
    {
        await jsRuntime.InvokeAsync<string>("showLoading");
        var models = await Mediator.Send(new GetAllCodeMasterQuery("Status"));
        _stausItems = models;
        var plants = await Mediator.Send(new GetAllPlantQuery());
        _plantItems = plants;
        applicationUser = await _localStorageService.GetItem<ApplicationUser>("user");
        await jsRuntime.InvokeAsync<string>("hideLoading");
        await UpdateDataAsync();
        if (Type == "Plants")
        {
            isCompanyEnabled = true;
        }
    }
    async Task UpdateDataAsync()
    {
        await jsRuntime.InvokeAsync<string>("showLoading");
        var  model = await Mediator.Send(new GetAllDivisionQuery());
        for (int i = 0; i < model.Count; i++)
        {
            model[i].Index = i + 1;
        }
        _divisions = model;

        if (PlantID != null && PlantID != -1)
        {
            if (Type == "Plants")
            {
                _selectplant = _plantItems.FirstOrDefault(f => f.PlantID == PlantID);
                Plantcode = _selectplant.PlantCode;

                Description = _selectplant.Description;

            }
          

        }
        if (_divisions.Count > 0)
        {
            _selectedItems = _divisions.FirstOrDefault();
            EditEnabled = true;
            DeleteEnabled = true;
            StateHasChanged();
        }
        await jsRuntime.InvokeAsync<string>("hideLoading");
    }

    void Grid_CustomizeEditModel(GridCustomizeEditModelEventArgs e)
    {
        if (e.IsNew)
        {
            var newData = (ViewDivision)e.EditModel;
             newData.PlantCode = "";
            newData.Name = "";
            newData.Description = "";
            newData.StatusCodeID = null;
           
            if (Type == "Plants")
            {
                var _masters = _divisions.FirstOrDefault(f => f.CompanyId == PlantID);
                if (_masters != null)
                {

                    isEnabled = false;
                    newData.CompanyId = _masters.CompanyId;
                   // newData.DivisionID = _masters.DivisionID;
                   // SelectedItemChanged(_masters.CompanyId);
                }
            }
        }
    }
    async Task Grid_EditModelSaving(GridEditModelSavingEventArgs e)
    {
        var editableData = (ViewDivision)e.EditModel;
        if (e.IsNew)
        {
            var request = new CreateDivisionCommand
                {
                    Name = editableData.Name,
                    Description = editableData.Description,
                    StatusCodeId = editableData.StatusCodeID,
                    Code = editableData.Code,
                    CompanyId = editableData.CompanyId,
                    AddedByUserId = applicationUser.UserID,
                    ModifiedByUserId = applicationUser.UserID,
                    AddedDate = DateTime.Now,
                    ModifiedDate = DateTime.Now,
                };
            await Mediator.Send(request);
            toastService.ShowToast("Record save Successfully", AC.SD.Core.Services.ToastLevel.Success);
            await UpdateDataAsync();
        }
        else
        {
            await UpdatePlantAsync(editableData);
        }

    }
    async Task Grid_DataItemDeleting(GridDataItemDeletingEventArgs e)
    {
        var editableData = (ViewDivision)e.DataItem;
        var request = new DeleteDivisionCommand(editableData.DivisionID);
        await Mediator.Send(request);
        await UpdateDataAsync();
        Grid.SetFocusedRowIndex(0);
    }
    async Task UpdatePlantAsync(ViewDivision editableData)
    {
        var request = new EditDivisionCommand
            {
                DivisionId = editableData.DivisionID,
                Name = editableData.Name,
                Description = editableData.Description,
                StatusCodeId = editableData.StatusCodeID,
                AddedByUserId = editableData.AddedByUserID,
                AddedDate = editableData.AddedDate,
                Code = editableData.Code,
                CompanyId = editableData.CompanyId,
                ModifiedByUserId = applicationUser.UserID,
                ModifiedDate = DateTime.Now,
            };
        await Mediator.Send(request);
        toastService.ShowToast("Record updated Successfully", AC.SD.Core.Services.ToastLevel.Success);
        await UpdateDataAsync();
    }
    void Grid_CustomizeElement(GridCustomizeElementEventArgs e)
    {
        if (e.ElementType == GridElementType.DataRow && e.VisibleIndex % 2 == 1)
        {
            e.CssClass = "alt-item";
        }
        if (e.ElementType == GridElementType.HeaderCell)
        {
            e.Style = "background-color: rgba(0, 0, 0, 0.08)";
            e.CssClass = "header-bold";
        }
    }
    async Task ExportToExcel()
    {
        await Grid.ExportToXlsxAsync("ExportResult", new GridXlExportOptions()
            {
                ExportSelectedRowsOnly = true,
                CustomizeCell = OnCustomizeCell
            });
    }
    void OnCustomizeCell(GridExportCustomizeCellEventArgs args)
    {
        if (args.ColumnFieldName == "ContactName" && args.AreaType == SheetAreaType.DataArea)
            args.Formatting.Font = new XlCellFont() { Italic = true };
        args.Handled = true;
    }

    void OnRowClick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "DivisionID");
        _selectedItems = _divisions.FirstOrDefault(f => f.DivisionID == (long?)UniqueId);
    }
    void OnRowDoubleClick(GridRowClickEventArgs e)
    {
        OnRowClick(e);
        addEdit();
    }
    void addNew()
    {
        Grid.StartEditNewRowAsync();
     
    }
    void addEdit()
    {
        if (SelectedDataItems.Count == 1)
        {

            foreach (object item in SelectedDataItems)
            {

                if (item is ViewDivision viewDivision)
                {

                    _selectlst = _divisions.FirstOrDefault(f => f.DivisionID == viewDivision.DivisionID);


                }
            }
            Grid.StartEditDataItemAsync(_selectlst);
        }
        else
        {
            Grid.StartEditDataItemAsync(_selectedItems);
        }

    }
    void EulaPopupClosed(PopupClosedEventArgs args)
    {
        SelectedDataItems = null;
        Blukdeletepopup = false;
        PopupVisible = false;
        UpdateDataAsync();
    }
    async void ClosePopup()
    {
        PopupVisible = false;
        await UpdateDataAsync();
    }

    void addDelete()
    {
        Blukdeletepopup = true;
    }
    async Task bulkDelete()
    {
        try
        {

            if (SelectedDataItems != null)
            {
                foreach (object item in SelectedDataItems)
                {

                    if (item is ViewDivision forumdivision)
                    {

                        // var editableData = (ViewDivision)e.DataItem;
                        var request = new DeleteDivisionCommand(forumdivision.DivisionID);
                        await Mediator.Send(request);
                        Blukdeletepopup = false;
                        toastService.ShowToast("Record deleted Successfully", AC.SD.Core.Services.ToastLevel.Success);
                        await UpdateDataAsync();
                        Grid.SetFocusedRowIndex(0);
                    }

                }
            }
        }
        catch (Exception eq)
        {
            DeleteerrorMessage = eq.Message;
            PopupVisible = true;
        }

        await UpdateDataAsync();
    }

    void SelectedDataItemsChanged(IReadOnlyList<object> SelectedToItems)
    {
        SelectedDataItems = SelectedToItems;
        if (SelectedDataItems.Count > 1)
        {
            EditEnabled = false;
        }
        else
        {
            EditEnabled = true;
        }
    }
    void ResetCompany()
    {
        PlantID = -1;
        isEnabled = true;
        isCompanyEnabled = false;
        Grid.CancelEditAsync();
        NavigationManager.NavigateTo("masters/1/Division/-1");

    }
    void AddLocation()
    {
        NavigationManager.NavigateTo("masters/2/Division/" + _selectedItems.DivisionID);
    }
    
}
