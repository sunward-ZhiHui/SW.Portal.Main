@page "/LayOutPlanType"
@using Application.Command.LayoutPlanType;
@using Application.Commands;
@using Application.Queries;
@using MediatR
@using global::Core.Entities.Views;
@using global::Core.Entities;
@inject IMediator Mediator
@using DevExpress.Export
@using Application.Response;
@inject IJSRuntime jsRuntime

<h3>LayOutPlanType</h3>


<div class="g-title">
    <div class="g-left"></div>

    <span class=""></span><span class="g-text"></span>
    <div class="g-right">
        <button type="button" CssClass="download-btn"
                IconCssClass="demo-download-icon"
                Text="Free Trial"
                class="btn btn-excel" @onclick="ExportToExcel" title="Export to Excel">
            <i class="fa fa-file-excel-o"></i>Export
        </button>
    </div>
</div>
<div class="card w-100" style="margin-bottom:10px;">
    <div class="card-body p-0">
        <DxMenu CollapseItemsToHamburgerMenu="true"
                CollapseItemToIconMode="MenuCollapseItemToIconMode.Sequentially"
                DisplayMode="MenuDisplayMode.Desktop">
            <Items>
                <DxMenuItem Text="Add" IconCssClass="fa fa-add" Click="@addNew" />
                <DxMenuItem Text="Edit" IconCssClass="fa fa-pencil" Click="@addEdit" Enabled="@EditEnabled" />
                <DxMenuItem Text="Delete" IconCssClass="fa fa-remove" Click="@addDelete" Enabled="@DeleteEnabled" />
            </Items>
        </DxMenu>
    </div>
</div>
 <DxGrid
    @ref="Grid"
    Data="_layout"
        EditModelSaving="Grid_EditModelSaving"
        DataItemDeleting="Grid_DataItemDeleting"
        CustomizeElement="Grid_CustomizeElement"
    ShowGroupPanel="true" ShowGroupedColumns="true" ShowSearchBox="true"
    PagerNavigationMode="PagerNavigationMode.InputBox"
    PageSizeSelectorVisible="true"
    PageSizeSelectorAllRowsItemVisible="true"
    PageSizeSelectorItems="@(new int[] { 5, 10, 20 })"
    PageSize="20"
    SelectionMode="GridSelectionMode.Multiple"
    SelectAllCheckboxMode="GridSelectAllCheckboxMode.AllPages"
    AutoExpandAllGroupRows="true"
        KeyFieldName="LayoutPlanTypeId"
        CssClass="ch-360"
        style="height: calc(100vh - 250px);"
        FocusedRowEnabled="true"
        RowClick="OnRowClick"
        AllowSelectRowByClick="true"
        ValidationEnabled="true">

    <Columns>
        <DxGridSelectionColumn Width="60px" AllowSelectAll="true" />
        <DxGridDataColumn FieldName="LayoutPlanTypeId" Caption="LayoutPlanTypeId" MinWidth="80" />
        <DxGridDataColumn FieldName="VersionNo" Caption="VersionNo" MinWidth="80" />
        <DxGridDataColumn FieldName="Name" Caption="Name" MinWidth="80" />
        <DxGridDataColumn FieldName="StatusCodeId" Caption="StatusCodeId" MinWidth="80" />
        <DxGridDataColumn FieldName="Description" Caption="Description" MinWidth="80" />
            </Columns>

    <EditFormTemplate Context="EditFormContext">
        @{
            var plant = (ViewLayOutPlanType)EditFormContext.EditModel;
        }
       <DxFormLayout CssClass="w-100">
           <DxFormLayoutItem Caption="Company" ColSpanMd="6">
                         <DxComboBox Data="@_codes"
                            NullText="Select Company..."
                            FilteringMode="DataGridFilteringMode.Contains"
                              TextFieldName="CodeValue"
                            ValueFieldName="CodeId"
                             @bind-Value="@plant.StatusCodeId"
                            ShowValidationIcon="true">
                </DxComboBox>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Name" ColSpanMd="6">
                <DxTextBox @bind-Text="@plant.Name" />
            </DxFormLayoutItem>
            
            <DxFormLayoutItem Caption="VersionNo" ColSpanMd="6">
                <DxTextBox @bind-Text="@plant.VersionNo" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="StatusCodeId" ColSpanMd="6">
                <DxComboBox Data="@_stausItems"
                            NullText="Select Status..."
                            FilteringMode="DataGridFilteringMode.Contains"
                            TextFieldName="CodeValue"
                            ValueFieldName="CodeId"
                            @bind-Value="@plant.StatusCodeId"
                            ShowValidationIcon="true">
                </DxComboBox>
            </DxFormLayoutItem>
        </DxFormLayout>
    </EditFormTemplate>
    <TotalSummary>
        <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="Name" />
    </TotalSummary>


 </DxGrid>



@code {

    private List<ViewLayOutPlanType> _layout;
    private List<LayoutPlanType> _stausItems;
    private List<CodeMaster> _codes;
    IGrid Grid { get; set; }
    private ViewLayOutPlanType _selectedItems;
    bool EditEnabled { get; set; } = false;
    bool DeleteEnabled { get; set; } = false;
    bool ExportSelectedRowsOnly { get; set; }
    protected override async Task OnInitializedAsync()
    {
        await jsRuntime.InvokeAsync<string>("showLoading");
        var model = await Mediator.Send(new  GetAllLayOutPlanTypeQuery());
        // var models = await Mediator.Send(new GetAllCodeMasterQuery("Status"));
        // _stausItems = models;
        _layout = model;
        await jsRuntime.InvokeAsync<string>("hideLoading");
    }
    async Task UpdateDataAsync()
    {
         await jsRuntime.InvokeAsync<string>("showLoading");
        var model = await Mediator.Send(new GetAllLayOutPlanTypeQuery());
        _layout = model;
         await jsRuntime.InvokeAsync<string>("hideLoading");
    }
    void Grid_CustomizeEditModel(GridCustomizeEditModelEventArgs e)
    {
        if (e.IsNew)
        {
            var newplant = (ViewLayOutPlanType)e.EditModel;
            newplant.LayoutPlanTypeId =0;
            newplant.Description = "";
            newplant.StatusCodeId = null;
            newplant.Name = "";
            newplant.VersionNo = "";
        }
    }
    async Task Grid_EditModelSaving(GridEditModelSavingEventArgs e)
    {
        var editablePlant = (ViewLayOutPlanType)e.EditModel;
        if (e.IsNew)
        {
            var request = new CreateLayOutPlanTypeMasterCommand
                {
                    Name=editablePlant.Name,
                    LayoutPlanTypeId = editablePlant.LayoutPlanTypeId,
                    Description = editablePlant.Description,
                    StatusCodeId = editablePlant.StatusCodeId,
                    VersionNo=editablePlant.VersionNo,
                };
            await Mediator.Send(request);
            await UpdateDataAsync();
        }
        else
        {
            await UpdateLayoutAsync(editablePlant);
        }

    }
    async Task Grid_DataItemDeleting(GridDataItemDeletingEventArgs e)
    {
        var editablePlant = (ViewLayOutPlanType)e.DataItem;
        var request = new DeleteLayOutPlanTypeMasterCommand(editablePlant.LayoutPlanTypeId);
        await Mediator.Send(request);
        await UpdateDataAsync();
    }
    async Task UpdateLayoutAsync(ViewLayOutPlanType editablePlant)
    {
        var request = new EditLayOutPlanTypeMasterCommand
            {
                Name=editablePlant.Name,
                LayoutPlanTypeId = editablePlant.LayoutPlanTypeId,
                VersionNo = editablePlant.VersionNo,
                Description = editablePlant.Description,
                StatusCodeId = editablePlant.StatusCodeId,
                AddedByUserId = editablePlant.AddedByUserId,
                AddedDate = editablePlant.AddedDate,
            };
        await Mediator.Send(request);
        await UpdateDataAsync();
    }
    void Grid_CustomizeElement(GridCustomizeElementEventArgs e)
    {
        if (e.ElementType == GridElementType.DataRow && e.VisibleIndex % 2 == 1)
        {
            e.CssClass = "alt-item";
        }
       
    }
    async Task ExportToExcel()
    {
        await Grid.ExportToXlsxAsync("ExportResult", new GridXlExportOptions()
            {
                ExportSelectedRowsOnly = true,
                CustomizeCell = OnCustomizeCell
            });
    }
    void OnCustomizeCell(GridExportCustomizeCellEventArgs args)
    {
        if (args.ColumnFieldName == "ContactName" && args.AreaType == SheetAreaType.DataArea)
            args.Formatting.Font = new XlCellFont() { Italic = true };
        args.Handled = true;
    }
    void OnRowClick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "LayoutPlanTypeId");
        _selectedItems = _layout.FirstOrDefault(f => f.LayoutPlanTypeId == (long?)UniqueId);
        EditEnabled = true;
        DeleteEnabled = true;
        StateHasChanged();

    }

    void addNew()
    {
        Grid.StartEditNewRowAsync();
        EditEnabled = false;
        DeleteEnabled = false;
    }
    void addEdit()
    {
        Grid.StartEditDataItemAsync(_selectedItems);
        EditEnabled = false;
        DeleteEnabled = false;
    }
    void addDelete()
    {
        Grid.ShowDataItemDeleteConfirmation(_selectedItems);
        EditEnabled = false;
        DeleteEnabled = false;
    }
}


