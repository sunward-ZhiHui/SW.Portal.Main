{
    <div style="" class="breadcrumb card-body  bradcrumb-txt">

        <div class="items"> @companyName<span class="separator-txt fa fa-caret-right"></span>@divisionName<span class="separator-txt fa fa-caret-right"></span>@departmentName<span class="separator-txt fa fa-caret-right"></span>@secName<span class="separator-txt fa fa-caret-right"></span>@subsecName<span class="separator-txt fa fa-caret-right"></span>@Name</div>
    </div>
