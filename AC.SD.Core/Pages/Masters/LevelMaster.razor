                <DxMenuItem Text="Export" IconCssClass="fa fa-file-excel" Click="@ExportToExcel" Enabled="@ExportEnabled" />
                <DxMenuItem Text="Reset Designation" IconCssClass="fa fa-refresh" Click="@ResetDesignation" Enabled="@isDesignationEnabled" />
                @* <DxMenuItem Text="Audit Log" IconCssClass="fa fa-info-circle">
                    <Items>
                        <DxMenuItem Text="Current Records" IconCssClass="fa fa-info-circle" Click="@(() => viewAuditLog(false))" />
