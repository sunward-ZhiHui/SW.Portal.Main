@code {
    bool AuditLogPopUp { get; set; } = false;
    public bool? IsDeleted { get; set; } = false;
    string Text { get; set; } = "Active";
    bool PanelVisible { get; set; }
    public string Type { get; set; }
    private List<ViewPlants> _plants;
    IEnumerable<ViewPlants> _plantItems;
    private List<CodeMaster> _stausItems;
    IGrid Grid { get; set; }
    private ViewPlants? _selectedItems;
    bool EditEnabled { get; set; } = false; bool AddEnabled { get; set; } = false;
    bool DeleteEnabled { get; set; } = false; bool ExportEnabled { get; set; } = false;
    public ApplicationUser applicationUser { get; private set; }
    bool ExportSelectedRowsOnly { get; set; }
    IReadOnlyList<object> SelectedDataItems { get; set; }
    DxPopup? popup;
    bool PopupVisible { get; set; } = false;
    bool Blukdeletepopup { get; set; } = false;
    string? DeleteerrorMessage;
    private ViewPlants _selectlst;
    private List<PortalMenuModel> portalMenuModels { get; set; }
    protected override async Task OnInitializedAsync()
    {
        PanelVisible = true;
        var models = await Mediator.Send(new GetAllCodeMasterQuery("Status"));
        _stausItems = models;
        applicationUser = await _localStorageService.GetItem<ApplicationUser>("user");
        if (applicationUser != null && applicationUser.UserID > 0)
        {
            portalMenuModels = await Mediator.Send(new GetAllApplicationPermissionAllQuery(applicationUser?.UserID));
        }
        PanelVisible = false;
        await UpdateDataAsync();
    }
    void viewAuditLog(bool isdeleted)
    {
        IsDeleted = isdeleted;
        AuditLogPopUp = true;
    }
    async Task UpdateDataAsync()
    {
        PanelVisible = true;
        var model = await Mediator.Send(new GetAllPlantQuery());
        for (int i = 0; i < model.Count; i++)
        {
            model[i].Index = i + 1;
        }
        _plants = model;
        PanelVisible = false;
        if (_plants?.Any() == true)
        {
            _selectedItems = _plants.FirstOrDefault();

            EditEnabled = true;
            DeleteEnabled = true;
            Grid.ClearSelection();

            AddEnabled = portalMenuModels.Any(f => f.PermissionID == 60043);
            EditEnabled = portalMenuModels.Any(f => f.PermissionID == 60044);
            DeleteEnabled = portalMenuModels.Any(f => f.PermissionID == 60045);
            ExportEnabled = portalMenuModels.Any(f => f.PermissionID == 60046);
        }
        SelectedDataItems = null;
        StateHasChanged();

    }
    void OnRowClick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "PlantID");
        _selectedItems = _plants.FirstOrDefault(f => f.PlantID == (long?)UniqueId);
        StateHasChanged();
    }
    void OnRowDoubleClick(GridRowClickEventArgs e)
    {
        OnRowClick(e);
        addEdit();
    }
    void addNew()
    {
        Grid.StartEditNewRowAsync();
    }
    void EulaPopupClosed(PopupClosedEventArgs args)
    {
        SelectedDataItems = null;
        Blukdeletepopup = false;
        PopupVisible = false;
    }
    async void ClosePopup()
    {
        PopupVisible = false;
        await UpdateDataAsync();
    }
    void addEdit()
    {
        EditEnabled = portalMenuModels.Any(f => f.PermissionID == 60044);
        if (EditEnabled == true)
        {
            Grid.StartEditDataItemAsync(_selectedItems);
        }
    }
    void addDelete()
    {
        Blukdeletepopup = true;
    }
    async Task bulkDelete()
    {
        try
        {

            if (SelectedDataItems != null)
            {
                foreach (object item in SelectedDataItems)
                {

                    if (item is ViewPlants plants)
                    {
                        var request = new DeletePlantCommand(plants.PlantID, applicationUser.UserID);
                        await Mediator.Send(request);
                        Blukdeletepopup = false;
                        toastService.ShowToast("Record deleted Successfully", AC.SD.Core.Services.ToastLevel.Success);
                        await UpdateDataAsync();
                        Grid.SetFocusedRowIndex(0);
                    }

                }
            }
        }
        catch (Exception eq)
        {
            Blukdeletepopup = false;
            toastService.ShowToast("The Selected Record Do not deleted", AC.SD.Core.Services.ToastLevel.Error);
        }
    }
    void Grid_CustomizeEditModel(GridCustomizeEditModelEventArgs e)
    {
        if (e.IsNew)
        {
            var newplant = (ViewPlants)e.EditModel;
            newplant.PlantCode = "";
            newplant.Description = "";
            newplant.StatusCodeID = 1;
        }
    }
    async Task Grid_EditModelSaving(GridEditModelSavingEventArgs e)
    {
        var editablePlant = (ViewPlants)e.EditModel;
        if (e.IsNew)
        {
            try
            {
                var request = new CreatePlantCommand
                {
                    PlantCode = editablePlant.PlantCode,
                    Description = editablePlant.Description,
                    StatusCodeID = editablePlant.StatusCodeID,
                    AddedByUserID = applicationUser.UserID,
                    ModifiedByUserID = applicationUser.UserID,
                    AddedDate = DateTime.Now,
                    ModifiedDate = DateTime.Now,
                    AddedBy = applicationUser.UserName,
                    StatusCode = _stausItems.Where(w => w.CodeId == editablePlant.StatusCodeID)?.FirstOrDefault()?.CodeValue,
                };
                await Mediator.Send(request);
                toastService.ShowToast("Record save Successfully", AC.SD.Core.Services.ToastLevel.Success);
                await UpdateDataAsync();
            }
            catch (Exception ex)
            {
                toastService.ShowToast(ex.Message, AC.SD.Core.Services.ToastLevel.Warning);
            }
        }
        else
        {
            await UpdatePlantAsync(editablePlant);
        }

    }
    async Task Grid_DataItemDeleting(GridDataItemDeletingEventArgs e)
    {
        var editablePlant = (ViewPlants)e.DataItem;
        var request = new DeletePlantCommand(editablePlant.PlantID, applicationUser.UserID);
        await Mediator.Send(request);
        await UpdateDataAsync();
        Grid.SetFocusedRowIndex(0);
    }
    async Task UpdatePlantAsync(ViewPlants editablePlant)
    {
        try
        {
            var request = new EditPlantCommand
            {
                PlantID = editablePlant.PlantID,
                PlantCode = editablePlant.PlantCode,
                Description = editablePlant.Description,
                StatusCodeID = editablePlant.StatusCodeID,
                ModifiedDate = DateTime.Now,
                AddedByUserID = editablePlant.AddedByUserID,
                AddedDate = editablePlant.AddedDate,
                ModifiedByUserID = applicationUser.UserID,
                ModifiedBy = applicationUser.UserName,
                StatusCode = _stausItems.Where(w => w.CodeId == editablePlant.StatusCodeID)?.FirstOrDefault()?.CodeValue,
            };
            await Mediator.Send(request);
            toastService.ShowToast("Record updated Successfully", AC.SD.Core.Services.ToastLevel.Success);
            await UpdateDataAsync();
        }
        catch (Exception ex)
        {
            toastService.ShowToast(ex.Message, AC.SD.Core.Services.ToastLevel.Warning);
        }
    }
    public void ShowDetails(int plantId)
    {
        var datas = _plants.FirstOrDefault(e => e.PlantID == plantId);
    }
    void Grid_CustomizeElement(GridCustomizeElementEventArgs e)
    {
        if (e.ElementType == GridElementType.DataRow && e.VisibleIndex % 2 == 1)
        {
            e.CssClass = "alt-item";
        }

    }
    async Task ExportToExcel()
    {
        if (SelectedDataItems != null)
        {

            await Grid.ExportToXlsxAsync("ExportResult", new GridXlExportOptions()
            {

                ExportSelectedRowsOnly = true,
                CustomizeCell = OnCustomizeCell

            });
        }
        else
        {
            await Grid.ExportToXlsxAsync("ExportResult", new GridXlExportOptions()
            {

                ExportSelectedRowsOnly = false,
                CustomizeCell = OnCustomizeCell

            });
        }
    }
    void OnCustomizeCell(GridExportCustomizeCellEventArgs args)
    {
        if (args.ColumnFieldName == "ContactName" && args.AreaType == SheetAreaType.DataArea)
            args.Formatting.Font = new XlCellFont() { Italic = true };
        args.Handled = true;
    }
    void SelectedDataItemsChanged(IReadOnlyList<object> SelectedToItems)
    {
        SelectedDataItems = SelectedToItems;
        if (SelectedDataItems.Count > 1)
        {
            EditEnabled = false;

        }
        else
        {
            EditEnabled = portalMenuModels.Any(f => f.PermissionID == 60044);

        }




    }
    void AddDivision()
    {
        NavigationManager.NavigateTo("masters/1/Plants/" + _selectedItems.PlantID);
    }
    public async ValueTask DisposeAsync()
    {
        if (_plants != null)
        {
            _plants.Clear();
            _plants = null;
        }
        if (_stausItems != null)
        {
            _stausItems.Clear();
            _stausItems = null;
        }
        SelectedDataItems = null;
        _selectedItems = null;
        _selectlst = null;
    }
}
