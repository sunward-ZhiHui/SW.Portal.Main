@page "/applicationPermissionLists"
@page "/applicationPermissionLists/{MainSessionId:guid}"

@using Application.Queries;
@using MediatR
@inject IMediator Mediator
@using DevExpress.Export
@using global::Core.Entities;
@using global::Core.EntityModels;
@using global::Core.Repositories.Query;
@inject IJSRuntime jsRuntime
@inject AC.SD.Core.Services.ToastService toastService
@inject ILocalStorageService<ApplicationUser> _localStorageService
@implements IAsyncDisposable;
@inject NavigationManager NavigationManager

<style scoped>
    .treeview-icon {
        width: 1rem;
        height: 1rem;
        min-width: 1rem;
        min-height: 1rem;
        background-size: contain;
        background-position: center center;
    }

    .treeview-icon-document {
        background-image: url("_content/AC.SD.Core/images/icons/document-color.svg");
    }

    .treeview-icon-folder {
        background-image: url("_content/AC.SD.Core/images/icons/folder-color.svg");
    }
</style>


<div class="card w-100" style="margin-bottom:10px; margin-top:10px">
    <div class="card-body p-0">
        <DxMenu CollapseItemsToHamburgerMenu="true"
                CollapseItemToIconMode="MenuCollapseItemToIconMode.Sequentially"
                DisplayMode="MenuDisplayMode.Desktop">
            <Items>
                <DxMenuItem Text="Create Type" Position="ItemPosition.Start" >
                    <Items>
                        <DxMenuItem Text="Add Sitemap" IconCssClass="fa fa-add" Click="onAddFloder" />
                        <DxMenuItem Text="Add Menu" IconCssClass="fa fa-plus-circle" Click="onAddPage"  />
                       
                       
                    </Items>
                </DxMenuItem>
               
              
                <DxMenuItem Text="Edit" IconCssClass="fa fa-pencil" Click="@addEdit" Enabled="@EditEnabled" />
                <DxMenuItem Text="Delete" IconCssClass="fa fa-remove" Click="@addDelete" Enabled="@DeleteEnabled" />
                @* <DxMenuItem Text="Back URL" IconCssClass="fa fa-Share" Click="@OnBack" Enabled="@BackEnabled" />*@ 
                <DxMenuItem Text="Re-arrange Order" IconCssClass="fa fa-refresh" Click="@OnRefresh" /> 
            </Items>
        </DxMenu>
    </div>
</div>
<div class="menu-bar-content-container col-md-12">
    <div class="card w-100" style="margin-bottom:1px;">
        <div class="card-body p-0" style="@onShowMain">

            <DxMenu Data="@FolderPathListsItems" ItemClick="OnItemClick"
                    DisplayMode="MenuDisplayMode.Auto">
                <DataMappings>
                    <DxMenuDataMapping Text="PermissionName"
                                       Children="Children"
                                       BeginGroup="BeginGroup"
                                       CssClass="CssClass"
                                       Enabled="Enabled" />
                </DataMappings>
            </DxMenu>
        </div>
    </div>
</div>
<DxLoadingPanel @bind-Visible="PanelVisible"
                IsContentBlocked="true"
                ApplyBackgroundShading="true"
                IndicatorAreaVisible="false"
                Text="Fetching Data...">

    <DxGrid @ref="Grid"
            ColumnResizeMode="GridColumnResizeMode.NextColumn"
            FilterMenuButtonDisplayMode="GridFilterMenuButtonDisplayMode.Always" ShowGroupPanel="true" ShowGroupedColumns="true"
            Data="_TreeData"
            KeyFieldName="PermissionID"
            CustomizeEditModel="Grid_CustomizeEditModel"
            CustomizeElement="Grid_CustomizeElement"
            ShowSearchBox="true"
            PagerNavigationMode="PagerNavigationMode.InputBox"
            PageSizeSelectorVisible="true"
            PageSizeSelectorAllRowsItemVisible="true"
            PageSizeSelectorItems="@(new int[] { 5,10,20 })"
            PageSize="20"
            SelectionMode="GridSelectionMode.Multiple"
            SelectAllCheckboxMode="GridSelectAllCheckboxMode.AllPages"
            AutoExpandAllGroupRows="true"
            CssClass="ch-360  " style="height: calc(100vh - 270px);"
            FocusedRowEnabled="true"
            RowClick="OnRowClick"
            RowDoubleClick="OnRowDoubleClick"
            AllowSelectRowByClick="true">
        <Columns>
            <DxGridDataColumn FieldName="ActionName" Caption=" " Width="25" AllowSort="false" AllowGroup="false" FilterMenuButtonDisplayMode="GridFilterMenuButtonDisplayMode.Never">
                <CellDisplayTemplate>
                    @{
                        var item = (ApplicationPermission)context.DataItem;
                    }
                    @if (item.PermissionURL == null)
                    {
                        <div class="treeview-icon treeview-icon-folder"></div>
                    }
                    else
                    {
                        <div class="treeview-icon treeview-icon-document"> </div>
                    }
                </CellDisplayTemplate>
            </DxGridDataColumn>
            <DxGridDataColumn FieldName="PermissionName" Caption="Name" MinWidth="80"></DxGridDataColumn>
           @*  <DxGridDataColumn FieldName="PermissionName" Caption="Name" MinWidth="80">
                <CellDisplayTemplate>
                    @{
                        var item = (ApplicationPermission)context.DataItem;
                    }
                    @if (item.PermissionURL == null)
                    {
                        <div class="treeview-icon treeview-icon-folder"> <span style="margin-left:25px;">@item.PermissionName</span> </div>
                    }
                    else
                    {
                        <div class="treeview-icon treeview-icon-document"> <span style="margin-left:25px;">@item.PermissionName</span> </div>                        
                    }
                </CellDisplayTemplate>
            </DxGridDataColumn>   *@          
            <DxGridDataColumn FieldName="PermissionURL" Caption="Page URL" />
            <DxGridDataColumn FieldName="PermissionOrder" Caption="#" Width="50" />
        </Columns>
      
        <TotalSummary>
            <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="PermissionName" />
        </TotalSummary>
    </DxGrid>

</DxLoadingPanel>
<DxPopup @bind-Visible="@Blukdeletepopup"
         ShowFooter="true"
         HeaderText="NOVATO"
         Closed="EulaPopupClosed"
         Width="300px">
    <BodyContentTemplate>      
        <div class="dxbl-modal-body" style="padding: 20px; font-family: Arial, sans-serif;">
            <h2 style="color: red; margin-bottom: 10px;">@_selectedItems.PermissionName</h2>
            <p style="color: orangered; font-size: 16px;">
                Are you sure you want to delete this record? This action will also delete related data, including user role permissions.
            </p>            
        </div>
    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">
        <DxButton style="margin-right: 10px;" RenderStyle="ButtonRenderStyle.Primary" Text="NO" Click="Context.CloseCallback" />
        <DxButton RenderStyle="ButtonRenderStyle.Secondary" Text="Yes" Click="bulkDelete" />
    </FooterContentTemplate>
</DxPopup>
<DxPopup @ref="popup" HeaderText="CRT" ShowCloseButton="true" @bind-Visible="@PopupVisible">


    <div class="text-center">
        <p>@DeleteerrorMessage</p>

        <DxButton Text="OK" Click="@(() => ClosePopup())" />
    </div>


</DxPopup>
<DxPopup @bind-Visible="@AddFolderForm"
         ShowFooter="true"
         HeaderText="NOVATO"
         Closed="EulaPopupClosed"
         Width="800px">
    <BodyContentTemplate>
        <AddApplicationFolderForm SessionIds="@MainSessionId" IsEdit="@IsEdit" RevokeBack ="BackFolder"RevokeBackEdit ="BackEditFolder"></AddApplicationFolderForm>
    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">
        @* <DxButton style="margin-right: 10px;" RenderStyle="ButtonRenderStyle.Primary" Text="Close" Click="Context.CloseCallback" /> *@
       
    </FooterContentTemplate>
</DxPopup>
<DxPopup @bind-Visible="@AddPageForm"
         ShowFooter="true"
         HeaderText="NOVATO"
         Closed="EulaPopupClosed"
         Width="800px">
    <BodyContentTemplate>
        <AddPermissionPageForm SessionIds="@MainSessionId" IsEdit="@IsEdit" RevokeBack="BackPage" RevokeBackEdit="BackEditPage"></AddPermissionPageForm>
    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">
       @*  <DxButton style="margin-right: 10px;" RenderStyle="ButtonRenderStyle.Primary" Text="Close" Click="Context.CloseCallback" /> *@

    </FooterContentTemplate>
</DxPopup>
<DxPopup @ref="popup" HeaderText="CRT" ShowCloseButton="true" @bind-Visible="@PopupVisible">


    <div class="text-center">
        <p>@DeleteerrorMessage</p>

        <DxButton Text="OK" Click="@(() => ClosePopup())" />
    </div>


</DxPopup>
@code {
    bool? IsEdit { get; set; } = false;
    [Parameter]
    public Guid? MainSessionId { get; set; }
    bool isEnabled { get; set; } = true;
    bool PanelVisible { get; set; }
    private List<ApplicationPermission> _Data;
    private List<ApplicationPermission> _TreeData;
    private ApplicationPermission _selectedItems;
    public ApplicationUser? applicationUser { get; private set; }
    string onShowMain = "";
    IReadOnlyList<object> SelectedDataItems { get; set; }
    bool Blukdeletepopup { get; set; } = false;
    bool EditEnabled { get; set; } = false;
    bool DeleteEnabled { get; set; } = false;
    bool BackEnabled { get; set; } = false;
    bool AddFolderForm { get; set; } = false;
    bool AddPageForm { get; set; } = false;
    string? DeleteerrorMessage;
    DxPopup? popup;
    bool PopupVisible { get; set; } = false;
    IGrid Grid { get; set; }
    long? companyId = null;
    string companyName = "";
    bool ExportSelectedRowsOnly { get; set; }
    string? ParentID { get; set; } 
    List<ApplicationPermission> FolderPathListsItems = new List<ApplicationPermission>();
    List<ApplicationPermission> FolderPathLists = new List<ApplicationPermission>();
    //   private List<ViewDivision> _divisions;

    protected override async Task OnInitializedAsync()
    {
        PanelVisible = true;
        await UpdateDataAsync();
        
        applicationUser = await _localStorageService.GetItem<ApplicationUser>("templeUser");
        PanelVisible = false;

    }
    private async Task OnRefresh()
    {
        await jsRuntime.InvokeVoidAsync("location.reload");
    }

    void Grid_CustomizeEditModel(GridCustomizeEditModelEventArgs e)
    {
        if (e.IsNew)
        {
            var newmaster = (ApplicationPermission)e.EditModel;
        }

    }
    public async Task LoadDataAsync()
    {
        PanelVisible = true;
        _TreeData = await Mediator.Send(new GetApplicationByParentIDListQuery(ParentID));
        PanelVisible = false;
        StateHasChanged();
    }

    async Task UpdateDataAsync()
    {


        PanelVisible = true;
        _TreeData = await Mediator.Send(new GetApplicationPermissionListQuery());
        ApplicationPermission dc = new ApplicationPermission();
        dc.PermissionName = "Internal Application";
        FolderPathLists = new List<ApplicationPermission>(); FolderPathListsItems = new List<ApplicationPermission>();
        FolderPathListsItems.Add(dc);
        // 

        PanelVisible = false;

        StateHasChanged();

    }
    async void OnItemClick(MenuItemClickEventArgs e)
    {
        var data = (ApplicationPermission)e.ItemInfo.Data;

        if (data.PermissionName != "Internal Application")
        {
            await GetListBySession(data.UniqueSessionID);
            if (_Data.Count > 0)
            {
                var id = _Data[0].PermissionID;
                ParentID = id.ToString();
                var lastlist = FolderPathListsItems.LastOrDefault();
                if (lastlist?.PermissionName != data.PermissionName)
                {
                    var masterslist = FolderPathListsItems.Where(s => s.UniqueSessionID != MainSessionId).ToList();
                    FolderPathListsItems = masterslist;
                    StateHasChanged();
                    await LoadDataAsync();
                }

              
            }
            // NavigationManager.NavigateTo("applicationTest/" + data.UniqueSessionID);
            
        }
        else
        {
            OnBack();


        }
        EditEnabled = false;
        DeleteEnabled = false;
    }

    void Grid_CustomizeElement(GridCustomizeElementEventArgs e)
    {
        if (e.ElementType == GridElementType.DataRow && e.VisibleIndex % 2 == 1)
        {
            e.CssClass = "alt-item";
        }

    }

    void OnCustomizeCell(GridExportCustomizeCellEventArgs args)
    {
        if (args.ColumnFieldName == "ContactName" && args.AreaType == SheetAreaType.DataArea)
            args.Formatting.Font = new XlCellFont() { Italic = true };
        args.Handled = true;
    }

    void OnRowClick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "PermissionID");
        _selectedItems = _TreeData.FirstOrDefault(f => f.PermissionID == (long?)UniqueId);
        EditEnabled = true;
        DeleteEnabled = true;
        StateHasChanged();

    }
    async  void OnRowDoubleClick(GridRowClickEventArgs e)
    {
        if(_selectedItems != null && _selectedItems?.UniqueSessionID != null)
        {


            await GetListBySession(_selectedItems.UniqueSessionID);
            if (_selectedItems?.PermissionURL == null)
            {
                if (_Data.Count > 0)
                {
                    var id = _Data[0].PermissionID;
                    ParentID = id.ToString();
                    BackEnabled = true;
                    ApplicationPermission dc = new ApplicationPermission();
                    dc.PermissionName = _Data[0].PermissionName;
                    dc.UniqueSessionID = _selectedItems.UniqueSessionID;
                    FolderPathListsItems.Add(dc);
                }
                NavigationManager.NavigateTo($"applicationPermissionLists/" + _selectedItems.UniqueSessionID);
                EditEnabled = false;
                DeleteEnabled = false;
                await LoadDataAsync();
            }
            else
            {

                OnRowClick(e);
            }

        }
        else
        {
            OnRowClick(e);
            addEdit();
        }

    }
    async Task GetListBySession(Guid? SessionID)
    {
        _Data = await Mediator.Send(new GetApplicationBySessionIDListQuery(SessionID));

    }

    void addEdit()
    {
        if(_selectedItems.PermissionURL == null)
        {
            IsEdit = true;
            MainSessionId = _selectedItems.UniqueSessionID;
            AddFolderForm = true;
        }
        else
        {
            IsEdit = true;
            MainSessionId = _selectedItems.UniqueSessionID;
            AddPageForm = true;
        }

        // Grid.StartEditDataItemAsync(_selectedItems);

    }
    void EulaPopupClosed(PopupClosedEventArgs args)
    {
        SelectedDataItems = null;
        Blukdeletepopup = false;
        PopupVisible = false;
        AddFolderForm = false;
        AddPageForm = false;
        // UpdateDataAsync();
    }
    async void ClosePopup()
    {
        PopupVisible = false;
        await UpdateDataAsync();
    }
    void addDelete()
    {
        Blukdeletepopup = true;
    }
    async void OnBack()
    {
        NavigationManager.NavigateTo($"applicationPermissionLists");
        await UpdateDataAsync(); 
    }

    async Task bulkDelete()
    {
        if (_selectedItems != null)
        {
            var request = new DeleteApplicationPermissionListQuery(_selectedItems.PermissionID, _selectedItems.PermissionID);
            await Mediator.Send(request);
            // await UpdateDataAsync();
            // await LoadDataAsync();

            Blukdeletepopup = false;
        }
        if(MainSessionId == null)
        {
            await UpdateDataAsync();
        }
        else
        {

            ParentID = _selectedItems?.ParentID.ToString();
            await LoadDataAsync();
        }

    }

    void onAddFloder()
    {
        IsEdit = false;
        AddFolderForm = true;



    }

    void onAddPage()
    {
        IsEdit = false;
        AddPageForm = true;
    }
    async void BackFolder()
    {
        AddFolderForm = false;
        if (MainSessionId == null)
        {
            await UpdateDataAsync();
        }
        else
        {

            await GetListBySession(MainSessionId);
            if (_Data.Count > 0)
            {
                ParentID = _Data[0].PermissionID.ToString();
            }
            if (ParentID == "")
            {
                await UpdateDataAsync();
            }
            else
            {
                await LoadDataAsync();
            }
        }
    }
    async void BackEditFolder()
    {
         AddFolderForm = false;
        if (MainSessionId == null)
        {
            await UpdateDataAsync();
        }
        else
        {

          
            if (_selectedItems.ParentID == 60400)
            {
                await UpdateDataAsync();
            }
            else
            {
                await LoadDataAsync();
            }
        }        
    }
    async void BackEditPage()
    {
        AddPageForm = false;
        if (MainSessionId == null)
        {
            await UpdateDataAsync();
        }
        else
        {

           
            if (_selectedItems.ParentID == 60400)
            {
                await UpdateDataAsync();
            }
            else
            {
                await LoadDataAsync();
            }

        }
    }
    async void BackPage()
    {
        AddPageForm = false;
        if (MainSessionId == null)
        {
            await UpdateDataAsync();
        }
        else
        {

            await GetListBySession(MainSessionId);
            if(_Data.Count > 0)
            {
                ParentID = _Data[0].PermissionID.ToString();
            }
            if (ParentID == "")
            {
                await UpdateDataAsync();
            }
            else
            {
                await LoadDataAsync();
            }
           
        }
    }
    public async ValueTask DisposeAsync()
    {
        if (_TreeData != null)
        {
            _TreeData.Clear();
            _TreeData = null;


            // GC.Collect();
            //GC.SuppressFinalize(this);
        }

        SelectedDataItems = null;
        _selectedItems = null;

    }
}
