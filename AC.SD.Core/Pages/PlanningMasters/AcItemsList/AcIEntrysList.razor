                              TextFieldName="No"
                              ValueFieldName="ItemId"
                              EditFormat="{0}-{1}"
                              SearchMode="ListSearchMode.AutoSearch"
                              SearchFilterCondition="ListSearchFilterCondition.Contains"
                              ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                              @bind-Values="@types.ItemIds"
                              ShowValidationIcon="true">
                        <Columns>
                            <DxListEditorColumn FieldName="@nameof(View_NavItems.No)"
                                                Caption="Item" />
                            <DxListEditorColumn FieldName="@nameof(View_NavItems.Description)"
                                                Caption="Description" />
                            <DxListEditorColumn FieldName="@nameof(View_NavItems.Description2)"
                                                Caption="Description2" />
                            <DxListEditorColumn FieldName="@nameof(View_NavItems.PackSize)"
                                                Caption="Pack Size" />
                        </Columns>

                    </DxTagBox>
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Dist ItemNo" ColSpanMd="6">
                    <DxTextBox @bind-Text="@types.ItemNo" ShowValidationIcon="true" />
                    <ValidationMessage For="@(() => types.ItemNo)" />
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Item Description" ColSpanMd="6">
                    <DxTextBox @bind-Text="@types.ItemDesc" ShowValidationIcon="true" />
                    <ValidationMessage For="@(() => types.ItemDesc)" />
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Item Group" ColSpanMd="6">
                    <DxComboBox Data="@_salesCategoryItems"
                                NullText="Select Item Group..."
                                ListRenderMode="ListRenderMode.Virtual"
                                SearchMode="ListSearchMode.AutoSearch"
                                SearchFilterCondition="ListSearchFilterCondition.Contains"
                                TextFieldName="Text"
                                ValueFieldName="Text"
                                ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                                @bind-Value="@types.ItemGroup" ShowValidationIcon="true">
                    </DxComboBox>
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Shelf Life" ColSpanMd="6">
                    <DxTextBox @bind-Text="@types.ShelfLife" ShowValidationIcon="true" />
                    <ValidationMessage For="@(() => types.ShelfLife)" />
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Steroid/Non Steroid" ColSpanMd="6">
                    <DxRadioGroup Items="@RadioButtonOptions"
                                  ValueFieldName="@nameof(DropDownOptionsModel.Value)"
                                  Value="@types.Steriod"
                                  ValueExpression="@(() => types.Steriod )"
                                  ValueChanged="@((string value) => OnTemplateUploadRadioGroupValueChanged(value,types))"
                                  Layout="RadioGroupLayout.Horizontal"
                                  CssClass="dx-demo-radio-group">
                        <ItemTemplate Context="context1">@context1.Text</ItemTemplate>
                    </DxRadioGroup>
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Supply By" ColSpanMd="6">
                    <DxComboBox Data="@_supplyItems"
                                NullText="Select Supply By..."
                                SearchMode="ListSearchMode.AutoSearch"
                                SearchFilterCondition="ListSearchFilterCondition.Contains"
                                TextFieldName="Text"
                                ValueFieldName="Text"
                                @bind-Value="@types.Status"
                                ShowValidationIcon="true">
                    </DxComboBox>
                    <ValidationMessage For="@(() => types.Status)" />
                </DxFormLayoutItem>
            </DxFormLayout>
        </EditFormTemplate>
        <TotalSummary>
            <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="CompanyName" />
        </TotalSummary>
    </DxGrid>
</DxLoadingPanel>
