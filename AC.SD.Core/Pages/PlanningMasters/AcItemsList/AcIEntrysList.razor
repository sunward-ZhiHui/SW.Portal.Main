                    </Items>
                </DxMenu>
            </div>
        </div>
    </div>
</div>
<div style="margin-bottom:10px;">
    <EditForm EditContext="this._editContext" Context="EditFormContext">
        <DataAnnotationsValidator />
        <DxFormLayout CssClass="w-100">
            <DxFormLayoutItem Caption="Company" ColSpanMd="6">
                <DxComboBox Data="@_plantItems"
                            NullText="Select Company..."
                            ValueChanged="@((ViewPlants plant) => SelectedItemPlantChanged(plant))"
                            SearchMode="ListSearchMode.AutoSearch"
                            SearchFilterCondition="ListSearchFilterCondition.Contains"
                            ListRenderMode="ListRenderMode.Virtual"
                            TextFieldName="Description"
                            ValueFieldName="PlantID"
                            Value="@CurrentPlant"
                            ValueExpression="@(() => CurrentPlant )"
                            ShowValidationIcon="true">
                </DxComboBox>

            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Customer" ColSpanMd="6">
                <DxComboBox Data="@_navCustomers"
                            NullText="Select Customer..."
                            SearchMode="ListSearchMode.AutoSearch"
                            SearchFilterCondition="ListSearchFilterCondition.Contains"
                            TextFieldName="Name"
                            ValueFieldName="CustomerId"
                            ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                            Value="@data.CustomerId"
                            ValueExpression="@(() => data.CustomerId )"
                            ValueChanged="@((long? plantData) => SelectedControlChanged(plantData))">
                    <Columns>
                        <DxListEditorColumn FieldName="@nameof(NavCustomerModel.Code)"
                                            Caption="Code"
                                            Width="180px" />
                        <DxListEditorColumn FieldName="@nameof(NavCustomerModel.Name)"
                                            Caption="Customer Name" />
                    </Columns>
                </DxComboBox>
            </DxFormLayoutItem>
        </DxFormLayout>

    </EditForm>
</div>
<DxLoadingPanel @bind-Visible="PanelVisible"
