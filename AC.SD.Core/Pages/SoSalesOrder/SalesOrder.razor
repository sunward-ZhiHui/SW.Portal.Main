    protected override async Task OnInitializedAsync()
    {
        PanelVisible = true;

        _salesOrderItems = await Mediator.Send(new GetAllSoOrder
        {
            FilterType = "Last7Days"
        });

        PanelVisible = false;
        if (_salesOrderItems.Count > 0)
        {
            _selectedItems = _salesOrderItems.FirstOrDefault();
            EditEnabled = true;
            DeleteEnabled = true;
            StateHasChanged();
        }

    }
    void OnRowClick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "SoSalesOrderId");
        _selectedItems = _salesOrderItems.FirstOrDefault(f => f.SoSalesOrderId == (long?)UniqueId);


    }
