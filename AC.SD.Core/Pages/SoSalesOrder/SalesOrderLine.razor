@code {
    [Parameter]
    public long? SoSalesOrderId { get; set; }
    decimal SalesQty;
    decimal? OrderQty;
    decimal? UnitPrice;
    string PricingType;
    bool IsManualPrice { get; set; } = false;
    bool? IsManualPriceEnabled { get; set; } = false;
    bool IsOpen { get; set; } = false;
    bool IsPricingInfoOpen { get; set; } = false;
    public List<View_SalesOrderMasterPricingLineByItem> View_SalesOrderMasterPricingLineByItems { get; set; }
    public SalesOrderMasterPricingFromSalesModel salesOrderMasterPricingFromSalesModel { get; set; }
    public View_SoSalesOrder SoSalesOrderItems { get; set; }
    private string TextValue { get; set; }
    private string No { get; set; }
    private string Description { get; set; }
    private string Description2 { get; set; }
    private string BaseUnitofMeasure { get; set; }
    private List<View_ApplicationMasterDetail> _viewSellingMethodItems;
    private List<View_NavItems>? _AllNavitems;
    bool PanelVisible { get; set; }
    Dictionary<long, string>? UsernameIndex { get; set; }
    IReadOnlyList<object> SelectedDataItems { get; set; }
    private string gridHeight = "calc(100vh - 230px - 143px)";
    private List<View_SoSalesOrderLine>? _salesOrderLine;
    IGrid? Grid { get; set; }
    private View_SoSalesOrderLine _selectedItems;
    //bool EditEnabled { get; set; } = true;
    bool DeleteEnabled { get; set; } = false;
    bool ExportSelectedRowsOnly { get; set; }
    DxPopup? popup;
    bool PopupVisible { get; set; } = false;
    string? errorMessage;
    string? DeleteerrorMessage;
    bool MessageVisible { get; set; }
    string styleClass = "";
    string MessageHeader = "Error";
    string MessageBody = "";
    private bool loading;
    bool Blukdeletepopup { get; set; } = false;
    bool EditEnabled { get; set; } = false;
    bool AddEnabled { get; set; } = false;
    string SelectedGroup = "none";
    private View_SoSalesOrderLine _selectlst;
    public ApplicationUser? applicationUser { get; private set; }
    long? SellingMethodId { get; set; }
    string SellingMethod { get; set; }
    long? ItemId { get; set; }
    decimal? BounsFocQty { get; set; }
    async Task SelectedItemChanged(long? navitemsId, View_SoSalesOrderLine view_SoSalesOrderLine)
    {
        view_SoSalesOrderLine.ItemId = navitemsId;
        var navitems = _AllNavitems != null && navitemsId > 0 ? _AllNavitems.FirstOrDefault(f => f.ItemId == navitemsId) : null;
        if (navitems != null)
        {
            view_SoSalesOrderLine.ItemId = navitems.ItemId;
            No = navitems.No;
            Description = navitems.Description;
            Description2 = navitems.Description2;
            BaseUnitofMeasure = navitems.BaseUnitofMeasure;
            ItemId = navitems.ItemId;
            await loadNavItemsChangedData("");
        }
        else
        {
            No = "";
            Description = "";
            Description2 = "";
            BaseUnitofMeasure = "";
            UnitPrice = 0;
            PricingType = "";
            BounsFocQty = 0;
            OrderQty = 0;
        }
    }
    void CheckedChanged(bool value)
    {
        IsManualPrice = value;
        IsManualPriceEnabled = value;
    }
    async Task PricingItemList(decimal? Qty)
    {
        salesOrderMasterPricingFromSalesModel = await Mediator.Send(new GetAllSalesOrderMasterPricingLineByItemByQtyQuery(SoSalesOrderItems.CompanyId, SoSalesOrderItems.OrderDate, SellingMethodId, ItemId, Qty, SellingMethod));
    }
    async Task OnValueChanged(decimal? Qty)
    {
        salesOrderMasterPricingFromSalesModel = new SalesOrderMasterPricingFromSalesModel();
        UnitPrice = 0;
        PricingType = "";
        BounsFocQty = 0;
        OrderQty = Qty;
        if (Qty > 0)
        {
            await PricingItemList(Qty);
            var result = salesOrderMasterPricingFromSalesModel;
            if (result != null)
            {
                IsPricingInfoOpen = true;
                PricingType = result.MasterType;
                if (SellingMethod.ToLower() == "tier")
                {
                    if (result.SalesOrderMasterPricingLineSellingMethodId > 0)
                    {
                        UnitPrice = result.TierPrice;
                    }
                    else
                    {
                        UnitPrice = result.SellingPrice;
                    }
                }
                else
                {
                    UnitPrice = result.SellingPrice;
                    BounsFocQty = result.BounsFocQty;
                }
            }
            else
            {
                UnitPrice = 0;
                PricingType = "";
            }
        }
    }
    async Task SelectedItemMethodChangesChanged(long? masterDetailId, View_SoSalesOrderLine view_SoSalesOrderLine)
    {
        view_SoSalesOrderLine.SellingMethodId = masterDetailId;
        var masterDetail = _viewSellingMethodItems != null && masterDetailId > 0 ? _viewSellingMethodItems.FirstOrDefault(f => f.ApplicationMasterDetailID == masterDetailId):null;
        if (masterDetail != null)
        {
            view_SoSalesOrderLine.SellingMethodId = masterDetail.ApplicationMasterDetailID;
            SellingMethodId = masterDetail.ApplicationMasterDetailID;
            SellingMethod = masterDetail.Value;
            await loadNavItemsChangedData("");
        }
    }
    async Task loadNavItemsChangedData(string type)
    {
        PricingType = "";
        if (type != "edit")
        {
            UnitPrice = null;
        }
        if (ItemId > 0 && SellingMethodId > 0)
        {
            View_SalesOrderMasterPricingLineByItems = await Mediator.Send(new GetAllSalesOrderMasterPricingLineByItemByMethodQuery(SoSalesOrderItems.CompanyId, SoSalesOrderItems.OrderDate, SellingMethodId, ItemId));
            StateHasChanged();
        }
        else
        {
            View_SalesOrderMasterPricingLineByItems = new List<View_SalesOrderMasterPricingLineByItem>();
        }
    }
    void OnButtonClick()
    {
        IsOpen = true;
    }
    void OnButtonPricingInfoClick()
    {
        IsPricingInfoOpen = true;
    }
    protected override async Task OnInitializedAsync()
    {
        _viewSellingMethodItems = await Mediator.Send(new GetAllApplicationMasterDetailQuery(338));
        applicationUser = await _localStorageService.GetItem<ApplicationUser>("user");
        if (SoSalesOrderId > 0)
        {
            var items = await Mediator.Send(new GetAllSoOrderByID(SoSalesOrderId));
            await loadData(items);
        }
    }
    public async Task loadData(View_SoSalesOrder _salesOrderItem)
    {
        SoSalesOrderId = _salesOrderItem.SoSalesOrderId;
        SoSalesOrderItems = _salesOrderItem;
        if (SoSalesOrderId > 0)
        {
            AddEnabled = true;
            if (SoSalesOrderItems.CompanyId > 0)
            {
                _AllNavitems = await Mediator.Send(new GetAllNavItemsByCompanyByItemSerialNoQuery(SoSalesOrderItems.CompanyId));
            }
            _salesOrderLine = await Mediator.Send(new GetSalesOrderLine(SoSalesOrderId));
            if (_salesOrderLine.Count > 0)
            {
                PanelVisible = true;
                _selectedItems = _salesOrderLine.FirstOrDefault();

                if (SelectedDataItems != null)
                {
                    EditEnabled = true;
                    DeleteEnabled = true;
                    StateHasChanged();
                }
            }
        }
        PanelVisible = false;
        StateHasChanged();
    }
    async Task Grid_CustomizeEditModel(GridCustomizeEditModelEventArgs e)
    {
        var navitems = (View_SoSalesOrderLine)e.EditModel;
        if (e.IsNew)
        {
            navitems.ItemId = null;
            navitems.SellingMethodId = null;
            No = "";
            Description = "";
            Description2 = "";
            BaseUnitofMeasure = "";
            SalesQty = 0;
            BounsFocQty = null;
            OrderQty = 0;
            UnitPrice = null;
            SellingMethod = "";
            View_SalesOrderMasterPricingLineByItems = new List<View_SalesOrderMasterPricingLineByItem>();
            salesOrderMasterPricingFromSalesModel = new SalesOrderMasterPricingFromSalesModel();
        }
        else
        {
            No = navitems.No;
            Description = navitems.Description;
            Description2 = navitems.Description2;
            BaseUnitofMeasure = navitems.BaseUnitofMeasure;
            SellingMethodId = navitems.SellingMethodId;
            SellingMethod = navitems.SellingMethod;
            ItemId = navitems.ItemId;
            UnitPrice = navitems.UnitPrice;
            BounsFocQty = navitems.OrderBounsQty;
            SalesQty = navitems.Qty > 0 ? navitems.Qty.Value : 0;
            OrderQty = SalesQty;
            IsManualPriceEnabled = navitems.IsManual == null ? false : navitems.IsManual;
            await loadNavItemsChangedData("edit");
            await PricingItemList(OrderQty);
        }
    }
    async Task UpdateDataAsync()
    {
        PanelVisible = true;
        _salesOrderLine = await Mediator.Send(new GetSalesOrderLine(SoSalesOrderId));
        PanelVisible = false;
        StateHasChanged();
    }
    async Task ExportToExcel()
    {
        if (SelectedDataItems != null)
        {

            await Grid.ExportToXlsxAsync("ExportResult", new GridXlExportOptions()
                {

                    ExportSelectedRowsOnly = true,
                    CustomizeCell = OnCustomizeCell

                });
        }
        else
        {
            await Grid.ExportToXlsxAsync("ExportResult", new GridXlExportOptions()
                {

                    ExportSelectedRowsOnly = false,
                    CustomizeCell = OnCustomizeCell

                });
        }
    }


    void OnCustomizeCell(GridExportCustomizeCellEventArgs args)
    {
        if (args.ColumnFieldName == "ContactName" && args.AreaType == SheetAreaType.DataArea)
            args.Formatting.Font = new XlCellFont() { Italic = true };
        args.Handled = true;
    }

    async Task OnEditModelSaving(GridEditModelSavingEventArgs e)
    {

        var editModel = (View_SoSalesOrderLine)e.EditModel;

        if (e.IsNew)
        {


            var createReq = new CreateSoSalesOrderLineCommand
                {
                    SoSalesOrderId = SoSalesOrderId,
