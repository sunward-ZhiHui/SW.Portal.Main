@code {
    [Parameter]
    public long? SoSalesOrderId { get; set; }

    private string TextValue { get; set; }
    private string No { get; set; }
    private string Description { get; set; }
    private string Description2 { get; set; }
    private string BaseUnitofMeasure { get; set; }

    private List<View_NavItems>? _AllNavitems;

    bool PanelVisible { get; set; }
    Dictionary<long, string>? UsernameIndex { get; set; }
    IReadOnlyList<object> SelectedDataItems { get; set; }
    private string gridHeight = "calc(100vh - 230px - 143px)";
    private List<View_SoSalesOrderLine>? _salesOrderLine;
    IGrid? Grid { get; set; }
    private View_SoSalesOrderLine _selectedItems;
    //bool EditEnabled { get; set; } = true;
    bool DeleteEnabled { get; set; } = false;
    bool ExportSelectedRowsOnly { get; set; }
    DxPopup? popup;
    bool PopupVisible { get; set; } = false;
    string? errorMessage;
    string? DeleteerrorMessage;
    bool MessageVisible { get; set; }
    string styleClass = "";
    string MessageHeader = "Error";
    string MessageBody = "";
    private bool loading;
    bool Blukdeletepopup { get; set; } = false;
    bool EditEnabled { get; set; } = false;
    bool AddEnabled { get; set; } = false;
    string SelectedGroup = "none";
    private View_SoSalesOrderLine _selectlst;
    public ApplicationUser? applicationUser { get; private set; }


    void SelectedItemChanged(View_NavItems navitems)
    {
        if (navitems != null)
        {
            No = navitems.No;
            Description = navitems.Description;
            Description2 = navitems.Description2;
            BaseUnitofMeasure = navitems.BaseUnitofMeasure;
        }
        else
        {
            No = "";
            Description = "";
            Description2 = "";
            BaseUnitofMeasure = "";
        }
    }

    protected override async Task OnInitializedAsync()
    {
        PanelVisible = true;     
        var navitemslst = await Mediator.Send(new GetAllNavItemsQuery());
        _AllNavitems = navitemslst.Where(c => c.ItemSerialNo != null).ToList();

        applicationUser = await _localStorageService.GetItem<ApplicationUser>("user");

        var soline = await Mediator.Send(new GetSalesOrderLine());
        _salesOrderLine = soline.Where(x => x.SoSalesOrderId == SoSalesOrderId).ToList();

        if(SoSalesOrderId > 0)
        {          
            AddEnabled = true;          

            if (_salesOrderLine.Count > 0)
            {

                _selectedItems = _salesOrderLine.FirstOrDefault();
                EditEnabled = true;
                DeleteEnabled = true;
                StateHasChanged();
            }           
        }       


        PanelVisible = false;      
    } 
    void Grid_CustomizeEditModel(GridCustomizeEditModelEventArgs e)
    {
        var navitems = (View_SoSalesOrderLine)e.EditModel;
        if (e.IsNew)
        {           
            No = "";
            Description = "";
            Description2 = "";
            BaseUnitofMeasure = "";
        }
        else
        {
            No = navitems.No;
            Description = navitems.Description;
            Description2 = navitems.Description2;
            BaseUnitofMeasure = navitems.BaseUnitofMeasure;

        }
    }
    async Task UpdateDataAsync()
    {
        PanelVisible = true;       
        var models = await Mediator.Send(new GetSalesOrderLine());
        _salesOrderLine = models.Where(x => x.SoSalesOrderId == SoSalesOrderId).ToList();
        PanelVisible = false;
        StateHasChanged();
    }
    async Task ExportToExcel() 
    {
        await Grid.ExportToXlsxAsync("ExportResult", new GridXlExportOptions()
        {
           ExportSelectedRowsOnly = true,

          CustomizeCell = OnCustomizeCell
        });

    }


    void OnCustomizeCell(GridExportCustomizeCellEventArgs args)
    {
        if (args.ColumnFieldName == "ContactName" && args.AreaType == SheetAreaType.DataArea)
            args.Formatting.Font = new XlCellFont() { Italic = true };
        args.Handled = true;
    }

    async Task OnEditModelSaving(GridEditModelSavingEventArgs e)
    {   

        var editModel = (View_SoSalesOrderLine)e.EditModel;        

        if (e.IsNew)
        {


            var createReq = new CreateSoSalesOrderLineCommand
                {
                    SoSalesOrderId = SoSalesOrderId,
                    ItemSerialNo = editModel.ItemSerialNo,
                    Qty = editModel.Qty,
                    UnitPrice = editModel.UnitPrice,
                    StatusCodeId = 1,
                    AddedByUserId= applicationUser.UserID,                       
                    AddedDate = DateTime.Now, 
                    ModifiedByUserId = applicationUser.UserID,
                    ModifiedDate = DateTime.Now,
                };

            try
            {
                var result = await Mediator.Send(createReq);
                toastService.ShowToast("Record save Successfully", AC.SD.Core.Services.ToastLevel.Success);                    
            }
            catch (Exception eq)
            {

                errorMessage = eq.Message;
                PopupVisible = true;

            }

            await UpdateDataAsync();


        }
        else
        {               
            var UpdateReq = new EditSoSalesOrderLineCommand
                {
                    SoSalesOrderLineId = editModel.SoSalesOrderLineId,
                    SoSalesOrderId = SoSalesOrderId,
                    ItemSerialNo = editModel.ItemSerialNo,
                    Qty = editModel.Qty,
                    UnitPrice = editModel.UnitPrice,
                    StatusCodeId = 1,                   
                    ModifiedByUserId = applicationUser.UserID,
                    ModifiedDate = DateTime.Now,

                };

            var ans = await Mediator.Send(UpdateReq);
            toastService.ShowToast("Record Updated Successfully", AC.SD.Core.Services.ToastLevel.Success);
            await UpdateDataAsync();            

        }     

    }
    private async void onShowPopupMessage(string headerText, string bodyText)
    {

        MessageVisible = true;
        MessageBody = bodyText;
        MessageHeader = headerText;
        loading = false;
        StateHasChanged();
    }
    async void ClosePopup()
    {
        SelectedDataItems = null;
        Blukdeletepopup = false;
        PopupVisible = false;
        await UpdateDataAsync();
    }
    void EulaPopupClosed(PopupClosedEventArgs args)
    {
        SelectedDataItems = null;
        Blukdeletepopup = false;
        PopupVisible = false;
        UpdateDataAsync();
    }
    async Task OnDeleteDataItem(GridDataItemDeletingEventArgs e)
    { 

        var editModel = (View_SoSalesOrderLine)e.DataItem;

        //  string result = string.Empty;
        //  result = await Mediator.Send(new DeleteForumTypeCommand(editModel.ID));
        // Console.WriteLine(result);
        // await UpdateDataAsync();

        var request = new DeleteSoSalesOrderLineCommand(editModel.SoSalesOrderLineId);
        await Mediator.Send(request);
        await UpdateDataAsync();
        Grid.SetFocusedRowIndex(0);

    }
    void Grid_CustomizeElement(GridCustomizeElementEventArgs e)
    {
        if (e.ElementType == GridElementType.DataRow && e.VisibleIndex % 2 == 1)
        {
            e.CssClass = "alt-item";
        }

    }
    void Onclick(DataGridSelection<View_SoSalesOrderLine> e)
    {



    }

    void OnRowClick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "SoSalesOrderLineId");
        _selectedItems = _salesOrderLine.FirstOrDefault(f => f.SoSalesOrderLineId == (long?)UniqueId);

        StateHasChanged();

    }
    void OnRowDoubleClick(GridRowClickEventArgs e)
    {
        OnRowClick(e);
        addEdit();
    }
    void addNew()
    {
        Grid.StartEditNewRowAsync();

    }
    void addEdit()
    {     
        if (SelectedDataItems.Count == 1)
        {

            foreach (object item in SelectedDataItems)
            {

                if (item is View_SoSalesOrderLine view_SoSalesOrderLine)
                {

                    _selectlst = _salesOrderLine.FirstOrDefault(f => f.SoSalesOrderLineId == view_SoSalesOrderLine.SoSalesOrderLineId);


                }
            } 
            Grid.StartEditDataItemAsync(_selectlst);
        }
        else
        {
            Grid.StartEditDataItemAsync(_selectedItems);
        }

        // Grid.SelectDataItems(SelectedDataItems);


    }
    void addDelete()
    {
        Blukdeletepopup = true;
    }
    async Task bulkDelete()
    {
        try
        {
            if (SelectedDataItems != null)
            {
                foreach (object item in SelectedDataItems)
                {

                    if (item is View_SoSalesOrderLine view_SoSalesOrderLine)
                    {

                        var request = new DeleteSoSalesOrderLineCommand(view_SoSalesOrderLine.SoSalesOrderLineId);
                        await Mediator.Send(request);
                        Blukdeletepopup = false;
                        toastService.ShowToast("Record deleted Successfully", AC.SD.Core.Services.ToastLevel.Success);
                        Grid.SetFocusedRowIndex(0);
                    }

                }
            }
        }
        catch(Exception eq)
        {
            DeleteerrorMessage = eq.Message;
            PopupVisible = true;
        }

        await UpdateDataAsync();


    }
    void SelectedDataItemsChanged(IReadOnlyList<object> SelectedToItems)
    {
        SelectedDataItems = SelectedToItems;

        if (SelectedDataItems.Count > 1)
        {
            EditEnabled = false;
        }
        else
        {
            EditEnabled = true;
        }

    }  
}
