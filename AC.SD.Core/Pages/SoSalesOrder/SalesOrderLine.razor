         <DxGridDataColumn FieldName="Description2" />
         <DxGridDataColumn FieldName="Qty" />
         <DxGridDataColumn FieldName="BaseUnitofMeasure" Caption="Unit of measure" />
         <DxGridDataColumn FieldName="UnitPrice" Caption="Unit price" />    
        @* <DxGridDataColumn FieldName="AddedDate">
            <CellDisplayTemplate>
                @{
                    var item = (View_SoSalesOrderLine)context.DataItem;
                }
                @Application.Common.Helper.Helper.FormatDateTime(item.AddedDate)
