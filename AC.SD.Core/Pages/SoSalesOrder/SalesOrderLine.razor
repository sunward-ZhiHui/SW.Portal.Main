            <DxFormLayoutItem Caption="Qty:" ColSpanMd="6">
                <DxSpinEdit @bind-Value="@types.Qty" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Unit price:" ColSpanMd="6">
                <DxSpinEdit @bind-Value="@types.UnitPrice" />
            </DxFormLayoutItem>           
            <ValidationSummary />
        </DxFormLayout>
    </EditFormTemplate>
    
</DxGrid>
