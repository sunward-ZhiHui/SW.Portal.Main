                                durationYear = Application.Common.Helper.Helper.FormatMonthYear(salesOrderMasterPricingFromSalesModel.PriceValidaityFrom) + " To " + Application.Common.Helper.Helper.FormatMonthYear(salesOrderMasterPricingFromSalesModel.PriceValidaityTo);
                            }
