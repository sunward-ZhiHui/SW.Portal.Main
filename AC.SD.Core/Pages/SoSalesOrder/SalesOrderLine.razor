        <div class="custom-flyout-body" style="width:100%">

            <table style="width:100%" id="customers">
                <tr>
                    <th>Master Type</th>
                    @{
                        var masterTypeDis = "";
                        if (salesOrderMasterPricingFromSalesModel != null && salesOrderMasterPricingFromSalesModel.SalesOrderMasterPricingLineId > 0)
