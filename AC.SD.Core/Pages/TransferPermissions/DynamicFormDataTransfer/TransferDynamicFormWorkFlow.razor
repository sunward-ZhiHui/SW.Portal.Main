@using global::Core.Entities.Views;
@using global::Core.Entities;
@using Application.Queries;
@using MediatR
@inject IMediator Mediator
@using global::Core.EntityModels;
@inject AC.SD.Core.Services.ToastService toastService
@implements IAsyncDisposable
@inject IJSRuntime JS;
@inject NavigationManager NavigationManager
<div class="card w-100" style="margin-bottom:10px; margin-top:10px">
    <div class="card-body p-0">
        <DxMenu CollapseItemsToHamburgerMenu="true"
                CollapseItemToIconMode="MenuCollapseItemToIconMode.Sequentially"
                DisplayMode="MenuDisplayMode.Desktop">
            <Items>
                <DxMenuItem Text="Transfer" IconCssClass="fa fa-exchange" Click="@updateFormApproval" Enabled="@updateFormApprovalEnabled" />
                <DxMenuItem Text="Form" IconCssClass="fa fa-wpforms" Click="@OpenNewForm" Enabled="@EditFormEnabled" />
            </Items>
        </DxMenu>
    </div>
</div>
<DxLoadingPanel @bind-Visible="PanelFormApprovalVisible"
                IsContentBlocked="true"
                ApplyBackgroundShading="true"
                IndicatorAreaVisible="false"
                Text="Fetching Data...">

    <DxGrid @ref="TransferFromApprovalGrid" FilterMenuButtonDisplayMode="GridFilterMenuButtonDisplayMode.Always"
            ColumnResizeMode="GridColumnResizeMode.NextColumn"
            Data="dynamicFormWorkFlowApprovalItems"
            ShowGroupPanel="true" ShowGroupedColumns="true"
            KeyFieldName="DynamicFormWorkFlowFormId"
            ShowSearchBox="true"
            PagerNavigationMode="PagerNavigationMode.InputBox"
            PageSizeSelectorVisible="true"
            PageSizeSelectorAllRowsItemVisible="true"
            PageSizeSelectorItems="@(new int[] { 5,10,20 })"
            PageSize="20"
            VirtualScrollingEnabled="true"
            SelectionMode="GridSelectionMode.Multiple"
            SelectAllCheckboxMode="GridSelectAllCheckboxMode.AllPages"
            AutoExpandAllGroupRows="true"
            CssClass="ch-360"
            style="height: calc(100vh - 420px);"
            FocusedRowEnabled="true"
            RowClick="OnRowclick"
            SelectedDataItemsChanged="@SelectedFormApprovalDataItemsChanged"
            AllowSelectRowByClick="true">
        <Columns>
            <DxGridSelectionColumn Width="60px" AllowSelectAll="true" />
            <DxGridDataColumn FieldName="DynamicFormWorkFlowFormId" Visible="false" />
            <DxGridDataColumn FieldName="FormName" Caption="Form Name" MinWidth="100" />
            <DxGridDataColumn FieldName="ProfileNo" Caption="Profile No" MinWidth="100" />
            <DxGridDataColumn FieldName="SectionName" Caption="Section Name" />
            <DxGridDataColumn FieldName="CurrentApprovalUserName" Caption="Name" MinWidth="100" />
            <DxGridDataColumn FieldName="IsDelegateUser" Caption="Is Delegate User" />
            <DxGridCommandColumn Width="160px" Visible="false" />
        </Columns>
        <TotalSummary>
            <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="FormName" />
        </TotalSummary>
    </DxGrid>
</DxLoadingPanel>
@code {

    [Parameter]
    public ResetPermissionModel? Data { get; set; }
    public List<DynamicFormWorkFlowForm> dynamicFormWorkFlowApprovalItems { get; set; }
    bool PanelFormApprovalVisible { get; set; }
    IGrid? TransferFromApprovalGrid { get; set; }
    bool updateFormApprovalEnabled { get; set; } = false; bool EditFormEnabled { get; set; } = false;
    IReadOnlyList<object> SelectedFormApprovalDataItems { get; set; }
    private DynamicFormWorkFlowForm _selectedItems;
    protected override async Task OnInitializedAsync()
    {
        await loadDynamicFormWorkFlowForms();
    }

    public async Task loadDynamicFormWorkFlowForm(ResetPermissionModel data)
    {
        Data = data;
        await loadDynamicFormWorkFlowForms();
    }
    async Task OpenNewForm()
    {
        if (_selectedItems != null)
        {
            var url = NavigationManager.BaseUri + "DynamicMasterSetupList/dynamicForms/" + _selectedItems.FormSessionId + "/" + _selectedItems.FormDataSessionId;
            await JS.InvokeVoidAsync("window.open", url, "_blank");
        }
    }
    async Task loadDynamicFormWorkFlowForms()
    {
        try
        {
            updateFormApprovalEnabled = false; EditFormEnabled = false;
            PanelFormApprovalVisible = true;
            dynamicFormWorkFlowApprovalItems = await Mediator.Send(new GetTransferDynamicFormWorkFlowForm(Data.FromUserId));
            if (dynamicFormWorkFlowApprovalItems != null && dynamicFormWorkFlowApprovalItems.Count > 0)
            {
                updateFormApprovalEnabled = true; EditFormEnabled = true;
                _selectedItems = dynamicFormWorkFlowApprovalItems.FirstOrDefault();
                TransferFromApprovalGrid?.SetFocusedRowIndex(0);
            }
            PanelFormApprovalVisible = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {

        }
    }
    void OnRowclick(GridRowClickEventArgs e)
    {
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "DynamicFormWorkFlowFormId");
        _selectedItems = dynamicFormWorkFlowApprovalItems.FirstOrDefault(f => f.DynamicFormWorkFlowFormId == (long?)UniqueId);
        updateFormApprovalEnabled = true; EditFormEnabled = true;
    }
    void SelectedFormApprovalDataItemsChanged(IReadOnlyList<object> SelectedToItems)
    {
        SelectedFormApprovalDataItems = SelectedToItems;
        if (SelectedFormApprovalDataItems.Count > 1)
        {
            EditFormEnabled = false;
        }
        else
        {
            if (SelectedFormApprovalDataItems.Count == 1)
            {
                foreach (object item in SelectedFormApprovalDataItems)
                {
                    if (item is DynamicFormWorkFlowForm dataselectItems)
                    {
                        _selectedItems = (DynamicFormWorkFlowForm)item;
                    }
                }
            }
            EditFormEnabled = true;
        }
    }
    async Task updateFormApproval()
    {
        List<DynamicFormWorkFlowForm> ids = new List<DynamicFormWorkFlowForm>();
        try
        {
            if (SelectedFormApprovalDataItems != null)
            {
                foreach (object item in SelectedFormApprovalDataItems)
                {
                    if (item is DynamicFormWorkFlowForm dataItem)
                    {
                        ids.Add(dataItem);
                    }

                }
                if (Data.ToUserId > 0)
                {
                    if (ids != null && ids.Count > 0)
                    {
                        var request = new UpdateTransferDynamicFormDataWorkFlowForm(ids, Data.ToUserId);
                        await Mediator.Send(request);
                        toastService.ShowToast("Record Updated Successfully", AC.SD.Core.Services.ToastLevel.Success);
                        await loadDynamicFormWorkFlowForms();
                        TransferFromApprovalGrid?.ClearSelection();
                        TransferFromApprovalGrid.SetFocusedRowIndex(0);
                        StateHasChanged();
                    }
                }
                else
                {
                    toastService.ShowToast("Must Select To User", AC.SD.Core.Services.ToastLevel.Warning);
                }
            }
        }
        catch (Exception eq)
        {
            // toastService.ShowToast("Err", AC.SD.Core.Services.ToastLevel.Error);
        }
    }
    public async ValueTask DisposeAsync()
    {
        dynamicFormWorkFlowApprovalItems?.Clear();
        SelectedFormApprovalDataItems = null;
        _selectedItems = null;
    }
}
