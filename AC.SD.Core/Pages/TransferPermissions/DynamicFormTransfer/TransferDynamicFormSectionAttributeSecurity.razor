@using global::Core.Entities.Views;
@using global::Core.Entities;
@using Application.Queries;
@using MediatR
@inject IMediator Mediator
@using global::Core.EntityModels;
@inject AC.SD.Core.Services.ToastService toastService
@implements IAsyncDisposable

<div class="card w-100" style="margin-bottom:10px; margin-top:10px">
    <div class="card-body p-0">
        <DxMenu CollapseItemsToHamburgerMenu="true"
                CollapseItemToIconMode="MenuCollapseItemToIconMode.Sequentially"
                DisplayMode="MenuDisplayMode.Desktop">
            <Items>
                <DxMenuItem Text="Transfer" IconCssClass="fa fa-exchange" Click="@updateDynamicFormSecurity" Enabled="@updateDynamicFormSecurityEnabled" />
                <DxMenuItem Text="Delete" IconCssClass="fa fa-remove" Click="@deleteUserGroupDelete" Enabled="@DeleteUserGroupEnabled" />
            </Items>
        </DxMenu>
    </div>
</div>
<DxLoadingPanel @bind-Visible="PanelDynamicFormSecurityVisible"
                IsContentBlocked="true"
                ApplyBackgroundShading="true"
                IndicatorAreaVisible="false"
                Text="Fetching Data...">

    <DxGrid @ref="TransferDynamicFormSectionSecurityGrid" FilterMenuButtonDisplayMode="GridFilterMenuButtonDisplayMode.Always"
            ColumnResizeMode="GridColumnResizeMode.NextColumn"
            Data="dynamicFormWorkFlowApprovalItems"
            ShowGroupPanel="true" ShowGroupedColumns="true"
            KeyFieldName="DynamicFormSectionAttributeSecurityId"
            ShowSearchBox="true"
            PagerNavigationMode="PagerNavigationMode.InputBox"
            PageSizeSelectorVisible="true"
            PageSizeSelectorAllRowsItemVisible="true"
            PageSizeSelectorItems="@(new int[] { 5,10,20 })"
            PageSize="20"
            VirtualScrollingEnabled="true"
            SelectionMode="GridSelectionMode.Multiple"
            SelectAllCheckboxMode="GridSelectAllCheckboxMode.AllPages"
            AutoExpandAllGroupRows="true"
            CssClass="ch-360"
            style="height: calc(100vh - 420px);"
            FocusedRowEnabled="true"
            SelectedDataItemsChanged="@SelectedDynamicFormSecurityDataItemsChanged"
            AllowSelectRowByClick="true">
        <Columns>
            <DxGridSelectionColumn Width="60px" AllowSelectAll="true" />
            <DxGridDataColumn FieldName="DynamicFormSectionAttributeSecurityId" Visible="false" />
            <DxGridDataColumn FieldName="FormName" Caption="Form Name" MinWidth="170" />
            <DxGridDataColumn FieldName="SectionName" Caption="Section Name" MinWidth="170" />
            <DxGridDataColumn FieldName="DisplayName" Caption="Display Name" MinWidth="100" />
            <DxGridDataColumn FieldName="FirstName" Caption="Name" MinWidth="170" />
            <DxGridDataColumn FieldName="IsAccess" Caption="Is Editable" MinWidth="100" />
            <DxGridDataColumn FieldName="IsViewFormatOnly" Caption="Is Protected" MinWidth="100" />
            <DxGridCommandColumn Width="160px" Visible="false" />
        </Columns>
        <TotalSummary>
            <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="FormName" />
        </TotalSummary>
    </DxGrid>
</DxLoadingPanel>

<DxPopup @bind-Visible="@BlukdeleteUserGroupPopup"
         ShowFooter="true"
         HeaderText="CRT"
         Closed="EulaPopupClosed"
         Width="300px">
    <BodyContentTemplate>
        <p>
            Do you want to delete
        </p>
    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">
        <DxButton style="margin-right: 10px;" RenderStyle="ButtonRenderStyle.Primary" Text="NO" Click="Context.CloseCallback" />
        <DxButton RenderStyle="ButtonRenderStyle.Secondary" Text="Yes" Click="bulkDelete" />
    </FooterContentTemplate>
</DxPopup>
@code {

    [Parameter]
    public ResetPermissionModel? Data { get; set; }
    public List<DynamicFormSectionAttributeSecurity> dynamicFormWorkFlowApprovalItems { get; set; }
    bool PanelDynamicFormSecurityVisible { get; set; }
    IGrid? TransferDynamicFormSectionSecurityGrid { get; set; }
    bool updateDynamicFormSecurityEnabled { get; set; } = false; bool BlukdeleteUserGroupPopup { get; set; } = false;
    bool DeleteUserGroupEnabled { get; set; } = false;
    IReadOnlyList<object> SelectedDynamicFormSecurityDataItems { get; set; }
    private DynamicFormSectionAttributeSecurity _selectedItems;
    protected override async Task OnInitializedAsync()
    {
        await loadDynamicFormSectionAttributeSecuritys();
    }

    public async Task loadDynamicFormSectionAttributeSecurity(ResetPermissionModel data)
    {
        Data = data;
        await loadDynamicFormSectionAttributeSecuritys();
    }
    async Task loadDynamicFormSectionAttributeSecuritys()
    {
        try
        {
            updateDynamicFormSecurityEnabled = false;
            PanelDynamicFormSecurityVisible = true; DeleteUserGroupEnabled = false;
            dynamicFormWorkFlowApprovalItems = await Mediator.Send(new GetTransferDynamicFormSectionAttributeSecurity(Data.FromUserId));
            if (dynamicFormWorkFlowApprovalItems != null && dynamicFormWorkFlowApprovalItems.Count > 0)
            {
                updateDynamicFormSecurityEnabled = true; DeleteUserGroupEnabled = true;
                _selectedItems = dynamicFormWorkFlowApprovalItems.FirstOrDefault();
                TransferDynamicFormSectionSecurityGrid?.SetFocusedRowIndex(0);
            }
            PanelDynamicFormSecurityVisible = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {

        }
    }
    void SelectedDynamicFormSecurityDataItemsChanged(IReadOnlyList<object> SelectedToItems)
    {
        SelectedDynamicFormSecurityDataItems = SelectedToItems;
    }
    async void ClosePopup()
    {
        PanelDynamicFormSecurityVisible = false;
        await loadDynamicFormSectionAttributeSecuritys();
    }
    void EulaPopupClosed(PopupClosedEventArgs args)
    {
        SelectedDynamicFormSecurityDataItems = null;
        BlukdeleteUserGroupPopup = false;
        PanelDynamicFormSecurityVisible = false;
    }
    async Task updateDynamicFormSecurity()
    {
        List<long?> ids = new List<long?>();
        try
        {
            if (SelectedDynamicFormSecurityDataItems != null)
            {
                foreach (object item in SelectedDynamicFormSecurityDataItems)
                {
                    if (item is DynamicFormSectionAttributeSecurity dataItem)
                    {
                        ids.Add(dataItem.DynamicFormSectionAttributeSecurityId);
                    }

                }
                if (Data.ToUserId > 0)
                {
                    if (ids != null && ids.Count > 0)
                    {
                        var request = new UpdateTransferDynamicFormSectionAttributeSecurity(ids, Data.ToUserId);
                        await Mediator.Send(request);
                        toastService.ShowToast("Record Updated Successfully", AC.SD.Core.Services.ToastLevel.Success);
                        await loadDynamicFormSectionAttributeSecuritys();
                        TransferDynamicFormSectionSecurityGrid?.ClearSelection();
                        TransferDynamicFormSectionSecurityGrid.SetFocusedRowIndex(0);
                        StateHasChanged();
                    }
                }
                else
                {
                    toastService.ShowToast("Must Select To User", AC.SD.Core.Services.ToastLevel.Warning);
                }
            }
        }
        catch (Exception eq)
        {
            // toastService.ShowToast("Err", AC.SD.Core.Services.ToastLevel.Error);
        }
    }
    void deleteUserGroupDelete()
    {
        BlukdeleteUserGroupPopup = true;
    }
    async Task bulkDelete()
    {
        List<long?> ids = new List<long?>();
        try
        {
            if (SelectedDynamicFormSecurityDataItems != null)
            {
                foreach (object item in SelectedDynamicFormSecurityDataItems)
                {
                    if (item is DynamicFormSectionAttributeSecurity dataItem)
                    {
                        ids.Add(dataItem.DynamicFormSectionAttributeSecurityId);
                    }

                }
                if (ids != null && ids.Count > 0)
                {
                    var request = new DeleteTransferDynamicFormSectionAttributeSecurity(ids);
                    await Mediator.Send(request);
                    BlukdeleteUserGroupPopup = false;
                    toastService.ShowToast("Record deleted Successfully", AC.SD.Core.Services.ToastLevel.Success);
                    await loadDynamicFormSectionAttributeSecuritys();
                    TransferDynamicFormSectionSecurityGrid?.ClearSelection();
                    TransferDynamicFormSectionSecurityGrid?.SetFocusedRowIndex(0);
                }
            }
        }
        catch (Exception eq)
        {
            BlukdeleteUserGroupPopup = false;
            toastService.ShowToast("The Selected Record Do not deleted", AC.SD.Core.Services.ToastLevel.Error);
        }
    }
    public async ValueTask DisposeAsync()
    {
        dynamicFormWorkFlowApprovalItems?.Clear();
        SelectedDynamicFormSecurityDataItems = null;
        _selectedItems = null;
    }
}
