    protected override async Task OnInitializedAsync()
    {

        await UpdateDataAsync();
    }
    async Task UpdateDataAsync()
    {
        PanelVisible = true; ResetEnabled = false;
        UnlockEnabled = false; StatusInActive = false; StatusActive = false;
        _employeeItems = await Mediator.Send(new GetAllUserWithoutStatusQuery());
        Unlock = "UnLock";
        faunlock = "fa fa-unlock";
        if (_employeeItems.Count > 0)
        {
            _selectedItems = _employeeItems.FirstOrDefault();
            ResetEnabled = true;
            UnlockEnabled = true;
            if (_selectedItems.UserStatus == 1)
            {
                StatusInActive = true;
                StatusActive = false;
            }
            else
            {
                StatusActive = true;
                StatusInActive = false;
            }
            if (_selectedItems.Locked == true)
            {
                Unlock = "UnLock";
                faunlock = "fa fa-unlock";
            }
            else
            {
                Unlock = "Lock";
                faunlock = "fa fa-lock";
            }
            PanelVisible = false;
        }
        PanelVisible = false;
        StateHasChanged();
    }

    private async void UnSetLock(long? UserID)
    {
        var users = _employeeItems.FirstOrDefault(a => a.UserID == UserID);
        if (users != null)
        {
            PanelVisible = true;
            var request = new UnsetLockedRequest
                {
                    LoginID = users.LoginID,
                    NewPassword = "1234",
                    Locked = users.Locked == true ? false : true,
                };
            var response = await Mediator.Send(request);
            if (users.Locked == true)
            {
                toastService.ShowToast("Account Un-Locked Successfully", AC.SD.Core.Services.ToastLevel.Success);
                await UpdateDataAsync();
            }
            else
            {
                toastService.ShowToast("Account Locked Successfully", AC.SD.Core.Services.ToastLevel.Success);
                await UpdateDataAsync();
            }
            
        }
    }
    private async void ResetPasswords(long? UserID)
    {

        var users = _employeeItems.FirstOrDefault(a => a.UserID == UserID);
        if (users != null)
        {
            var request = new ResetUserPasswordRequest
                {
                    LoginID = users.LoginID,
                    NewPassword = "1234",

                };
            var response = await Mediator.Send(request);
            PopupVisible = false;
            StateHasChanged();
            toastService.ShowToast("Resetpassword Successfully.", AC.SD.Core.Services.ToastLevel.Success);
            await UpdateDataAsync();
        }
    }

    private async void onShowPopupMessage(string headerText, string bodyText)
    {
        MessageVisible = true;
        MessageBody = bodyText;
        MessageHeader = headerText;
        StateHasChanged();
    }
    void Grid_CustomizeElement(GridCustomizeElementEventArgs e)
    {
        if (e.ElementType == GridElementType.DataRow && e.VisibleIndex % 2 == 1)
        {
            e.CssClass = "alt-item";
            e.CssClass += "non-selectable-row";
        }

    }
    void ShowPopup()
    {
        _selectedItems = _employeeItems.FirstOrDefault(a => a.UserID == _selectedItems.UserID);
        PopupVisible = true;
        InvokeAsync(StateHasChanged);
    }

    async void ClosePopup()
    {
        PopupVisible = false;
    }
    void OnRowClick(GridRowClickEventArgs e)
    {
        Unlock = "UnLock";
        faunlock = "fa fa-unlock"; StatusInActive = false; StatusActive = false;
        var UniqueId = e.Grid.GetRowValue(e.VisibleIndex, "UserID");
        _selectedItems = _employeeItems.FirstOrDefault(f => f.UserID == (long?)UniqueId);
        if (_selectedItems.UserStatus == 1)
        {
            StatusInActive = true;
            StatusActive = false;
        }
        else
        {
            StatusActive = true;
            StatusInActive = false;
        }
        if (_selectedItems.Locked == true)
        {
            Unlock = "UnLock";
            faunlock = "fa fa-unlock";
        }
        else
        {
            Unlock = "Lock";
            faunlock = "fa fa-lock";
        }
        StateHasChanged();
    }
    void EulaPopupClosed(PopupClosedEventArgs args)
    {
        PopupVisible = false;
        UpdateDataAsync();
    }

    private async void Active(long? UserID)
    {
        var users = _employeeItems.FirstOrDefault(a => a.UserID == UserID);
        if (users != null)
        {
            var request = new ActiveRequest
                {
                    LoginID = users.LoginID,

