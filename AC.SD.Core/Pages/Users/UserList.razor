@using Application.Queries;
@using MediatR
@using global::Core.Entities.Views;
@using global::Core.Entities;
@inject IMediator Mediator
@using DevExpress.Export
@using Application.Response;
@page "/Users"

<DxGrid @ref="Grid"
        Data="_employeeItems"
        KeyFieldName="UserID"
        EditModelSaving="Grid_EditModelSaving"
        DataItemDeleting="Grid_DataItemDeleting"
        ShowGroupPanel="true" ShowGroupedColumns="true" ShowSearchBox="true"
        PagerNavigationMode="PagerNavigationMode.InputBox"
        PageSizeSelectorVisible="true"
        PageSizeSelectorAllRowsItemVisible="true"
        PageSizeSelectorItems="@(new int[] { 5,10,20 })"
        PageSize="20"
        SelectionMode="GridSelectionMode.Multiple"
        SelectAllCheckboxMode="GridSelectAllCheckboxMode.AllPages"
        ValidationEnabled="true"
        AutoExpandAllGroupRows="true"
        CssClass="ch-360 grid-auto-height">
    <Columns>

        <DxGridDataColumn FieldName="SageID" MinWidth="80" />
        <DxGridDataColumn FieldName="FirstName"  />
        <DxGridDataColumn FieldName="LastName" />
        <DxGridDataColumn FieldName="NickName" MinWidth="80" />
        <DxGridDataColumn FieldName="StatusCode" MinWidth="80" />
        <DxGridDataColumn FieldName="ModifiedDate"  />
        <DxGridDataColumn FieldName="ModifiedByUser"  />
        <DxGridDataColumn FieldName="UserID" AllowSort="false" MinWidth="100" Caption="Action" TextAlignment="GridTextAlignment.Center">
            <CellDisplayTemplate><button class="btn btn-link grid-btn-link" style="color:black;" @onclick="() => UnSetLock((long)context.Value)">Un Lock</button></CellDisplayTemplate>
           
        </DxGridDataColumn>
        <DxGridDataColumn FieldName="UserID" AllowSort="false"  MinWidth="100" Caption="Action" TextAlignment="GridTextAlignment.Center">
            
            <CellDisplayTemplate><button class="btn btn-link grid-btn-link" style="color:black;" @onclick="() => ResetPasswords((long)context.Value)">Reset Password</button></CellDisplayTemplate>
        </DxGridDataColumn>
    </Columns>
    <TotalSummary>
        <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="SageID" />
    </TotalSummary>
</DxGrid>
<DxPopup @bind-Visible="@MessageVisible"
         HeaderText="@MessageHeader"
         BodyText="@MessageBody" />
@code {
    bool MessageVisible { get; set; }
    string MessageHeader = "";
    string MessageBody = "";
    private List<ViewEmployee> _employeeItems;
    IGrid Grid { get; set; }
    protected override async Task OnInitializedAsync()
    {
        _employeeItems = await Mediator.Send(new GetAllEmployeeListQuery());

    }
    async Task UpdateDataAsync()
    {
        _employeeItems = await Mediator.Send(new GetAllEmployeeQuery());
    }
    void Grid_CustomizeEditModel(GridCustomizeEditModelEventArgs e)
    {

    }
    async Task Grid_EditModelSaving(GridEditModelSavingEventArgs e)
    {


    }
    async Task Grid_DataItemDeleting(GridDataItemDeletingEventArgs e)
    {

    }
    async Task UpdatePlantAsync(ViewPlants editablePlant)
    {

    }
    private async void UnSetLock(long UserID)
    {
        var users = _employeeItems.FirstOrDefault(a => a.UserID == UserID);
        if(users!=null)
        {
            var request = new UnsetLockedRequest
                {
                    LoginID = users.LoginID,
                    NewPassword = "1234",
                };
            var response = await Mediator.Send(request);
            onShowPopupMessage("Message", "Account Un-Locked Successfully");
        }        
    }    
    private async void ResetPasswords(long UserID)
    {
        var users = _employeeItems.FirstOrDefault(a => a.UserID == UserID);
        if(users!=null)
        {
            var request = new ResetUserPasswordRequest
                {
                    LoginID = users.LoginID,
                    NewPassword = "1234",
                };
            var response = await Mediator.Send(request);
            onShowPopupMessage("Message", "Password Reset Successfully");
        }
    }
    private async void onShowPopupMessage(string headerText, string bodyText)
    {
        MessageVisible = true;
        MessageBody = bodyText;
        MessageHeader = headerText;
        StateHasChanged();
    }
}
