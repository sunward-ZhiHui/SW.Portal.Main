    </BodyContentTemplate>
    <FooterContentTemplate Context="Context">
        <DxButton style="margin-right: 10px;" RenderStyle="ButtonRenderStyle.Primary" Text="Yes" Click="@((e) => ResetPasswords(_selectedItems.UserID))" />
