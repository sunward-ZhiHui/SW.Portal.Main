            ExpandButtonIconCssClass="demo-icon-expand"
            CollapseButtonIconCssClass="demo-icon-collapse"
            AllowSelectNodes="true"
            SelectionChanged="@SelectionChanged">
    <DataMappings>
        <DxTreeViewDataMapping Text="Title"
                               Key="PermissionID"
                               ParentKey="ParentID" />
    </DataMappings>
</DxTreeView>


