<link href="~/css/login.css" rel="stylesheet" />
<div class="limiter">
    <div class="container-login display-center">
        <div class="wrap-login">
            <div class="top-login">
                <div class="top-left-login display-center">
                    <div class="login-pic">
                        <img src="~/images/SW-Left.png" alt="SW Portal" />
                    </div>
                </div>

                <div class="top-right-login">
                    <div class="q-pa-none width-form-login">
                        <div style="text-align: center; margin-bottom: 35px">
                            <img src="~/images/SW-Logo.png" width="120" alt="SW Portal" />
                        </div>

                        <div class="title-login">

                            <div style=" color: #075e54 !important;
                    caret-color: #075e54 !important;
                    font-size: 35px;
                    margin-bottom: 35px;
                    text-align: center;
                  ">
                                Welcome !
                            </div>
                        </div>
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <div class="col-sm-12" style="text-align:center;color:red;">
                                    @Context.Session.GetString("invalid")
                                    </div>
                            </div>
                            <div class="form-group">
                                <label>Username</label>
                                <div class="col-sm-12">
                                    @Html.TextBoxFor(m => m.UserName, new {@class = "form-control",id = "username",placeholder="Enter User Name" })
                                    @Html.ValidationMessageFor(c => c.UserName, "", new { @style="color:red;"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                @Html.TextBoxFor(m => m.Password, new {@class = "form-control",id = "pwd",type="password",placeholder="Enter Password" })
                                @Html.ValidationMessageFor(c => c.Password, "", new { @style="color:red;"})
                            </div>
                            <button class="btn btn-primary" style="float:right; margin-top:10px;">

                                Login
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>